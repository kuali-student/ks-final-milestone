<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-dbs</artifactId>
    <version>2.0.0-M7-SNAPSHOT</version>
  </parent>
  <artifactId>ks-impex</artifactId>
  <packaging>pom</packaging>
  <name>KS Impex</name>
  <description>Kuali Student Impex</description>
  <modules>
    <module>ks-impex-app-db</module>
    <module>ks-impex-rice-db</module>
    <module>ks-impex-bundled-db</module>
  </modules>
  <properties>
    <db.branch.qualifier>SANDBOX</db.branch.qualifier>
    <jdbc.source.db.base>KS_SOURCE_DB</jdbc.source.db.base>
    <oracle.source.dba.url>jdbc:oracle:thin:@oracle.ks.kuali.org:1521:ORACLE</oracle.source.dba.url>
    <jdbc.username>${jdbc.source.db.base}</jdbc.username>
    <jdbc.password>${jdbc.username}</jdbc.password>
    <impex.metainf.context>org.kuali.student.deploy.spring.DataMetaInfConfig</impex.metainf.context>
    <impex.data.resources>META-INF/${project.artifactId}-data.resources</impex.data.resources>
    <impex.metainf.outputFile>${project.build.outputDirectory}/${impex.data.resources}</impex.metainf.outputFile>
  </properties>
  <profiles>
    <profile>
      <!-- This profile builds the full KS database from the "system of record" set of Oracle sql files checked into SCM -->
      <id>source-db</id>
      <properties>
        <properties.decrypt>true</properties.decrypt>
        <spring.forceMojoExecution>true</spring.forceMojoExecution>
        <db.vendor>oracle</db.vendor>
        <jdbc.username>${jdbc.source.db.username}</jdbc.username>
        <oracle.dba.username>master</oracle.dba.username>
        <oracle.dba.password>ENC(eEFVZmL4+y/5KlzDMCt6dGlBKQzXevFp)</oracle.dba.password>
        <oracle.dba.url>${oracle.source.dba.url}</oracle.dba.url>
        <!-- KS Source db is pure SQL not .mpx -->
        <sql.data.concurrent.progress.label>SQL Count</sql.data.concurrent.progress.label>
        <sql.data.concurrent.progress.label.throughput>SQL/s</sql.data.concurrent.progress.label.throughput>
        <sql.data.concurrent.trackProgressByUpdateCount>false</sql.data.concurrent.trackProgressByUpdateCount>
        <!-- Schemas -->
        <db.rice.baseline.schema>rice-impex-server-bootstrap</db.rice.baseline.schema>
        <db.ks.core.schema>ks-core-sql</db.ks.core.schema>
        <db.ks.lum.schema>ks-lum-sql</db.ks.lum.schema>
        <db.ks.enroll.schema>ks-enroll-sql</db.ks.enroll.schema>
        <db.ks.rice.schema>ks-rice-sql</db.ks.rice.schema>
        <!-- SQL resource path fragments -->
        <sql.meta.base>classpath:META-INF/sql/oracle</sql.meta.base>
        <sql.suffix.schema>schema.resources</sql.suffix.schema>
        <sql.suffix.data>data.resources</sql.suffix.data>
        <sql.suffix.constraints>constraints.resources</sql.suffix.constraints>
        <sql.suffix.upgrades>upgrades.resources</sql.suffix.upgrades>
        <!-- SQL resources -->
        <sql.schema.1>classpath:sql/${db.vendor}/${db.rice.baseline.schema}.sql</sql.schema.1>
        <sql.schema.2>${sql.meta.base}/${db.ks.core.schema}-${sql.suffix.schema}</sql.schema.2>
        <sql.schema.3>${sql.meta.base}/${db.ks.lum.schema}-${sql.suffix.schema}</sql.schema.3>
        <sql.schema.4>${sql.meta.base}/${db.ks.enroll.schema}-${sql.suffix.schema}</sql.schema.4>
        <sql.schema.5>${sql.meta.base}/${db.ks.rice.schema}-${sql.suffix.schema}</sql.schema.5>
        <!-- The "ks-" prefix here should get removed after the next Rice upgrade since the Rice jar will contain the -data.resources file natively -->
        <!-- The dependency of the spring-maven-plugin to ks-deployment-resources should also then get removed -->
        <sql.data.1>${sql.meta.base}/ks-${db.rice.baseline.schema}-${sql.suffix.data}</sql.data.1>
        <sql.data.2>${sql.meta.base}/${db.ks.core.schema}-${sql.suffix.data}</sql.data.2>
        <sql.data.3>${sql.meta.base}/${db.ks.lum.schema}-${sql.suffix.data}</sql.data.3>
        <sql.data.4>${sql.meta.base}/${db.ks.enroll.schema}-${sql.suffix.data}</sql.data.4>
        <sql.data.5>${sql.meta.base}/${db.ks.rice.schema}-${sql.suffix.data}</sql.data.5>
        <sql.constraints.1>classpath:sql/${db.vendor}/${db.rice.baseline.schema}-constraints.sql</sql.constraints.1>
        <sql.constraints.2>${sql.meta.base}/${db.ks.core.schema}-${sql.suffix.constraints}</sql.constraints.2>
        <sql.constraints.3>${sql.meta.base}/${db.ks.lum.schema}-${sql.suffix.constraints}</sql.constraints.3>
        <sql.constraints.4>${sql.meta.base}/${db.ks.enroll.schema}-${sql.suffix.constraints}</sql.constraints.4>
        <sql.constraints.5>${sql.meta.base}/${db.ks.rice.schema}-${sql.suffix.constraints}</sql.constraints.5>
        <!-- Run upgrade scripts, after all baseline scripts have been applied -->
        <sql.other.1>${sql.meta.base}/${db.ks.core.schema}-${sql.suffix.upgrades}</sql.other.1>
        <sql.other.2>${sql.meta.base}/${db.ks.rice.schema}-${sql.suffix.upgrades}</sql.other.2>
        <sql.other.3>${sql.meta.base}/${db.ks.lum.schema}-${sql.suffix.upgrades}</sql.other.3>
        <sql.other.4>${sql.meta.base}/${db.ks.enroll.schema}-${sql.suffix.upgrades}</sql.other.4>
        <!-- Controller properties -->
        <sql.schema.concurrent>${sql.schema.1},${sql.schema.2},${sql.schema.3},${sql.schema.4},${sql.schema.5}</sql.schema.concurrent>
        <sql.data.concurrent>${sql.data.2},${sql.data.3},${sql.data.4}</sql.data.concurrent>
        <sql.data.sequential>${sql.data.1},${sql.data.5}</sql.data.sequential>
        <sql.constraints.concurrent>${sql.constraints.2},${sql.constraints.3},${sql.constraints.4}</sql.constraints.concurrent>
        <sql.constraints.sequential>${sql.constraints.1},${sql.constraints.5}</sql.constraints.sequential>
        <sql.other.sequential>${sql.other.1},${sql.other.2},${sql.other.3},${sql.other.4}</sql.other.sequential>
        <!-- Define execution order -->
        <sql.execution.order>sql.schema.concurrent,sql.data.concurrent,sql.data.sequential,sql.constraints.concurrent,sql.constraints.sequential,sql.other.sequential</sql.execution.order>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>spring-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>source-db-setup</id>
                <goals>
                  <goal>load</goal>
                </goals>
                <phase>validate</phase>
                <configuration>
                  <injectMavenProject>true</injectMavenProject>
                  <forceMojoExecution>true</forceMojoExecution>
                  <annotatedClass>org.kuali.common.maven.spring.SetSourceDbSchemaNameConfig</annotatedClass>
                </configuration>
              </execution>
              <execution>
                <id>source-db</id>
                <goals>
                  <goal>load</goal>
                </goals>
                <phase>initialize</phase>
                <configuration>
                  <propertySourcesConfig>org.kuali.common.jdbc.spring.JdbcMavenPropertySourceConfig</propertySourcesConfig>
                  <removeExistingPropertySources>true</removeExistingPropertySources>
                  <annotatedClasses>
                    <annotatedClass>org.kuali.common.jdbc.spring.SqlControllerConfig</annotatedClass>
                  </annotatedClasses>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <!-- Dump the db built from the Oracle SQL to disk -->
      <id>dump</id>
      <properties>
        <dump.rice.includes>KR.*</dump.rice.includes>
        <dump.ks.includes>KS.*</dump.ks.includes>
        <jdbc.url>${oracle.source.dba.url}</jdbc.url>
        <jdbc.dba.url>${jdbc.url}</jdbc.dba.url>
        <jdbc.username>${jdbc.source.db.username}</jdbc.username>
        <jdbc.dba.username>${jdbc.source.db.username}</jdbc.dba.username>

        <db.vendor>oracle</db.vendor>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>spring-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>source-db-setup</id>
                <phase>validate</phase>
                <goals>
                  <goal>load</goal>
                </goals>
                <configuration>
                  <injectMavenProject>true</injectMavenProject>
                  <forceMojoExecution>true</forceMojoExecution>
                  <annotatedClass>org.kuali.common.maven.spring.SetSourceDbSchemaNameConfig</annotatedClass>
                </configuration>
              </execution>
              <execution>
                <id>load</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>load</goal>
                </goals>
                <configuration>
                  <forceMojoExecution>true</forceMojoExecution>
                  <propertySourcesConfig>org.kuali.student.deploy.spring.ExportPropertyConfig</propertySourcesConfig>
                  <annotatedClass>org.kuali.student.deploy.spring.DbExportConfig</annotatedClass>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <!-- Load a db from the schema SQL + mpx files generated by Impex -->
      <id>db</id>
      <properties>
        <impex.import.artifactId>${project.artifactId}</impex.import.artifactId>
        <impex.import.schema>classpath:${project.groupId.path}/${project.artifactId}/${project.artifactId}-schema.xml</impex.import.schema>
        <impex.import.constraints>classpath:${project.groupId.path}/${project.artifactId}/${project.artifactId}-constraints-schema.xml</impex.import.constraints>
        <impex.import.data.list>${impex.data.resources}</impex.import.data.list>
        <impex.schema.location>${impex.import.schema}</impex.schema.location>
        <sql.schema.concurrent>impex.import.schema</sql.schema.concurrent>
        <sql.constraints.concurrent>impex.import.constraints</sql.constraints.concurrent>
        <sql.data.concurrent>impex.import.data.list</sql.data.concurrent>
        <sql.data.concurrent.trackProgressByUpdateCount>true</sql.data.concurrent.trackProgressByUpdateCount>
        <sql.execution.order>schema.concurrent,data.concurrent,constraints.concurrent</sql.execution.order>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>spring-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>load</id>
                <phase>initialize</phase>
                <goals>
                  <goal>load</goal>
                </goals>
                <configuration>
                  <forceMojoExecution>true</forceMojoExecution>
                  <propertySourcesConfig>org.kuali.common.jdbc.spring.JdbcMavenPropertySourceConfig</propertySourcesConfig>
                  <removeExistingPropertySources>true</removeExistingPropertySources>
                  <annotatedClasses>
                    <annotatedClass>org.kuali.common.impex.spring.MpxSupplierConfig</annotatedClass>
                    <annotatedClass>org.kuali.common.impex.spring.SchemaXmlSupplierConfig</annotatedClass>
                    <annotatedClass>org.kuali.common.jdbc.spring.SqlControllerConfig</annotatedClass>
                  </annotatedClasses>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <!-- Add in the module specific dependencies -->
              <dependency>
                <groupId>org.kuali.student.db</groupId>
                <artifactId>ks-impex-rice-db</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.student.db</groupId>
                <artifactId>ks-impex-app-db</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.student.db</groupId>
                <artifactId>ks-impex-bundled-db</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.common</groupId>
                <artifactId>kuali-impex-producer</artifactId>
                <version>${kuali-impex.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>local</id>
      <properties>
        <properties.decrypt>false</properties.decrypt>
        <oracle.dba.username>system</oracle.dba.username>
        <oracle.dba.password>manager</oracle.dba.password>
        <oracle.dba.url>jdbc:oracle:thin:@localhost:1521:XE</oracle.dba.url>
        <jdbc.url>${oracle.dba.url}</jdbc.url>
      </properties>
    </profile>
    <profile>
      <id>oracle</id>
      <properties>
        <db.vendor>oracle</db.vendor>
      </properties>
    </profile>
    <profile>
      <id>mysql</id>
      <properties>
        <db.vendor>mysql</db.vendor>
      </properties>
    </profile>
  </profiles>
</project>
