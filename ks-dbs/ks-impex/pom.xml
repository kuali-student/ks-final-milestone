<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kuali.student.db</groupId>
        <artifactId>ks-dbs</artifactId>
        <version>2.0.0-M7-SNAPSHOT</version>
    </parent>
    <artifactId>ks-impex</artifactId>
    <packaging>pom</packaging>
    <name>KS Impex</name>
    <description>Kuali Student Impex</description>
    <modules>
        <module>ks-impex-app-db</module>
        <module>ks-impex-rice-db</module>
        <module>ks-impex-bundled-db</module>
    </modules>
    <properties>
        <jdbc.source.db.username>KS_SOURCE_DB${db.branch.qualifier}</jdbc.source.db.username>
        <jdbc.password>${jdbc.username}</jdbc.password>
        <impex.metainf.context>org.kuali.common.impex.spring.MetaInfMpxConfig</impex.metainf.context>
        <impex.data.resources>META-INF/${project.artifactId}-data.resources</impex.data.resources>
        <impex.metainf.outputFile>${project.build.outputDirectory}/${impex.data.resources}</impex.metainf.outputFile>
        <properties.maven.exclude>kuali.scm.url</properties.maven.exclude>
    </properties>
    <profiles>
        <profile>
            <!-- This profile builds the full KS database from the "system of record" set of Oracle sql files checked into SCM -->
            <id>source-db</id>
            <properties>
                <properties.decrypt>true</properties.decrypt>
                <properties.enc.password>${kuali.enc.password}</properties.enc.password>
                <spring.forceMojoExecution>true</spring.forceMojoExecution>
                <db.vendor>oracle</db.vendor>
                <jdbc.username>${jdbc.source.db.username}</jdbc.username>
                <oracle.dba.username>master</oracle.dba.username>
                <oracle.dba.password>ENC(eEFVZmL4+y/5KlzDMCt6dGlBKQzXevFp)</oracle.dba.password>
                <oracle.dba.url>jdbc:oracle:thin:@oracle.ks.kuali.org:1521:ORACLE</oracle.dba.url>
                <!-- KS Source db is pure SQL not .mpx -->
                <sql.data.concurrent.progress.label>SQL Count</sql.data.concurrent.progress.label>
                <sql.data.concurrent.progress.label.throughput>SQL/s</sql.data.concurrent.progress.label.throughput>
                <sql.data.concurrent.trackProgressByUpdateCount>false</sql.data.concurrent.trackProgressByUpdateCount>
                <!-- Schemas -->
                <db.rice.baseline.schema>rice-impex-server-bootstrap</db.rice.baseline.schema>
                <db.ks.core.schema>ks-core-sql</db.ks.core.schema>
                <db.ks.lum.schema>ks-lum-sql</db.ks.lum.schema>
                <db.ks.enroll.schema>ks-enroll-sql</db.ks.enroll.schema>
                <db.ks.rice.schema>ks-rice-sql</db.ks.rice.schema>
                <!-- SQL resource path fragments -->
                <sql.meta.base>classpath:META-INF/sql/oracle</sql.meta.base>
                <sql.suffix.schema>schema.resources</sql.suffix.schema>
                <sql.suffix.data>data.resources</sql.suffix.data>
                <sql.suffix.constraints>constraints.resources</sql.suffix.constraints>
                <sql.suffix.upgrades>upgrades.resources</sql.suffix.upgrades>
                <!-- SQL resources -->
                <sql.schema.1>classpath:sql/${db.vendor}/${db.rice.baseline.schema}.sql</sql.schema.1>
                <sql.schema.2.list>${sql.meta.base}/${db.ks.core.schema}-${sql.suffix.schema}</sql.schema.2.list>
                <sql.schema.3.list>${sql.meta.base}/${db.ks.lum.schema}-${sql.suffix.schema}</sql.schema.3.list>
                <sql.schema.4.list>${sql.meta.base}/${db.ks.enroll.schema}-${sql.suffix.schema}</sql.schema.4.list>
                <sql.schema.5.list>${sql.meta.base}/${db.ks.rice.schema}-${sql.suffix.schema}</sql.schema.5.list>
                <!-- The "ks-" prefix here should get removed after the next Rice upgrade since the Rice jar will contain the -data.resources file natively -->
                <!-- The dependency of the spring-maven-plugin to ks-deployment-resources should also then get removed -->
                <sql.data.1.list>${sql.meta.base}/ks-${db.rice.baseline.schema}-${sql.suffix.data}</sql.data.1.list>
                <sql.data.2.list>${sql.meta.base}/${db.ks.core.schema}-${sql.suffix.data}</sql.data.2.list>
                <sql.data.3.list>${sql.meta.base}/${db.ks.lum.schema}-${sql.suffix.data}</sql.data.3.list>
                <sql.data.4.list>${sql.meta.base}/${db.ks.enroll.schema}-${sql.suffix.data}</sql.data.4.list>
                <sql.data.5.list>${sql.meta.base}/${db.ks.rice.schema}-${sql.suffix.data}</sql.data.5.list>
                <sql.constraints.1>classpath:sql/${db.vendor}/${db.rice.baseline.schema}-constraints.sql</sql.constraints.1>
                <sql.constraints.2.list>${sql.meta.base}/${db.ks.core.schema}-${sql.suffix.constraints}</sql.constraints.2.list>
                <sql.constraints.3.list>${sql.meta.base}/${db.ks.lum.schema}-${sql.suffix.constraints}</sql.constraints.3.list>
                <sql.constraints.4.list>${sql.meta.base}/${db.ks.enroll.schema}-${sql.suffix.constraints}</sql.constraints.4.list>
                <sql.constraints.5.list>${sql.meta.base}/${db.ks.rice.schema}-${sql.suffix.constraints}</sql.constraints.5.list>
                <!-- Run upgrade scripts, after all baseline scripts have been applied -->
                <sql.other.1.list>${sql.meta.base}/${db.ks.core.schema}-${sql.suffix.upgrades}</sql.other.1.list>
                <sql.other.2.list>${sql.meta.base}/${db.ks.rice.schema}-${sql.suffix.upgrades}</sql.other.2.list>
                <sql.other.3.list>${sql.meta.base}/${db.ks.lum.schema}-${sql.suffix.upgrades}</sql.other.3.list>
                <sql.other.4.list>${sql.meta.base}/${db.ks.enroll.schema}-${sql.suffix.upgrades}</sql.other.4.list>
                <!-- Controller properties -->
                <sql.schema.concurrent>sql.schema.1,sql.schema.2.list,sql.schema.3.list,sql.schema.4.list,sql.schema.5.list</sql.schema.concurrent>
                <sql.data.concurrent>sql.data.2.list,sql.data.3.list,sql.data.4.list</sql.data.concurrent>
                <sql.data.sequential>sql.data.1.list,sql.data.5.list</sql.data.sequential>
                <sql.constraints.concurrent>sql.constraints.2.list,sql.constraints.3.list,sql.constraints.4.list</sql.constraints.concurrent>
                <sql.constraints.sequential>sql.constraints.1,sql.constraints.5.list</sql.constraints.sequential>
                <sql.other.sequential>sql.other.1.list,sql.other.2.list,sql.other.3.list,sql.other.4.list</sql.other.sequential>
                <!-- Define execution order -->
                <sql.execution.order>schema.concurrent,data.concurrent,data.sequential,constraints.concurrent,constraints.sequential,other.sequential</sql.execution.order>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.kuali.maven.plugins</groupId>
                        <artifactId>spring-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>source-db</id>
                                <goals>
                                    <goal>load</goal>
                                </goals>
                                <phase>initialize</phase>
                                <configuration>
                                    <propertySourcesConfig>org.kuali.common.jdbc.spring.JdbcMavenPropertySourceConfig</propertySourcesConfig>
                                    <removeExistingPropertySources>true</removeExistingPropertySources>
                                    <annotatedClasses>
                                    <annotatedClass>org.kuali.common.jdbc.spring.SqlControllerConfig</annotatedClass>
                                    </annotatedClasses>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- Dump the db built from the Oracle SQL to disk -->
            <id>dump</id>
            <properties>
                <impex.rice.includes>KR.*</impex.rice.includes>
                <impex.ks.includes>KS.*</impex.ks.includes>
                <impex.includes>${impex.rice.includes},${impex.ks.includes}</impex.includes>
                <impex.source.artifactId>ks-source-db</impex.source.artifactId>
                <impex.url>jdbc:oracle:thin:@oracle.ks.kuali.org:1521:ORACLE</impex.url>
                <impex.driver>oracle.jdbc.driver.OracleDriver</impex.driver>
                <impex.username>KS_SOURCE_DB${db.branch.qualifier}</impex.username>
                <impex.password>${impex.username}</impex.password>
                <impex.schema>${impex.username}</impex.schema>
                <impex.databaseVendor>oracle</impex.databaseVendor>
                <impex.databaseTablePropertiesFile>${project.basedir}/../../ks-deployment-resources/src/main/resources/org/kuali/student/impex/ks-source-db.properties</impex.databaseTablePropertiesFile>
                <impex.table.includes>${impex.includes}</impex.table.includes>
                <impex.view.includes>${impex.includes}</impex.view.includes>
                <impex.sequence.includes>${impex.includes}</impex.sequence.includes>
                <impex.workingDir>${project.build.directory}/impex</impex.workingDir>
                <impex.antCompatibilityMode>false</impex.antCompatibilityMode>
                <impex.storeDatabaseTableProperties>true</impex.storeDatabaseTableProperties>
                <impex.scm.message>Automated Impex update</impex.scm.message>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.kuali.maven.plugins</groupId>
                        <artifactId>spring-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>load</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>load</goal>
                                </goals>
                                <configuration>
                                    <forceMojoExecution>true</forceMojoExecution>
                                    <annotatedClass>org.kuali.student.deploy.spring.DumpConfig</annotatedClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <!-- Load a db from the schema SQL + mpx files generated by Impex -->
            <id>db</id>
            <properties>
                <impex.import.artifactId>${project.artifactId}</impex.import.artifactId>
                <impex.import.schema>classpath:${db.vendor}/${project.artifactId}.sql</impex.import.schema>
                <impex.import.constraints>classpath:${db.vendor}/${project.artifactId}-constraints.sql</impex.import.constraints>
                <impex.import.data.list>${impex.data.resources}</impex.import.data.list>
                <impex.schema.location>classpath:${project.artifactId}.xml</impex.schema.location>
                <sql.schema.concurrent>impex.import.schema</sql.schema.concurrent>
                <sql.constraints.concurrent>impex.import.constraints</sql.constraints.concurrent>
                <sql.data.concurrent>impex.import.data.list</sql.data.concurrent>
                <sql.data.concurrent.trackProgressByUpdateCount>true</sql.data.concurrent.trackProgressByUpdateCount>
                <sql.execution.order>schema.concurrent,data.concurrent,constraints.concurrent</sql.execution.order>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.kuali.maven.plugins</groupId>
                        <artifactId>spring-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>load</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>load</goal>
                                </goals>
                                <configuration>
                                    <forceMojoExecution>true</forceMojoExecution>
                                    <propertySourcesConfig>org.kuali.student.deploy.spring.ImportMavenPropertySourceConfig</propertySourcesConfig>
                                    <removeExistingPropertySources>true</removeExistingPropertySources>
                                    <annotatedClasses>
                                    <annotatedClass>org.kuali.common.impex.spring.MpxSupplierConfig</annotatedClass>
                                    <annotatedClass>org.kuali.common.jdbc.spring.SqlControllerConfig</annotatedClass>
                                    </annotatedClasses>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <!-- Add in the module specific dependencies -->
                            <dependency>
                                <groupId>org.kuali.student.db</groupId>
                                <artifactId>ks-impex-rice-db</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.kuali.student.db</groupId>
                                <artifactId>ks-impex-app-db</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.kuali.student.db</groupId>
                                <artifactId>ks-impex-bundled-db</artifactId>
                                <version>${project.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>oracle</id>
            <properties>
                <db.vendor>oracle</db.vendor>
            </properties>
        </profile>
        <profile>
            <id>mysql</id>
            <properties>
                <db.vendor>mysql</db.vendor>
            </properties>
        </profile>
    </profiles>
</project>
