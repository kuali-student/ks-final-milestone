        <property name="scheduleDao" ref="scheduleDao"/>
        <property name="criteriaLookupService" ref="criteriaLookupService" />
    </bean>

    <bean id="scheduleDao" class="org.kuali.student.r2.core.scheduling.dao.ScheduleDao">
