<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.google.code.maven-svn-revision-number-plugin.it</groupId>
    <artifactId>properties-status</artifactId>
    <version>@pom.version@</version>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>com.google.code.maven-svn-revision-number-plugin</groupId>
                <artifactId>maven-svn-revision-number-plugin</artifactId>
                <version>@pom.version@</version>
                <executions>
                    <execution>
                        <configuration>
                            <entries>
                                <entry>
                                    <path>src/test/resources/normal/normal.txt</path>
                                    <prefix>normal</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/normal</path>
                                    <prefix>normalParent</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources/added/added.txt</path>
                                    <prefix>added</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/added</path>
                                    <prefix>addedParent</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources/deleted/deleted.txt</path>
                                    <prefix>deleted</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/deleted</path>
                                    <prefix>deletedParent</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources/ignored/ignored.txt</path>
                                    <prefix>ignored</prefix>
                                    <reportIgnored>true</reportIgnored>
                                </entry>
                                <entry>
                                    <path>src/test/resources/ignored</path>
                                    <prefix>ignoredParent</prefix>
                                    <reportIgnored>true</reportIgnored>
                                </entry>

                                <entry>
                                    <path>src/test/resources/missing/missing.txt</path>
                                    <prefix>missing</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/missing</path>
                                    <prefix>missingParent</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources/modified/modifiedContent.txt</path>
                                    <prefix>modifiedContent</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/modified/modifiedProperties.txt</path>
                                    <prefix>modifiedProperties</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/modified</path>
                                    <prefix>modifiedParent</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources/obstructed/obstructed.txt</path>
                                    <prefix>obstructedFile</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/obstructed/obstructed</path>
                                    <prefix>obstructedDirectory</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/obstructed</path>
                                    <prefix>obstructedParent</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources/replaced/replaced.txt</path>
                                    <prefix>replaced</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/replaced</path>
                                    <prefix>replacedParent</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources/unversioned/unversioned.txt</path>
                                    <prefix>unversionedFile</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/unversioned/unversioned</path>
                                    <prefix>unversionedDirectory</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/unversioned</path>
                                    <prefix>unversionedParent</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources/notWC/notWC.txt</path>
                                    <prefix>notWCFile</prefix>
                                </entry>
                                <entry>
                                    <path>src/test/resources/notWC/notWC</path>
                                    <prefix>notWCDirectory</prefix>
                                </entry>

                                <entry>
                                    <path>src/test/resources</path>
                                    <prefix>all</prefix>
                                </entry>
                            </entries>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
