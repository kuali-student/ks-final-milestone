<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kuali.student.api</groupId>
        <artifactId>ks-api</artifactId>
        <version>2.0.0-services-M8-SNAPSHOT</version>
    </parent>
    <artifactId>ks-enroll-api</artifactId>
    <name>KS Enroll API</name>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ks-core-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ks-lum-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ks-common-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kuali.rice</groupId>
            <artifactId>rice-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.kuali.rice</groupId>
            <artifactId>rice-krad-web-framework</artifactId>
        </dependency>
        <dependency>
            <groupId>org.kuali.rice</groupId>
            <artifactId>rice-krms-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context-support</artifactId>
        </dependency>
        <dependency>
            <groupId>org.kuali.rice</groupId>
            <artifactId>rice-core-api</artifactId>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
            </resource>
            <resource>
                <directory>${project.build.directory}/generated-sources/datadictionary</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>src-dependencies</id>
                        <phase>${ks.prepare-contract-dependencies.phase}</phase>
                        <goals>
                            <!-- use copy-dependencies instead if you don't want to explode the sources -->
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <classifier>sources</classifier>
                            <includeGroupIds>org.kuali</includeGroupIds>
                            <failOnMissingClassifierArtifact>false</failOnMissingClassifierArtifact>
                            <outputDirectory>${project.build.directory}/dependency-sources</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.kuali.maven.plugins</groupId>
                <artifactId>maven-kscontractdoc-plugin</artifactId>
                <version>${ks-contract-docs.plugin.version}</version>
                <!-- For instructions see https://wiki.kuali.org/display/STUDENT/Using+the+Contract+Doc+Maven+Plugin  -->
                <executions>
                    <!-- This generates the standard contract docs on the site-->
                    <execution>
                        <id>generate-contract-documentation</id>
                        <phase>${ks.contractdoc.phase}</phase>
                        <goals>
                            <goal>kscontractdoc</goal>
                        </goals>
                        <configuration>
                            <!-- generate on all kuali dependencies -->
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.build.directory}/dependency-sources</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <!-- This generates the the dictionary documentation docs on the site-->
                    <execution>
                        <id>generate-dictionary-documentation</id>
                        <phase>${ks.dictionarydoc.phase}</phase>
                        <goals>
                            <goal>ksdictionarydoc</goal>
                        </goals>
                        <configuration>
                            <!-- generate only on the kuali student api -->
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <!-- This generates the the ks-xxxx-generated.xml files in target/classes -->
                    <execution>
                        <id>generate-dictionary-files</id>
                        <phase>${ks.dictionarycreate.phase}</phase>
                        <goals>
                            <goal>ksdictionarycreator</goal>
                        </goals>
                        <configuration>
                            <writeManual>true</writeManual>
                            <!-- generate only on the kuali student api -->
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <!-- This generates the mock-implementation java code-->
                    <execution>
                        <id>generate-mock-implementations</id>
                        <phase>${ks.mockimpl.phase}</phase>
                        <goals>
                            <goal>kscreatemock</goal>
                        </goals>
                        <configuration>
                            <!-- generate only on the kuali student api -->
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <!-- generate only on the kuali student api -->
                    <execution>
                        <id>generate-validation-decorators</id>
                        <phase>${ks.vdecorator.phase}</phase>
                        <goals>
                            <goal>kscreatevdec</goal>
                        </goals>
                        <configuration>
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.kuali.rice</groupId>
                        <artifactId>rice-impl</artifactId>
                        <version>${kuali.rice.version}</version>
                        <exclusions>
                            <exclusion>
                                <groupId>org.springframework.security</groupId>
                                <artifactId>spring-security-cas-client</artifactId>
                            </exclusion>
                            <exclusion>
                                <groupId>javax.servlet</groupId>
                                <artifactId>servlet-api</artifactId>
                            </exclusion>
                            <exclusion>
                                <groupId>javax.servlet.jsp</groupId>
                                <artifactId>jsp-api</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-java2ws-plugin</artifactId>
                <executions>
                    <execution>
                        <id>academicRecord-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.academicrecord.service.AcademicRecordService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>bundledOffering-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.bundledoffering.service.BundledOfferingService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>courseOffering-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.courseoffering.service.CourseOfferingService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>courseOfferingSet-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.courseofferingset.service.CourseOfferingSetService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>courseRegistration-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.courseregistration.service.CourseRegistrationService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>courseWaitList-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.coursewaitlist.service.CourseWaitListService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>dataDictionary-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.r2.common.datadictionary.service.DataDictionaryService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>examoffering-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.examoffering.service.ExamOfferingService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>grading-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.grading.service.GradingService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>lrr-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.lrr.service.LearningResultRecordService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>lpr-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.lpr.service.LprService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>lui-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.enrollment.lui.service.LuiService</className>
                            <genWsdl>true</genWsdl>
                            <verbose>true</verbose>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
