<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>ks-with-rice-embedded</artifactId>
    <packaging>war</packaging>
    <name>KS with Rice Embedded</name>
    <description>KS with Embedded Rice components accessing remote Rice Server.</description>
    <parent>
        <groupId>org.kuali.student.web</groupId>
        <artifactId>ks-web</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <properties>
        <ks.gwt.module.org>org.kuali.student.core.organization.ui.OrgEntry</ks.gwt.module.org>
        <ks.gwt.module.lum>org.kuali.student.lum.lu.ui.main.LUMMain</ks.gwt.module.lum>
    </properties>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>META-INF/build-details.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>META-INF/build-details.xml</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <!--
                   Use KS version of codehaus gwt plugin, until compilation required
                   patch accepted
               -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <phase>${ks.gwt.compile.phase}</phase>
                    </execution>
                </executions>
                <configuration>
                    <modules>
                        <!--<module>${ks.gwt.module.org}</module>-->
                        <module>${ks.gwt.module.lum}</module>
                    </modules>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>tomcat-maven-plugin</artifactId>
                <configuration>
                    <path>/ks-with-rice-embedded-dev</path>
                    <port>8080</port>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.oracle</groupId>
                        <artifactId>${oracle.ojdbc.artifact}</artifactId>
                        <version>${oracle.ojdbc.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.apache.derby</groupId>
                        <artifactId>derby</artifactId>
                        <version>${derby.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <dependentWarIncludes>krad/**,WEB-INF/krad-base-servlet.xml</dependentWarIncludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
