    <bean id="KSTheme" abstract="true" parent="KSTheme-parentBean"/>
    <bean id="KSTheme-parentBean" parent="Uif-KradTheme">
        <property name="cssFiles">
            <list merge="true">
                <value>ks-enroll/css/enroll.css</value>
                <value>ks-enroll/css/ks-jquery.css</value>
                <value>ks-enroll/css/link-tabs.css</value>
            </list>
        </property>
        <property name="scriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/enroll.js</value>
                <value>krad/scripts/ks.krad.widget.js</value>
            </list>
        </property>
    </bean>

    <bean id="KS-Uif-FormView" abstract="true" parent="Uif-FormView">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
    </bean>

    <bean id="KS-Uif-InquiryView" abstract="true" parent="Uif-InquiryView">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
        <!--TODO: check with UX, do we need to set page.header as for KS-Uif-HeaderOne-Empty by default? -->
        <!--<property name="page.header">-->
            <!--<ref bean="KS-Uif-HeaderOne-Empty" />-->
        <!--</property>-->
    </bean>

    <bean id="KS-Uif-HeaderOne-Empty" parent="Uif-HeaderOne">
        <property name="items">
            <list/>
        </property>
    </bean>

    <bean id="KS-Uif-MaintenanceView" abstract="true" parent="Uif-MaintenanceView">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
        <property name="header.rightGroup.items">
            <!-- In KS, document overview section not needed(document status, create time, doc number etc)-->
            <list/>
        </property>
        <property name="page.header.lowerGroup.items">
            <!-- In KS, expandall/collapseall not needed-->
            <list/>
        </property>
        <property name="page.items">
            <!-- In KS, we do not display the notes,route and doc overview section -->
            <list/>
        </property>
    </bean>

    <bean id="KSUifFormView" parent="KSUifFormView-parentBean"/>
    <bean id="KSUifFormView-parentBean" class="org.kuali.student.enrollment.uif.view.KSUifFormView" parent="Uif-FormView" abstract="true">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
    </bean>

    <bean id="KSLookupView" abstract="true" parent="Uif-KSLookupView-parentBean"/>

    <bean id="Uif-KSLookupView-parentBean" abstract="true"
          class="org.kuali.student.enrollment.uif.view.KSLookupView" parent="Uif-LookupView">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
    </bean>

    <!-- try to override the default Uif-LookupView-ResultActions which contains edit, copy and delete.
         Here we only need edit -->
    <bean id="KS-LookupView-ResultActions" parent="Uif-LinkGroup">
        <property name="cssClasses">
            <list merge="true">
                <value>uif-lookupView-resultActions</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:order="10">
                    <property name="linkText" value="edit"/>
                    <property name="finalizeMethodToCall" value="getMaintenanceActionLink"/>
                    <property name="finalizeMethodAdditionalArguments">
                        <list>
                            <value>maintenanceEdit</value>
                        </list>
                    </property>
                    <property name="render" value="@{#ViewHelper.allowsMaintenanceEditAction(#line)}"/>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="KSUifMaintenanceView" abstract="true" parent="KSUifMaintenanceView-parentBean"/>
    <bean id="KSUifMaintenanceView-parentBean" class="org.kuali.student.enrollment.uif.view.KSUifMaintenanceView" parent="Uif-MaintenanceView" abstract="true">
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
        <property name="header.rightGroup.items">      <!-- In KS, document overview section not needed(document status, create time, doc number etc)-->
            <list/>
        </property>
        <property name="page.header.lowerGroup.items">   <!-- Also, expandall/collapseall not needed-->
            <list/>
        </property>
        <property name="page.items">  <!-- In KS, we are not displaying the notes,route and doc overview section -->
            <list></list>
        </property>
    </bean>

    <!--Added by Bonnie-->
    <!--This footer can be used for maintenance views: create a new or edit when we only want to see submit and cancel buttons -->
    <bean id="KSDocumentPageFooter_SubmitCancel" parent="KSDocumentPageFooter_SubmitCancel-parent"/>
    <bean id="KSDocumentPageFooter_SubmitCancel-parent" parent="Uif-DocumentPageFooter" abstract="true">
        <property name="items">
            <list>
                <bean parent="Uif-PrimaryActionButton" p:ajaxSubmit="false" p:methodToCall="route" p:actionLabel="submit" p:performClientSideValidation="true"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"/>
                <bean parent="Uif-ActionLink" p:ajaxSubmit="false" p:methodToCall="cancel" p:actionLabel="cancel"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CANCEL]}"/>
            </list>
        </property>
    </bean>

    <bean id="KSGroup" abstract="true" parent="Uif-VerticalBoxSection">
        <property name="disclosure">
            <bean parent="KSDisclosure"/>
        </property>
    </bean>


    <bean id="KSDisclosure" abstract="true" parent="Uif-Disclosure-parentBean">
        <property name="collapseImageSrc" value="@{#ConfigProperties['krad.externalizable.images.url']}h3_collapse-back-ks.png"/>
        <property name="expandImageSrc" value="@{#ConfigProperties['krad.externalizable.images.url']}h3_expand-back-ks.png"/>
    </bean>


    <bean id="ActionField_SmallSecondary_Override" parent="ActionField_SmallSecondary_Override-parentBean"/>
    <bean id="ActionField_SmallSecondary_Override-parentBean" abstract="true"
          class="org.kuali.student.enrollment.uif.field.ActionFieldJsOverride">
        <property name="template" value="/krad/WEB-INF/jsp/templates/field/actionField.jsp"/>
        <property name="cssClasses" value="ui-priority-secondary-sm"/>
    </bean>

    <bean id="KSInputField" abstract="true" parent="Uif-InputField"
          p:fieldLabel.renderColon="false" p:fieldLabel.cssClasses="labelTop"
          p:labelPlacement="TOP" p:fieldLabel.requiredMessagePlacement="LEFT"
          p:instructionalMessage.render="false" >
        <property name="instructionalMessage">
            <bean parent="Uif-InstructionalMessage"/>
        </property>
    </bean>

    <bean id="KS-Link" parent="Uif-Link">
        <property name="lightBox">
            <bean parent="Uif-LightBox"/>
        </property>
        <property name="target" value="_blank"/>
    </bean>

    <bean id="KS-Edit-Link" parent="KS-Link" p:order="10">
        <property name="linkText" value="Edit"/>
        <property name="finalizeMethodToCall" value="getMaintenanceActionLink"/>
        <property name="finalizeMethodAdditionalArguments">
            <list>
                <value>maintenanceEdit</value>
            </list>
        </property>
        <property name="render" value="@{#ViewHelper.allowsMaintenanceEditAction(#line)}"/>
    </bean>

    <bean id="KS-HorizontalCollectionSection" parent="KS-HorizontalCollectionSection-parent"/>
    <bean id="KS-HorizontalCollectionSection-parent" parent="Uif-StackedCollectionSection">
        <property name="layoutManager">
            <bean parent="Uif-StackedCollectionLayout-WithBoxItems">
                <property name="subCollectionFieldGroupPrototype">
                    <bean parent="Uif-HorizontalFieldGroup"/>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
                <!-- IMPORTANT NOTE:
                     Rice 2.2.0-M1 has a bug such that StackedCollectionLayout-WithBoxItems does not
                     assign the correct horizontal class to each item, so the items will incorrectly
                     stack vertically.  To fix this, put the items in a HorizontalFieldGroup element:
                <bean parent="Uif-HorizontalFieldGroup" p:fieldLabel.render="false">
                    <property name="items">
                        <list>
                            { actual list of items }
                        </list>
                    </property>
                </bean>
                -->
            </list>
        </property>
    </bean>

    <bean id="KS-Disclosure-HorizontalCollectionSection" parent="KS-Disclosure-HorizontalCollectionSection-parent"/>
    <bean id="KS-Disclosure-HorizontalCollectionSection-parent" parent="KS-HorizontalCollectionSection">
        <property name="disclosure.render" value="true"/>
    </bean>

    <bean id="KS-HorizontalCollectionSubSection" parent="KS-HorizontalCollectionSubSection-parent"/>
    <bean id="KS-HorizontalCollectionSubSection-parent" parent="Uif-StackedCollectionSubSection">
        <property name="layoutManager">
            <bean parent="Uif-StackedCollectionLayout-WithBoxItems">
                <property name="subCollectionFieldGroupPrototype">
                    <bean parent="Uif-HorizontalFieldGroup"/>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
                <!-- IMPORTANT NOTE: See note in KS-HorizontalCollectionSection -->
            </list>
        </property>
    </bean>

    <bean id="KS-Disclosure-HorizontalCollectionSubSection" parent="KS-Disclosure-HorizontalCollectionSubSection-parent"/>
    <bean id="KS-Disclosure-HorizontalCollectionSubSection-parent" parent="KS-HorizontalCollectionSubSection">
        <property name="disclosure.render" value="true"/>
    </bean>

    <bean id="KS-Link-Uif-TabSection" parent="Uif-TabGroup">
        <property name="cssClasses">
            <list merge="true">
                <value>ks-uif-tabSection</value>
            </list>
        </property>
    </bean>

    <bean id="KS-SimpleDataField" parent="KS-SimpleDataField-parentBean"/>
    <bean id="KS-SimpleDataField-parentBean" abstract="true" parent="Uif-DataField" scope="prototype">
        <property name="template" value="/ks-enroll/ftl/ksSimpleDataField.ftl"/>
        <property name="templateName" value="ks_SimpleDataField"/>
        <property name="inquiry">
            <null/>
        </property>
        <property name="help">
            <null/>
        </property>
    </bean>

    <bean id="KS-SimpleInputField" parent="KS-SimpleInputField-parentBean"/>
    <bean id="KS-SimpleInputField-parentBean" abstract="true" parent="KS-SimpleDataField" scope="prototype" class="org.kuali.rice.krad.uif.field.InputField">
        <property name="quickfinder">
            <null/>
        </property>
        <property name="validationMessages">
            <null/>
        </property>
        <property name="constraintMessage">
            <null/>
        </property>
        <property name="instructionalMessage">
            <null/>
        </property>
    </bean>

