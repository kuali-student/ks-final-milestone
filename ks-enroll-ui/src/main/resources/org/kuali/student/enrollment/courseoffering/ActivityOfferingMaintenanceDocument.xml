    <bean id="OfferingInstructorWrapper" parent="OfferingInstructorWrapper-parentBean"/>

    <bean id="OfferingInstructorWrapper-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="name" value="offeringInstructorWrapper"/>
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.OfferingInstructorWrapper"/>
        <property name="objectLabel" value="OfferingInstructor Wrapper"/>
        <property name="titleAttribute" value="offeringInstructorInfo.personId"/>
        <property name="primaryKeys">
            <list>
                <value>offeringInstructorInfo.personId</value>
            </list>
        </property>
    </bean>

    <bean id="ActivityOfferingWrapper" parent="ActivityOfferingWrapper-parentBean"/>

    <bean id="ActivityOfferingWrapper-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper"/>
        <property name="titleAttribute" value="aoInfo.id"/>
        <property name="attributes">
            <list>
            </list>
        </property>
        <property name="objectLabel" value="Activity Offering"/>
        <property name="primaryKeys">
            <list>
                <value>aoInfo.id</value>
            </list>
        </property>
    </bean>

    <bean id="ActivityOffering-MaintenanceView" parent="KS-CourseOffering-MaintenanceViewWithTermContextBarPlaceholder"
          p:readOnly="@{document.newMaintainableObject.dataObject.readOnlyView or !#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}">

        <property name="authorizer">
            <bean class="org.kuali.student.enrollment.main.view.KsMaintenanceViewAuthorizerBase"/>
        </property>

        <!-- Statically set the title and then dynamically replace the View-title using JS-onDocumentReadyScript so the browser's title remains unchanged.
             ie: from "Edit Activity Offering" to "ENGL250 - Lecture A"
             The reason for this is that the specs state the view-title should reflect the CO and AO codes but the AFT code for this is checking that the title displayed in the
             browser's title-bar (or tab) says "Kuali :: Edit Activity Offering"... so here we set the View-title initially to 'Edit Activity Offering' (which as a side-effect
             sets the browser's title-bar) and then dynamically update the View-title to reflect the CO/AO codes.
             This is a work-around, maybe it will be fixed by KRAD 2.3-m3 -->
        <property name="headerText" value="Edit Activity Offering" />
        <property name="page.headerText" value="Edit Activity Offering"/>
        <property name="onDocumentReadyScript" value="updateViewHeaderText( '@{document.newMaintainableObject.dataObject.courseOfferingCode} - @{document.newMaintainableObject.dataObject.typeName} @{document.newMaintainableObject.dataObject.activityCode}' );" />

        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingMaintainableImpl" />
        <property name="onLoadScript" value="activityEditDocumentOnLoad();"/>

        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-Enrollment"/>
                <ref bean="KS-HomewardPathBreadcrumbs-ManageCo-Landing"/>
                <ref bean="KS-HomewardPathBreadcrumbs-EditAo-Search-Subject"/>
                <ref bean="KS-HomewardPathBreadcrumbs-EditAo-TheCO-Page"/>
            </list>
        </property>

        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-EditAo-Page"/>
            </list>
        </property>

        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-enroll/css/activityOffering.css</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/activity-offering.js</value>
            </list>
        </property>
        <property name="page.id" value="ActivityOfferingEditPage"/>

        <!-- Buttons (cancel link, and controls related to the buttons) have to go in the view footer.
             This overrides the default maintenance doc buttons. -->
        <property name="footer">
            <bean parent="KS-Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-VerticalBoxGroup">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-InputField-LabelRight" p:cssClasses="unprocessed_changes_checkbox" p:render="@{#dp.schedulingCompleted}" p:label="Send revised delivery logistics to the scheduler for processing upon save." p:propertyName="sendRDLsToSchedulerAfterMSE">
                                        <property name="control">
                                            <bean parent="Uif-CheckboxControl"/>
                                        </property>
                                    </bean>
                                    <ref bean="ActivityOfferingEdit_SubmitCancel"/>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
         <!-- Make the page footer null. -->
        <property name="page.footer.items">
            <list />
        </property>

        <property name="cssClasses">
            <list merge="true">
                <value>aoc_page</value>
            </list>
        </property>
        <property name="page.items">
            <list>
                <ref bean="KS-CourseOffering-ContextBar" />

                <bean parent="Uif-MessageField" p:messageText="Crosslisted as: @{#dp.crossListedCourseCodes}" p:render="@{#dp.crossListedCourseCodes != ''}" p:style="font-weight:bold; margin-bottom:8px;"/>

                <ref bean="ActivityOfferingEdit-section1"/>
                <ref bean="ActivityOfferingEdit-section2"/>
                <ref bean="ActivityOfferingEdit-CoLocation"/>

                <ref bean="ActivityOffering-DeliveryLogistic-Actuals"/>
                <ref bean="ActivityOffering-DeliveryLogistic-New"/>
                <ref bean="ActivityOffering-DeliveryLogistic-Requested"/>

                <ref bean="ActivityOfferingEdit-PersonnelSection"/>
                <ref bean="ActivityOfferingEdit-SeatPool"/>
                <ref bean="ActivityOfferingEdit-Miscellaneous"/>

                <!-- This is needed for autosuggest-->
                <bean parent="Uif-InputField" p:propertyName="termId" p:hidden="true"/>
                <ref bean="ActivityOfferingEdit-NavigationConfirmation"/>
                <ref bean="ActivityOfferingEdit-BreakColocateConfirmation"/>
            </list>
        </property>
        <property name="dialogs">
          <list>
            <!--<ref bean="deleteScheduleConfirmDialog"/>-->
              <!--<bean id="colocateDialog" parent="Colocate-DialogGroup"/>-->
          </list>
        </property>
        <property name="header.cssClasses">
            <list merge="true">
                <value>ks-unified-header</value>
            </list>
        </property>
        <property name="viewHelperService.helperClasses">
              <map>
                <entry key="scheduleHelper">
                  <value  type="java.lang.Class">org.kuali.student.enrollment.class2.courseoffering.helper.ActivityOfferingScheduleHelperImpl</value>
                  </entry>
            </map>
        </property>
        <property name="header.rightGroup">
            <ref bean="ActivityOfferingEdit-Header-Right-Group"/>
        </property>
    </bean>

    <bean id="ActivityOfferingEdit-Header-Right-Group" parent="KS-Unified-Header-Right-Group">
        <property name="items">
            <list>
                <ref bean="ActivityOfferingEdit-Header-Right-SubGroup"/>
                <!--<ref bean="KS-Unified-Right-Header-Group-Status"/>-->
            </list>
        </property>
    </bean>

    <bean id="ActivityOfferingEdit-Header-Right-SubGroup" parent="KS-Unified-Header-Action-Group" p:render="@{#dp.editRenderHelper.aoCodes.size() > 1}">
        <property name="items">
            <list>
                <bean id="edit_ao_prev" parent="Uif-ActionLink" p:render="@{#dp.editRenderHelper.prevAO.id != null}" p:actionScript="handleAONavigation(this,&quot;@{#dp.editRenderHelper.prevAO.id}&quot;);" p:actionImagePlacement="LEFT" p:actionLabel="@{#dp.editRenderHelper.prevAOTypeName} @{#dp.editRenderHelper.prevAO.activityCode}" p:methodToCall="route">
                    <property name="actionParameters">
                      <map>
                        <entry key="aoId" value="@{#dp.editRenderHelper.prevAO.id}"/>
                      </map>
                    </property>
                    <property name="actionImage">
                      <bean parent="Uif-Image" p:altText=""
                            p:source="@{#ConfigProperties['ks.externalizable.images.url']}/icon-arrow-left.png"/>
                    </property>
                </bean>
                <bean id="edit_ao_select" parent="Uif-InputField" p:propertyName="editRenderHelper.selectedAO" >
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:onChangeScript="handleAOSelection(this);"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.ActivityOfferingCodesKeyValues" p:addBlankOption="false"/>
                    </property>
                </bean>
                <bean id="edit_ao_next" parent="Uif-ActionLink" p:render="@{#dp.editRenderHelper.nextAO.id != null}" p:actionScript="handleAONavigation(this,&quot;@{#dp.editRenderHelper.nextAO.id}&quot;);" p:actionImagePlacement="RIGHT" p:actionLabel="@{#dp.editRenderHelper.nextAOTypeName} @{#dp.editRenderHelper.nextAO.activityCode}" p:methodToCall="route">
                    <property name="actionParameters">
                      <map>
                        <entry key="aoId" value="@{#dp.editRenderHelper.nextAO.id}"/>
                      </map>
                    </property>
                    <property name="actionImage">
                      <bean parent="Uif-Image" p:altText=""
                            p:source="@{#ConfigProperties['ks.externalizable.images.url']}/icon-arrow-right.png"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-EditAo-Search-Subject" parent="Uif-BreadcrumbItem">
        <property name="label" value="@{document.newMaintainableObject.dataObject.course.subjectArea}"/>
        <property name="url.viewId" value="courseOfferingManagementView"/>
        <property name="url.controllerMapping" value="courseOfferingManagement"/>
        <property name="url.requestParameters">
            <map key-type="java.lang.String" merge="true">
                <entry key="methodToCall" value="show"/>
                <entry key="dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                <entry key="hideReturnLink" value="true"/>
                <entry key="inputCode" value="@{document.newMaintainableObject.dataObject.course.subjectArea}"/>
                <entry key="termCode" value="@{document.newMaintainableObject.dataObject.term.code}"/>
                <entry key="pageId" value="manageCourseOfferingsPage"/>
            </map>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-EditAo-TheCO-Page" parent="Uif-BreadcrumbItem">
        <property name="label" value="@{document.newMaintainableObject.dataObject.courseOfferingCode}"/>
        <property name="url.viewId" value="courseOfferingManagementView"/>
        <property name="url.controllerMapping" value="courseOfferingManagement"/>
        <property name="url.requestParameters">
            <map key-type="java.lang.String" merge="true">
                <entry key="methodToCall" value="show"/>
                <entry key="dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                <entry key="hideReturnLink" value="true"/>
                <entry key="inputCode" value="@{document.newMaintainableObject.dataObject.courseOfferingCode}"/>
                <entry key="termCode" value="@{document.newMaintainableObject.dataObject.term.code}"/>
                <!--<entry key="formKey" value="@{formKey}"/>-->
                <entry key="pageId" value="manageTheCourseOfferingPage"/>
            </map>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-EditAo-Page" parent="Uif-BreadcrumbItem">
        <property name="label" value="@{(document.newMaintainableObject.dataObject.activityCode eq null)? '' : 'Edit '}  @{document.newMaintainableObject.dataObject.typeName} @{document.newMaintainableObject.dataObject.activityCode}"/>
    </bean>

    <bean id="deleteScheduleConfirmDialog" parent="Uif-OK-Cancel-DialogGroup"
          p:promptText="Removing all delivery logistics from this activity offering will cause it to become unscheduled." >
        <property name="headerText" value="Delete Schedule"/>
        <property name="availableResponses">
          <list>
            <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Ok"/>
            <bean parent="Uif-KeyLabelPair" p:key="N" p:value="Cancel"/>
          </list>
        </property>
    </bean>

