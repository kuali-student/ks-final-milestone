    <bean id="ProcessInfo-CreateView" parent="KS-Uif-FormView">
        <property name="id" value="processCreateView"/>
        <property name="headerText" value="Create Process"/>
        <property name="formClass"
                  value="org.kuali.student.enrollment.class1.process.form.ProcessInfoForm"/>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Uif-Page"/>
        </property>
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Home"/>
                    <property name="url.href" value="@{#ConfigProperties['application.url']}/portal.do"/>
                </bean>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Enrollment"/>
                    <property name="url.viewId" value="enrollmentHomeView"/>
                </bean>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-enrollment-home</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelTop" p:label="Process Name" p:propertyName="name"
                      p:id="processName" p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="25" p:disabled="@{isSaveSuccess}"/>
                    </property>

                </bean>
                <bean parent="Uif-InputField-LabelTop" p:label="Process Category" p:propertyName="typeKey"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:disabled="@{isSaveSuccess}"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class1.process.keyvalues.ProcessInfoTypeKeyValues"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField-LabelTop" p:label="Process Description"
                      p:instructionalText="Enter a full description of the purpose of the process"
                      p:propertyName="descr">
                    <property name="control">
                        <bean parent="Uif-SmallTextAreaControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField-LabelTop" p:label="Owning Organization" p:propertyName="orgName" p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:disabled="true"/>
                    </property>
                    <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.organization.dto.OrgInfo"/>
                    <property name="quickfinder.fieldConversions">
                        <map>
                            <entry key="id" value="ownerOrgId"/>
                            <entry key="shortName" value="orgName"/>
                        </map>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-PrimaryActionButton" p:actionLabel="@{isSaveSuccess ? 'Update' : 'Create Process Template'}" p:methodToCall="save"/>
                            <bean parent="Uif-ActionLink" p:actionLabel="@{isSaveSuccess ? 'Close' : 'Cancel'}" p:methodToCall="close"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
            </list>
        </property>

    </bean>
</beans>