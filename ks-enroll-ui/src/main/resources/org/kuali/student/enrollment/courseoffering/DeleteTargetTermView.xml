    <bean id="KS-DeleteTargetTerm-View" parent="KS-Uif-FormView" p:applyDirtyCheck="true"
          p:id="deleteTargetTermView" p:headerText="Delete Target Term"
          p:entryPageId="selectTargetTermToDelete"
          p:viewHelperServiceClass="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingViewHelperServiceImpl"
          p:formClass="org.kuali.student.enrollment.class2.courseoffering.form.DeleteTargetTermForm">
        <property name="header">
            <bean parent="Uif-HeaderOne"/>
        </property>

        <property name="items">
            <list>
                <bean id="KS-DeleteTargetTerm-SelectTermPage" parent="Uif-Page" p:disclosure.render="false"
                      p:id="selectTargetTermToDelete"
                      p:headerText="">
                    <property name="header">
                        <bean parent="Uif-HeaderTwo"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Message" p:messageText="Specify a target term to delete"/>
                                        <bean parent="Uif-HorizontalBoxSection">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-InputField" p:propertyName="targetTermCode" p:label="Term" p:required="true">
                                                        <property name="control">
                                                            <bean parent="Uif-TextControl" p:size="6" p:watermarkText="20132" p:minLength="5" p:maxLength="6"/>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Go" p:methodToCall="goTargetTerm" p:valign="bottom"/>
                                                </list>
                                            </property>
                                        </bean>

                                        <bean parent="Uif-VerticalBoxSubSection">
                                            <property name="items">
                                                <list>
                                                    <!-- More stuff on left side here -->
                                                    <bean parent="Uif-DataField" p:propertyName="displayedTargetTermId" p:label="Term ID"/>
                                                    <bean parent="Uif-DataField" p:propertyName="targetTermStartDate" p:label="Term Start Date"/>
                                                    <bean parent="Uif-DataField" p:propertyName="targetTermEndDate" p:label="Term End Date"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>

        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-PrimaryActionButton" p:performClientSideValidation="true" p:actionLabel="Delete Target Term" p:methodToCall="deleteTargetTerm"/>
                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:methodToCall="cancel"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
</beans>