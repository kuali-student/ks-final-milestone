<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseOfferingEditWrapper-InquiryView" parent="KS-Uif-InquiryView"
          p:headerText="Course Offering Inquiry"
          p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingEditWrapper"
          p:viewHelperServiceClass="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingEditInquirableImpl">

        <property name="page.header">
            <!-- suppress Expand/Collapse buttons -->
            <ref bean="KS-Uif-HeaderOne-Empty" />
        </property>
        <property name="Items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-GridGroup"
                                  p:layoutManager.numberOfColumns="4" p:additionalCssClasses="ks-krad-tab-gridgroup-fix,ks-details-panel,ks-section">
                                  <!--p:layoutManager.applyDefaultCellWidths="false">-->
                                <property name="items">
                                    <list>
                                        <!--<bean parent="Uif-DataField" p:label="ID" p:propertyName="courseOfferingInfo.id" />-->
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.courseOfferingCode" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.finalExamType" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-DataField" p:propertyName="crosslistedCodes" p:label="Crosslisted as" p:render="@{dataObject.crosslistedCodes != ''}" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-DataField" p:propertyName="finalExamDriverUI" p:label="Final Exam Driver" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.courseNumberSuffix" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.courseOfferingTitle" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-DataField" p:propertyName="useFinalExamMatrixUI" p:label="Use Final Exam Matrix" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-DataField" p:propertyName="termName" p:label="Term" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-MessageField" p:label="Waitlists" p:messageText="@{(dataObject.courseOfferingInfo.hasWaitlist eq null or !dataObject.courseOfferingInfo.hasWaitlist) ? 'Inactive':'Active'}" p:fieldLabel.renderColon="false"/>



                                        <!--  <bean parent="Uif-InputField" p:propertyName="courseOfferingInfo.waitlistLevelTypeKey" p:label="Waitlist Level" p:fieldLabel.renderColon="false" p:labelPlacement="LEFT" p:render="@{!(dataObject.courseOfferingInfo.waitlistLevelTypeKey eq null) and (dataObject.courseOfferingInfo.hasWaitlist)}" >
                               <property name="inquiry">
                                   <bean parent="Uif-Inquiry">
                                       <property name="render" value="false" />
                                   </bean>
                               </property>
                               <property name="optionsFinder">
                                   <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.WaitlistLevelOptionsKeyValues"/>
                               </property>
                           </bean>             -->


                                       <!-- <bean parent="Uif-InputField" p:propertyName="courseOfferingInfo.waitlistTypeKey" p:label="Waitlist Type" p:fieldLabel.renderColon="false" p:labelPlacement="LEFT" p:render="@{!(dataObject.courseOfferingInfo.waitlistTypeKey eq null) and (dataObject.courseOfferingInfo.hasWaitlist)}">
                                            <property name="inquiry">
                                                <bean parent="Uif-Inquiry">
                                                    <property name="render" value="false" />
                                                </bean>
                                            </property>
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.WaitlistTypeOptionsKeyValues"/>
                                            </property>
                                        </bean>      -->

                                        <!--<bean parent="Uif-DataField" p:label="Grading Option" p:propertyName="selectedGradingOptionName" />-->
                                        <bean parent="Uif-InputField" p:propertyName="courseOfferingInfo.gradingOptionId" p:id="gradingOptionId" p:label="Grading Options" p:componentSecurity.editAuthz="true" p:fieldLabel.renderColon="false">
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.GradingOptionsKeyValues" />
                                            </property>
                                        </bean>
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingInfo.creditCnt" p:fieldLabel.renderColon="false"/>
                                        <bean parent="Uif-DataField" p:propertyName="selectedStudentRegOpts" p:label="Student Registration Options" p:fieldLabel.renderColon="false"/>

                                        <bean parent="Uif-MessageField" p:label="Honors Flag" p:messageText="@{(dataObject.courseOfferingInfo.isHonorsOffering eq null or !dataObject.courseOfferingInfo.isHonorsOffering) ? 'NO':'YES'}" p:fieldLabel.renderColon="false"/>
                                        <!-- <bean parent="Uif-DataField" p:label="Cross listed as" p:propertyName="alternateCOCodesUIList" p:render="@{dataObject.alternateCOCodesUIList != ''}" p:fieldLabel.renderColon="false"/>

                                        displays "[]" when empty, not desired
                                        <bean parent="Uif-InputField" p:propertyName="courseOfferingInfo.studentRegistrationOptionIds" p:label="Student Registration Options" p:render="@{#dp.studentRegOptions.empty}">
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.StudentRegistrationOptionsKeyValues" p:addBlankOption="false"/>
                                            </property>
                                        </bean>
                                        -->
                                    </list>
                                </property>
                            </bean>
                            <bean  parent="Uif-TableCollectionSection">
                                <property name="headerText" value="Delivery Formats" />
                                <property name="propertyName" value="formatOfferingList" />
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.FormatOfferingWrapper" />
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.separateAddLine" value="false" />
                                <property name="layoutManager.richTable.render" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                <property name="additionalCssClasses">
                                    <list merge="true">
                                        <value>ks-section</value>
                                    </list>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="formatOfferingInfo.name" p:label="Format Name" />
                                        <bean parent="Uif-InputField" p:propertyName="formatOfferingInfo.gradeRosterLevelTypeKey"
                                              p:label="Grade Roster Level">
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.CourseOfferingTypeKeyValues"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-DataField" p:propertyName="courseOfferingWrapper.finalExamDriverUI" p:label="Final Exam Driver" p:render="@{#dp.courseOfferingInfo.finalExamType eq 'STANDARD'}"/>
                                        <bean parent="Uif-MessageField" p:label="Final Exam Driver"
                                              p:messageText="Alternate exam for this offering"
                                              p:render="@{#dp.courseOfferingInfo.finalExamType eq 'ALTERNATE'}" />
                                        <bean parent="Uif-MessageField" p:label="Final Exam Driver"
                                              p:messageText="No final exam for this offering"
                                              p:render="@{#dp.courseOfferingInfo.finalExamType eq 'NONE'}" />
                                        <bean parent="Uif-DataField" p:propertyName="finalExamUI" p:label="Final Exam Driver Activity" p:render="@{#dp.courseOfferingInfo.finalExamType eq 'STANDARD'}"/>


                                    </list>
                                </property>
                            </bean>

                            <bean  parent="Uif-TableCollectionSection">
                                <property name="headerText" value="Personnel" />
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.OfferingInstructorWrapper" />
                                <property name="propertyName" value="instructors" />
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.separateAddLine" value="false" />
                                <property name="layoutManager.richTable.render" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                <property name="renderAddBlankLineButton" value="false" />
                                <property name="additionalCssClasses">
                                    <list merge="true">
                                        <value>ks-section</value>
                                    </list>
                                </property>
                                <!--<property name="addLinePlacement" value="BOTTOM" />-->
                                <property name="items">
                                    <list>
                                        <!--<bean parent="Uif-DataField" p:label="Affiliated Personnel Name" p:propertyName="offeringInstructorInfo.personName" />-->
                                        <!--<bean parent="Uif-DataField" p:label="Affiliated Personnel Affiliation" p:propertyName="typeName" />-->
                                        <bean parent="Uif-DataField" p:propertyName="offeringInstructorInfo.personId"
                                              p:label="Id" p:required="false" p:cssClasses="col_5"/>
                                        <bean parent="Uif-DataField" p:propertyName="offeringInstructorInfo.personName" p:label="Name" />
                                        <bean parent="Uif-DataField" p:propertyName="offeringInstructorInfo.typeKey" p:label="Affiliation" p:required="false">
                                            <!--<property name="control">-->
                                                <!--<bean parent="Uif-DropdownControl" p:options-ref="coInstructors-options" />-->
                                            <!--</property>-->
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-TableCollectionSection">
                                <property name="propertyName" value="organizationNames"/>
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.OrganizationInfoWrapper"/>
                                <property name="headerText" value="Administering Organizations"/>
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.separateAddLine" value="false" />
                                <property name="layoutManager.richTable.render" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                <property name="additionalCssClasses">
                                    <list merge="true">
                                        <value>ks-section</value>
                                    </list>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="organizationName" p:label="Organization Name"/>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="6"  p:readOnly="true" p:renderAddLine="false">
                                <property name="headerText" value="Activity Offerings" />
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
                                <property name="propertyName" value="aoWrapperList" />
                                <property name="collectionLookup">
                                    <bean parent="Uif-CollectionQuickFinder" p:quickfinderAction.render="false" />
                                </property>
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="false" />
                                <property name="layoutManager.richTable">
                                    <bean parent="KS-Uif-PagedRichTable">
                                        <property name="templateOptions">
                                            <map merge="true">
                                                <entry key="iDisplayLength" value="10"/>
                                                <entry key="bAutoWidth" value="false" />
                                            </map>
                                        </property>
                                    </bean>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-HorizontalFieldGroup" p:fieldLabel.labelText="Code">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-DataField" p:propertyName="aoInfo.activityCode" p:fieldLabel.render="false" />
                                                    <bean parent="Uif-ImageField" p:hidden="@{#lp.colocatedAoInfo.isEmpty()}"
                                                          p:image.altText="@{#line.colocatedAoInfoUI}"
                                                          p:source="@{#ConfigProperties['ks.externalizable.images.url']}/colocate_icon.png">
                                                        <property name="style" value="padding-left:5px"/>
                                                        <property name="toolTip">
                                                            <bean parent="Uif-KS-TooltipFocus" p:onMouseHover="true" p:tooltipContent="@{#lp.colocatedAoInfoUI}"/>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-ImageField" p:hidden="@{#lp.subTermName eq 'None'}"
                                                          p:source="@{#ConfigProperties['ks.externalizable.images.url']}/subterm_icon.png" p:title="This activity is in @{#lp.subTermName} - &#13; @{#lp.termStartEndDate}">
                                                        <property name="style" value="padding-left:5px; padding-bottom:3px;"/>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-DataField" p:label="Status" p:propertyName="stateName" />
                                        <bean parent="Uif-DataField" p:label="Type" p:propertyName="typeName"/>
                                        <bean parent="Uif-DataField" p:label="Format" p:propertyName="aoInfo.formatOfferingName"/>
                                        <bean parent="Uif-DataField" p:label="Instructor" p:propertyName="firstInstructorDisplayName"/>
                                        <bean parent="Uif-DataField" p:label="Max ENR" p:propertyName="aoInfo.maximumEnrollment"/>
                                    </list>
                                </property>
                            </bean>

                            <!-- end of Uif-GridGroup -->

                        </list>
                    </property>
                </bean>
                <!-- end of Uif-VerticalBoxSection -->

            </list>
        </property>
    </bean>

</beans>