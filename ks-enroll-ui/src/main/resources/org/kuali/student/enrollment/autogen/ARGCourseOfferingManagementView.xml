    <bean id="KS-ARGCourseOfferingManagement-View" parent="KSUifFormView" p:applyDirtyCheck="true"
          p:id="argCourseOfferingManagementView"
          p:entryPageId="searchInputPage"
          p:viewHelperServiceClass="org.kuali.student.enrollment.class2.autogen.service.impl.ARGCourseOfferingManagementViewHelperServiceImpl"
          p:formClass="org.kuali.student.enrollment.class2.autogen.form.ARGCourseOfferingManagementForm">

        <!--<property name="breadCrumbConfigMap">
            <map>
                <entry key="manageActivityOfferingsPage">
                    <map key-type="java.lang.String">
                        <entry key="Home" value=""/>
                        <entry key="Manage Course Offerings" value="manageCourseOfferingsPage"/>
                        <entry key="@{currentCourseOfferingWrapper.courseOfferingCode} - @{currentCourseOfferingWrapper.courseOfferingTitle}" value=""/>
                    </map>
                </entry>
            </map>
        </property> -->

        <property name="authorizer">
            <bean class="org.kuali.student.enrollment.main.view.KsViewAuthorizerBase"/>
        </property>

        <property name="header">
            <bean parent="Uif-HeaderThree" p:headerText="Manage Course Offerings (Auto-Generated RG)" p:style="padding-left:15px;"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>

        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
                <value>ks-enroll/scripts/toolbar.js</value>
                <value>ks-enroll/scripts/courseOffering.js</value>
                <value>ks-krad/scripts/ks-krad-collection-rowSelection.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-enroll/css/acal.css</value>
                <value>ks-enroll/css/krms.css</value>
            </list>
        </property>
        <property name="preloadPoolSize" value="3"/>
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-SearchInputPage"/>
                <ref bean="KS-ARGCourseOfferingManagement-ManageCourseOfferingsPage"/>
                <ref bean="KS-CourseOfferingManagement-CopyCourseOfferingPage"/>
                <ref bean="KS-CourseOfferingManagement-ManageTheCourseOfferingPage"/>
                <ref bean="KS-CourseOfferingManagement-CoDeleteConfirmationPage"/>
                <ref bean="KS-CourseOfferingManagement-SelectedAoDeleteConfirmationPage"/>
            </list>
        </property>
        <property name="dialogs">
            <list>
                <bean id="schedulingConfirmDialog" parent="schedulingConfirmDialog-Group"/>
                <ref bean="approveCODialog"/>
            </list>
        </property>
    </bean>

    <bean id="schedulingConfirmDialog-Group" parent="Uif-DialogGroup">
        <property name="hidden" value="true"/>
        <property name="headerText" value="Mark as Ready for Scheduling"/>
        <property name="promptText" value=""/>
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:label="Course Offerings" p:propertyName="toBeScheduledCourseOfferingsUI" p:fieldLabel.style="font-weight:bold;"/>
                <bean parent="Uif-MessageField" p:label="Activity Offerings" p:messageText="All contained in the course offerings (@{toBeScheduledCourseOfferingsCount})" p:fieldLabel.style="font-weight:bold;"/>
            </list>
        </property>
    </bean>

    <bean id="approveCODialog" parent="Uif-OK-Cancel-DialogGroup"
          p:promptText="This will mark all checked Course Offerings as Ready for Scheduling." >
        <property name="headerText" value="Approve CourseOfferings"/>
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="Y" p:value="Approve"/>
                <bean parent="Uif-KeyLabelPair" p:key="N" p:value="Cancel"/>
            </list>
        </property>
    </bean>

</beans>