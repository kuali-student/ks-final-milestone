    <bean id="KS-CourseOfferingRolloverManagement-SelectTermPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="selectTermsForRollover">
        <!-- It's easier to put the footer up front since it has a lot less content -->
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-PrimaryActionButton" p:performClientSideValidation="true" p:actionLabel="Rollover Course Offerings"
                              p:methodToCall="performRollover" p:disabled="@{isRolloverButtonDisabled}"/>
                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:methodToCall="cancel"/>
                    </list>
                </property>
            </bean>
        </property> <!-- End of footer -->
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:messageText="Perform Rollover" p:style="font-size:175%;border-bottom: solid 2px #000;"/>
                <bean parent="Uif-Message" p:messageText="Select Source and Target Terms" p:style="font-size:135%;"/>
                <bean parent="Uif-VerticalBoxGroup" p:style="min-width:17cm">
                <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSubSection" p:headerText="Both fields are required. Enter terms as codes, eg 201201.">
                                <property name="validationMessages">
                                    <bean parent="Uif-GroupValidationMessages">
                                        <property name="displayFieldLabelWithMessages" value="false"/>
                                    </bean>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-HorizontalBoxSubSection" p:colSpan="1">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalFieldGroup" p:label="Source Term" p:labelPlacement="TOP">
                                                        <!--property name="toolTip">
                                                            <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="Select the term you want to copy to \- the new term."/>
                                                        </property-->
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-InputField" p:propertyName="sourceTermCode" p:required="true">
                                                                    <property name="control">
                                                                        <bean parent="Uif-TextControl" p:size="6" p:watermarkText="201201" p:minLength="5" p:maxLength="6"/>
                                                                    </property>
                                                                </bean>

                                                                <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Go" p:methodToCall="goSourceTerm" p:valign="middle"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-VerticalBoxSubSection" p:render="@{displayedSourceTermCode!=''}">
                                                        <property name="items">
                                                            <list>
                                                                <!-- More stuff on right side here -->
                                                                <bean parent="Uif-DataField" p:propertyName="displayedSourceTermCode" p:label="Term Code"/>
                                                                <bean parent="Uif-DataField" p:propertyName="sourceTermStartDate" p:label="Term Start Date"/>
                                                                <bean parent="Uif-DataField" p:propertyName="sourceTermEndDate" p:label="Term End Date"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxSubSection" >
                                <property name="validationMessages">
                                    <bean parent="Uif-GroupValidationMessages">
                                        <property name="displayFieldLabelWithMessages" value="false"/>
                                    </bean>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-HorizontalBoxSubSection" p:colSpan="1">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalFieldGroup" p:label="Target Term" p:labelPlacement="TOP">
                                                        <!--property name="toolTip">
                                                            <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="Select the term you want to copy from \â€“ the older term."/>
                                                        </property-->
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-InputField" p:propertyName="targetTermCode"
                                                                      p:required="true">
                                                                    <property name="control">
                                                                        <bean parent="Uif-TextControl" p:size="6" p:watermarkText="201301" p:minLength="5" p:maxLength="6"/>
                                                                    </property>
                                                                </bean>
                                                                <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Go" p:methodToCall="goTargetTerm" p:disabled="@{isGoSourceButtonDisabled}" p:valign="bottom"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-VerticalBoxSubSection" p:render="@{displayedTargetTermCode!=''}">
                                                        <property name="items">
                                                            <list>
                                                                <!-- More stuff on left side here -->
                                                                <bean parent="Uif-DataField" p:propertyName="displayedTargetTermCode" p:label="Term Code"/>
                                                                <bean parent="Uif-DataField" p:propertyName="targetTermStartDate" p:label="Term Start Date"/>
                                                                <bean parent="Uif-DataField" p:propertyName="targetTermEndDate" p:label="Term End Date"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>

                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>
</beans>