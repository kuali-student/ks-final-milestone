<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
        Controller Class: AcademicCalendarController.java
        View Helper Class: AcademicCalendarViewHelperServiceImpl.java
        UX : http://ux.ks.kuali.org.s3.amazonaws.com/wireframes/ENR/Scheduling_Interface/v3/start.html

        This view has couple of pages (edit and copy) with all the beans defined at
        1. AcademicCalendarEditPage.xml
        2. AcademicCalendarCopyPage.xml
        3. AcademicTermPage.xml
    -->
    <bean id="KS-AcademicCalendarView" parent="KS-Unified-Uif-FormView">
        <property name="id" value="academicCalendarFlowView"/>
        <property name="headerText" value="@{!#empty(academicCalendarInfo.name) ? academicCalendarInfo.name : 'New Calendar'}"/>
        <property name="header.rightGroup.items">
            <list>
                <ref bean="ksUnifiedHeaderRightGroupActionId"/>
                <bean parent="Unified-Right-Header-Group-Status">
                    <property name="items">
                        <list>
                            <ref bean="Unified-Right-Header-Group-Status-Modified"/>
                            <bean parent="Uif-VerticalBoxGroup">
                                <property name="items">
                                    <list>
                                        <bean id="acal_Official" parent="Uif-ActionLink" p:methodToCall="makeAcalOfficial"
                                              p:actionLabel="Make Official"
                                              p:render="@{!reload and !#view.readOnly and !officialUI}" />
                                        <bean parent="KS-Lozenge-Green-Uif-Message" p:messageText="Official" p:render="@{officialUI}"/>
                                        <bean parent="KS-Lozenge-Grey-Uif-Message" p:messageText="Draft" p:render="@{!officialUI}"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="entryPageId" value="academicCalendarCopyPage"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.acal.service.impl.AcademicCalendarViewHelperServiceImpl"/>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>

        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <ref bean="KS-Enrollment-HomewardPathBreadcrumbs"/>
        </property>

        <property name="items">
            <list>
                <ref bean="KS-AcademicCalendar-CopyPage"/>
                <bean parent="KS-AcademicCalendar-EditPage" p:stickyFooter="true"/>
            </list>
        </property>
        <property name="formClass" value="org.kuali.student.enrollment.class2.acal.form.AcademicCalendarForm"/>
        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-enroll/css/calendar.css</value>
                <value>ks-enroll/css/acal.css</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
            </list>
        </property>

        <property name="dialogs">
            <list>
                <ref bean="KS-AcademicCalendar-ConfirmDelete-Dialog"/>
                <ref bean="KS-AcademicTerm-ConfirmDelete-Dialog"/>
                <ref bean="KS-AcademicCalendar-ConfirmCalendarOfficial-Dialog"/>
                <ref bean="KS-AcademicCalendar-ConfirmTermOfficial-Dialog"/>
                <ref bean="KS-AcademicCalendar-ConfirmCalendarTermOfficial-Dialog"/>
            </list>
        </property>
    </bean>

    <bean id="KS-AcademicCalendar-ConfirmDelete-Dialog" parent="Uif-DialogGroup" >
        <property name="renderHeader" value="false"/>
        <property name="promptText"
                  value="Are you sure you want to delete the Academic Calendar?"/>
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="yes" p:value="Delete"/>
                <bean parent="Uif-KeyLabelPair" p:key="no" p:value="Cancel"/>
            </list>
        </property>
    </bean>

    <bean id="KS-AcademicTerm-ConfirmDelete-Dialog" parent="Uif-DialogGroup" >
        <property name="renderHeader" value="false"/>
        <property name="promptText"
                  value="Are you sure you want to delete the Academic Term?"/>
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="yes" p:value="Delete"/>
                <bean parent="Uif-KeyLabelPair" p:key="no" p:value="Cancel"/>
            </list>
        </property>
    </bean>

    <bean id="KS-AcademicCalendar-ConfirmCalendarOfficial-Dialog" parent="Uif-DialogGroup" >
        <property name="renderHeader" value="true"/>
        <property name="headerText" value="Confirm Official Status"/>
        <property name="promptText"
                  value="You are making @{academicCalendarInfo.name} official. This action cannot be undone and once a calendar is official you cannot delete it.
                  &lt;br&gt; &lt;br&gt; If you do not want to make this calendar offical cancel this action and edit the status of the calendar."/>
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="yes" p:value="Confirm Status Change"/>
                <bean parent="Uif-KeyLabelPair" p:key="no" p:value="Cancel"/>
            </list>
        </property>
    </bean>

    <bean id="KS-AcademicCalendar-ConfirmTermOfficial-Dialog" parent="Uif-DialogGroup" >
        <property name="renderHeader" value="true"/>
        <property name="headerText" value="Confirm Official Status"/>
        <property name="promptText"
                  value="You are making @{makeOfficialName} official. This action cannot be undone and once a term is official you cannot delete it.
                  &lt;br&gt; &lt;br&gt; If you do not want to make this term offical cancel this action and edit the status of the term."/>
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="yes" p:value="Confirm Status Change"/>
                <bean parent="Uif-KeyLabelPair" p:key="no" p:value="Cancel"/>
            </list>
        </property>
    </bean>

    <bean id="KS-AcademicCalendar-ConfirmCalendarTermOfficial-Dialog" parent="Uif-DialogGroup" >
        <property name="renderHeader" value="true"/>
        <property name="headerText" value="Confirm Official Status"/>
        <property name="promptText"
                  value="You are making @{makeOfficialName} official. Because the containing calendar must also be
                  official - this will also make @{academicCalendarInfo.name} official This action cannot be undone and
                  once a term is official you cannot delete it.
                  &lt;br&gt; &lt;br&gt;
                  If you do not want to make this term offical cancel this action and edit the status of the term."/>
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="yes" p:value="Confirm Status Change"/>
                <bean parent="Uif-KeyLabelPair" p:key="no" p:value="Cancel"/>
            </list>
        </property>
    </bean>

</beans>