<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseOfferingManagement-CO-ToolBarSection" parent="Uif-HorizontalBoxSection" p:render="true">
        <property name="items">
          <list>
            <bean id="KS-CourseOfferingManagement-ToolBar-Add-CO" parent="KS-CourseOfferingManagement-ToolBar-Add" p:methodToCall="createCourseOffering" p:disabled="@{!enableAddButton}"/>
            <bean id="KS-CourseOfferingManagement-ToolBar-Approve-CO" parent="KS-CourseOfferingManagement-ToolBar-Approve"
                p:preSubmitCall="return confirm('This will mark all checked Course Offerings as Ready for Scheduling')" p:methodToCall="approveCOs" />
            <bean id="KS-CourseOfferingManagement-ToolBar-Suspend-CO" parent="KS-CourseOfferingManagement-ToolBar-Suspend" p:methodToCall="suspendCOs" p:render="true"/>
            <bean id="KS-CourseOfferingManagement-ToolBar-Cancel-CO" parent="KS-CourseOfferingManagement-ToolBar-Cancel" p:methodToCall="cancelCOs"  p:render="true"/>
            <bean id="KS-CourseOfferingManagement-ToolBar-Reinstate-CO" parent="KS-CourseOfferingManagement-ToolBar-Reinstate" p:methodToCall="reinstateCOs"  p:render="true"/>
            <bean id="KS-CourseOfferingManagement-ToolBar-Delete-CO" parent="KS-CourseOfferingManagement-ToolBar-Delete" p:methodToCall="deleteCOs"/>
          </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-AO-ToolBarSection" parent="Uif-HorizontalBoxSection" p:render="true">
        <property name="items">
          <list>
            <bean id="KS-CourseOfferingManagement-ToolBar-Add-AO" parent="KS-CourseOfferingManagement-ToolBar-Add" p:actionLabel="Add Activity"
                  p:performClientSideValidation="true" p:methodToCall="addActivityOfferings" p:disabled="@{!enableAddButton}"/>
            <bean id="KS-CourseOfferingManagement-ToolBar-Approve-AO" parent="KS-CourseOfferingManagement-ToolBar-Approve" p:methodToCall="approveAOs" />
            <bean id="KS-CourseOfferingManagement-ToolBar-Draft-AO" parent="KS-CourseOfferingManagement-ToolBar-Draft" p:methodToCall="draftAOs" />
            <bean id="KS-CourseOfferingManagement-ToolBar-Suspend-AO" parent="KS-CourseOfferingManagement-ToolBar-Suspend" p:methodToCall="suspendAOs" p:render="true"/>
            <bean id="KS-CourseOfferingManagement-ToolBar-Cancel-AO" parent="KS-CourseOfferingManagement-ToolBar-Cancel" p:methodToCall="cancelAOs" p:render="true"/>
            <bean id="KS-CourseOfferingManagement-ToolBar-Reinstate-AO" parent="KS-CourseOfferingManagement-ToolBar-Reinstate" p:methodToCall="reinstateAOs" p:render="true"/>
            <bean id="KS-CourseOfferingManagement-ToolBar-Delete-AO" parent="KS-CourseOfferingManagement-ToolBar-Delete" p:methodToCall="deleteAOs"/>
          </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-ToolBar-Add" parent="KS-CourseOfferingManagement-ToolBar-Button">
         <property name="actionLabel" value="Add Course"/>
         <property name="actionImage">
             <bean parent="Uif-Image" p:source="../ks-enroll/images/add_disabled.png"/>
         </property>
     </bean>

     <bean id="KS-CourseOfferingManagement-ToolBar-Approve" parent="KS-CourseOfferingManagement-ToolBar-Button">
         <property name="actionLabel" value="Approve"/>
         <property name="actionImage">
             <bean parent="Uif-Image" p:source="../ks-enroll/images/approve_disabled.png"/>
         </property>
     </bean>

    <bean id="KS-CourseOfferingManagement-ToolBar-Suspend" parent="KS-CourseOfferingManagement-ToolBar-Button">
        <property name="actionLabel" value="Suspend"/>
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="../ks-enroll/images/suspend_disabled.png"/>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-ToolBar-Cancel" parent="KS-CourseOfferingManagement-ToolBar-Button">
         <property name="actionLabel" value="Cancel"/>
         <property name="actionImage">
             <bean parent="Uif-Image" p:source="../ks-enroll/images/cancel_disabled.png"/>
         </property>
     </bean>

     <bean id="KS-CourseOfferingManagement-ToolBar-Reinstate" parent="KS-CourseOfferingManagement-ToolBar-Button">
         <property name="actionLabel" value="Reinstate"/>
         <property name="actionImage">
             <bean parent="Uif-Image" p:source="../ks-enroll/images/reinstate_disabled.png"/>
         </property>
     </bean>

     <bean id="KS-CourseOfferingManagement-ToolBar-Delete" parent="KS-CourseOfferingManagement-ToolBar-Button">
         <property name="actionLabel" value="Delete"/>
         <property name="actionImage">
             <bean parent="Uif-Image" p:source="../ks-enroll/images/delete_disabled.png"/>
         </property>
     </bean>

    <bean id="KS-CourseOfferingManagement-ToolBar-Draft" parent="KS-CourseOfferingManagement-ToolBar-Button">
        <property name="actionLabel" value="Set as Draft"/>
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="../ks-enroll/images/draft_disabled.png"/>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-ToolBar-Copy" parent="KS-CourseOfferingManagement-ToolBar-Button">
        <property name="actionLabel" value="Copy"/>
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="../ks-enroll/images/copy_disabled.png"/>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-ToolBar-Button" parent="Uif-SecondaryActionButton" p:disabled="true" abstract="true">
        <property name="actionImagePlacement" value="TOP"/>
    </bean>
</beans>