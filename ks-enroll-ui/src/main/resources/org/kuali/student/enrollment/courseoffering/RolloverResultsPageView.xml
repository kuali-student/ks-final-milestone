    <bean id="KS-RolloverResultsPage-SelectTermPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="selectTermForRolloverDetails"
          p:headerText="Rollover Details">
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>

        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Rollover Details@{rolloverTargetTermDesc!='' ? ': ' + rolloverTargetTermDesc: ''}"/>
                </bean>
            </list>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-InputField" p:propertyName="rolloverTargetTermCode" p:label="Term" p:required="true" p:fieldLabel.renderColon="false">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="6" p:watermarkText="201301" p:minLength="5" p:maxLength="6"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="true" p:actionLabel="Go" p:methodToCall="showRolloverResults" p:valign="bottom"/>
                                        <bean parent="Uif-Message" p:messageText="Enter Valid Term" p:render="@{rolloverSourceTermDesc=='' and rolloverTargetTermCode!=''}" p:style="color:red;"/>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-Message" p:messageText="&lt;b&gt;@{rolloverTargetTermDesc!=''?rolloverTargetTermDesc: 'Enter valid Term'} Rollover&lt;/b&gt;" p:style="font-size:125%; padding-top:35px"
                                  p:render="@{rolloverTargetTermCode!='' and rolloverSourceTermDesc!=''}"/>
                            <bean id="KS-RolloverResultsInfoSection" parent="Uif-GridSection" p:render="@{rolloverTargetTermCode!='' and rolloverSourceTermDesc!=''}" p:style="background-color:#dadada;">
                                <property name="items">
                                    <list>
                                        <!-- Roll over details display -->
                                        <bean parent="Uif-GridSubSection" p:colSpan="2" p:layoutManager.numberOfColumns="3" p:render="@{!socReleasedToDepts and statusField!='Finished'}">
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>ks-rolloverResultsInfoSection-gridSubsection</value>
                                                </list>
                                            </property>
                                            <property name="items">
                                                <list>
                                                    <bean parent="KS-Lozenge-Grey-Uif-DataField" p:id="rollover-status" p:label="Status" p:fieldLabel.renderColon="false" p:propertyName="statusField" />
                                                    <bean parent="Uif-ActionLink" p:performClientSideValidation="true" p:actionLabel="Refresh" p:methodToCall="showRolloverResults" p:valign="bottom" p:onClickScript="writeHiddenToForm(&quot;rolloverTargetTermCode&quot;, &quot;@{rolloverTargetTermCode}&quot;);"/>
                                                </list>
                                            </property>
                                        </bean>
                                        <bean parent="KS-Lozenge-Grey-Uif-DataField" p:label="Status" p:fieldLabel.renderColon="false" p:propertyName="statusField" p:render="@{!socReleasedToDepts and statusField=='Finished'}"/>
                                        <bean parent="Uif-Message" p:messageText="&lt;b&gt;Status&lt;/b&gt; &#160; &#160;Released to Departments" p:render="@{socReleasedToDepts}" p:colSpan="2" p:style="padding-left:140px;"/>
                                        <bean parent="Uif-DataField" p:label="Date Initiated"
                                              p:fieldLabel.renderColon="false"
                                              p:propertyName="dateInitiated"/>
                                        <bean parent="Uif-DataField" p:label="Date Completed"
                                              p:fieldLabel.renderColon="false"
                                              p:propertyName="dateCompleted"/>
                                        <bean parent="Uif-DataField" p:label="Rollover Duration"
                                              p:fieldLabel.renderColon="false"
                                              p:propertyName="rolloverDuration"/>
                                        <bean parent="Uif-DataField" p:label="Course Offerings"
                                              p:fieldLabel.renderColon="false"
                                              p:propertyName="courseOfferingsAllowed"/>
                                        <bean parent="Uif-DataField" p:label="Activity Offerings"
                                              p:fieldLabel.renderColon="false"
                                              p:propertyName="activityOfferingsAllowed"/>
                                        <bean parent="Uif-DataField" p:label="Source Term"
                                              p:fieldLabel.renderColon="false"
                                              p:propertyName="rolloverSourceTermDesc"/>
                                    </list>
                                </property>
                            </bean>   <!-- grid section-->
                            <bean parent="Uif-VerticalBoxSection" p:colSpan="3" p:width="20cm" p:render="@{rolloverTargetTermCode!='' and rolloverSourceTermDesc!=''}">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Message" p:render="@{socReleasedToDepts}" p:id="KS-RolloverResultsInfoSectionMsg"
                                              p:messageText="Course offerings for @{rolloverTargetTermDesc!='' ? rolloverTargetTermDesc : 'Unknown Term'} have been released to the departments."/>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-Link" p:linkText="Manage Course Offerings" p:render="@{rolloverTargetTermCode!='' and rolloverSourceTermDesc!=''}"
                                  p:href="@{#ConfigProperties['application.url']}/kr-krad/courseOfferingManagement?viewId=courseOfferingManagementView&amp;pageId=searchInputPage&amp;methodToCall=start&amp;withinPortal=false"/>
                            <bean parent="Uif-HorizontalBoxSubSection" p:colSpan="3" p:render="@{!releaseToDeptsDisabled and rolloverTargetTermCode!='' and rolloverSourceTermDesc!=''}" p:style="padding-top:15px">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Release Courses"
                                              p:methodToCall="confirmReleaseToDepts" />
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-TableCollectionSection" p:headerText="Exceptions" p:style="padding-top:30px"
                                  p:layoutManager.numberOfColumns="3" p:renderAddLine="false"
                                  p:renderLineActions="false" p:render="@{renderExceptionsSection}">
                                <property name="header.headerTagStyle" value="font-family:Arial;font-size:15px;font-weight:bold;font-style:normal;text-decoration:none;color:#000000;background-image:url('../ks-enroll/images/exclamation_diamond_frame.png');background-repeat: no-repeat;background-position: left;padding-left:20px;"/>
                                <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.SocRolloverResultItemWrapper"/>
                                <property name="propertyName" value="socRolloverResultItems"/>
                                <property name="collectionLookup.quickfinderAction.render" value="false" />
                                <property name="layoutManager.renderSequenceField" value="false" />
                                <property name="layoutManager.applyDefaultCellWidths" value="true" />
                                <property name="layoutManager.applyAlternatingRowStyles" value="false" />
                                <property name="layoutManager.richTable.templateOptions">
                                    <map merge="true">
                                        <entry key="iDisplayLength" value="20"/>
                                        <entry key="bAutoWidth" value="false"/>
                                    </map>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="course" p:label="Course"/>
                                        <bean parent="Uif-DataField" p:propertyName="stateName" p:label="Reason"/>
                                        <bean parent="Uif-DataField" p:propertyName="message" p:label="Details"/>
                                    </list>
                                </property>
                            </bean>  <!-- grid section -->
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>