    <bean id="HoldIssueInfo-CreateView" parent="KS-Uif-FormView">
        <property name="id" value="holdCreateView"/>
        <property name="headerText" value="Create Hold"/>
        <property name="formClass" value="org.kuali.student.enrollment.class1.hold.form.HoldIssueInfoForm" />
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Uif-Page"/>
        </property>
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <ref bean="KS-Enrollment-HomewardPathBreadcrumbs"/>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo" />
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="items">
            <list>
                <ref bean="Hold-CreateSection"/>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
            </list>
        </property>

    </bean>

    <bean id="Hold-CreateSection" parent="Uif-HorizontalBoxSection">
        <property name="disclosure.render" value="false"/>
        <property name="style" value="margin-bottom:0;"/>
        <property name="items">
            <list>
                <bean parent="Uif-GridSubSection">
                    <!--property name="headerText" value="Add Hold"/-->
                    <property name="layoutManager.numberOfColumns" value="2"/>
                    <property name="layoutManager.applyDefaultCellWidths" value="false" />
                    <property name="style" value="margin-bottom:0;"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Hold Name" p:propertyName="name" p:required="true">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="20"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Category Name" p:propertyName="typeKey" p:required="true">
                                            <property name="control">
                                                <bean parent="Uif-DropdownControl" />
                                            </property>
                                            <property name="optionsFinder">
                                                <bean class="org.kuali.student.enrollment.class1.hold.keyvalues.HoldIssueInfoTypeKeyValues"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Hold Description"  p:propertyName="descr" >
                                            <property name="control">
                                                <bean parent="Uif-SmallTextAreaControl" />
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Owning Organization"  p:propertyName="organizationId" p:required="true">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="20" p:disabled="true"/>
                                            </property>
                                        </bean>
                                        <bean parent="Uif-InputField-LabelTop" p:label="Organization Name" p:propertyName="orgName" p:required="true">
                                            <property name="control">
                                                <bean parent="Uif-TextControl" p:size="20" p:disabled="true"/>
                                            </property>
                                            <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.organization.dto.OrgInfo" />
                                            <property name="quickfinder.fieldConversions">
                                                <map>
                                                    <entry key="id" value="organizationId"/>
                                                    <entry key="shortName" value="orgName"/>
                                                </map>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-HorizontalFieldGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-PrimaryActionButton" p:actionLabel="@{isSaveSuccess ? 'Back' : 'Save'}" p:methodToCall="@{isSaveSuccess ? 'close' : 'create'}" p:performDirtyValidation="false"/>
                                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:methodToCall="close" p:hidden="@{isSaveSuccess}"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>