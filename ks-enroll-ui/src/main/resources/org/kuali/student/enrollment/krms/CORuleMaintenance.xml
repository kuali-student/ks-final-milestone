<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="CORuleWrapperMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.CORuleManagementWrapper"/>
        <property name="maintainableClass" value="org.kuali.student.enrollment.class1.krms.service.impl.CORuleEditorMaintainableImpl"/>
        <property name="documentTypeName" value="CORuleMaintenanceDocument"/>
        <property name="businessRulesClass" value="org.kuali.rice.krms.util.RuleEditorBusRule" />
        <property name="lockingKeys">
            <list>
                <value>refObjectId</value>
            </list>
        </property>
    </bean>

    <bean id="EnrolRuleManagementWrapper" parent="RuleManagementWrapper-parentBean">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.EnrolRuleManagementWrapper"/>
    </bean>

    <bean id="CORuleManagementWrapper" parent="EnrolRuleManagementWrapper">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.CORuleManagementWrapper"/>
    </bean>

    <bean id="EnrolRuleEditor" parent="RuleEditor-parentBean">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.EnrolRuleEditor"/>
    </bean>

    <bean id="KSCO-AgendaManagement-View" parent="KS-CourseOffering-MaintenanceViewWithTermContextBarPlaceholder">
        <property name="viewName" value="COAgendaManagementView"/>
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class1.krms.dto.CORuleManagementWrapper"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.enrollment.class1.krms.service.impl.CORuleViewHelperServiceImpl"/>
        <property name="items">
            <list>
                <bean id="KSCO-AgendaMaintenance-Page" parent="KSCO-AgendaMaintenance-Page-parent"/>
                <bean id="KSCO-RuleMaintenance-Page" parent="KSCO-RuleMaintenance-Page-Parent"/>
            </list>
        </property>
        <property name="dialogs">
            <list>
                <bean id="compareRuleLightBox" parent="KRMS-CompareRule"/>
                <bean id="courseRangeLookup" parent="KRMS-CourseRangeResult-Lookup"/>
            </list>
        </property>
        <property name="topGroup">
            <bean id="KSCO-ContextBar" parent="KS-CourseOffering-ContextBar" p:style="display:block;">
                <property name="onDocumentReadyScript" value="setSeasonalColor('KSCO-ContextBar', '@{#dp.contextBar.termDayOfYear}', '@{#ConfigProperties['application.url']}');"/>
            </bean>
        </property>
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-Enrollment"/>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Manage Course Offerings"/>
                    <property name="url.viewId" value="courseOfferingManagementView"/>
                    <property name="url.controllerMapping" value="courseOfferingManagement"/>
                </bean>
            </list>
        </property>
        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Course Offering Requisites"/>
                </bean>
            </list>
        </property>
        <property name="singlePageView" value="false"/>
        <property name="unifiedHeader" value="false"/>
        <property name="entryPageId" value="KSCO-AgendaMaintenance-Page"/>
        <property name="header.cssClasses">
            <list >
                <value>ks-borderBottom4</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>krms/scripts/agendaTree.js</value>
                <value>ks-enroll/scripts/ruleStudentTree.js</value>
                <value>krms/scripts/requiredAlerts.js</value>
                <value>ks-enroll/scripts/disableStudentButtons.js</value>
                <value>krms/scripts/countdownInputs.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-enroll/css/krms.css</value>
            </list>
        </property>
    </bean>

    <bean name="KSCO-AgendaMaintenance-Page-parent" parent="KRMS-AgendaMaintenance-Page-Parent">
        <property name="headerText" value="@{#dp.cluDescription}"/>
        <property name="items">
            <list>
                <bean parent="Uif-HeaderFour" p:headerText="Course Offering Requisites"/>
                <bean parent="KRMS-AgendaMaintenance-DisclosureLinks"/>
                <bean parent="KRMS-AgendaManage-Section" class="org.kuali.student.enrollment.class1.krms.util.CourseOfferingAgendaSection">
                    <property name="rulePrototype">
                        <ref bean="KSCO-AgendaManage-RulePrototype"/>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer">
            <ref bean="KS-Uif-DocumentPageFooter-SubmitCancel"/>
        </property>
    </bean>

    <bean id="KSCO-AgendaManage-RulePrototype" parent="KRMS-AgendaManage-RulePrototype">
        <property name="items">
            <list>
                <ref bean="KSCO-AgendaManage-EditRule"/>
                <ref bean="KSCO-AgendaManage-AddRule"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-AgendaManage-EditRule" parent="KRMS-AgendaManage-EditRule">
    <property name="items">
        <list>
            <bean id="KSCO-RuleEdit-ActionLinks" parent="KSCO-RuleEdit-Links" p:align="right"/>
            <bean id="KSCO-RuleView-ActionLinks" parent="KSCO-RuleView-Links" p:align="right"/>
            <bean parent="Uif-MessageField" p:messageText="@{#line.ruleTypeInfo.instruction}"/>
            <bean id="KSCO-ViewTree-Group" parent="Uif-VerticalBoxGroup"
                  p:cssClasses="viewModeNode">
                <property name="items">
                    <list>
                        <ref bean="KSCO-ViewTree-Section"/>
                    </list>
                </property>
            </bean>
        </list>
    </property>
    </bean>

    <bean id="KSCO-AgendaManage-AddRule" parent="KRMS-AgendaManage-AddRule">
        <property name="items">
            <list>
                <bean id="KSCO-RuleAdd-ActionLink" parent="KSCO-RuleAdd-Links"  p:align="right"/>
                <bean parent="Uif-MessageField" p:messageText="@{#line.ruleTypeInfo.instruction}"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-RuleEdit-Links" parent="KRMS-RuleEdit-Links">
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Compare to Canonical" p:methodToCall="compareRules">
                    <property name="toolTip">
                        <bean parent="Uif-Tooltip" p:tooltipContent="Compare CLU and CO Rules"/>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Edit Rule" p:methodToCall="goToRuleView"/>
                <bean parent="Uif-ActionLink" p:actionLabel="Delete Rule" p:methodToCall="deleteRule"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-RuleView-Links" parent="KRMS-RuleView-Links">
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Compare to Canonical" p:methodToCall="compareRules">
                    <property name="toolTip">
                        <bean parent="Uif-Tooltip" p:tooltipContent="Compare CLU and CO Rules"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KSCO-ViewTree-Section" parent="KRMS-ViewTree-Section">
        <property name="propertyName" value="viewTree"/>
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <ref bean="KSCO-ListItems-DataGroup"/>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KSCO-ListItems-DataGroup" parent="KRMS-ListItems-DataGroup-parent" p:renderAddLine="false">
        <property name="layoutManager">
            <bean parent="Uif-StackedCollectionLayout-WithBoxItems" class="org.kuali.student.enrollment.class1.krms.HorizontalActionsStackedLayoutManager">
                <property name="actionsInLineGroup" value="false"/>
                <property name="lineGroupPrototype">
                    <bean parent="Uif-CollectionHorizontalBoxItem">
                        <property name="cssClasses">
                            <list merge="true">
                                <value>krms-stackedPreviewItem</value>
                            </list>
                        </property>
                        <property name="renderFooter" value="true"/>
                    </bean>
                </property>
                <property name="subCollectionFieldGroupPrototype">
                    <bean parent="Uif-VerticalFieldGroup" p:fieldLabel.render="false"
                          p:cssClasses="uif-subCollection"/>
                </property>
                <property name="cssClasses">
                    <list merge="true">
                        <value>krms-stackedCollectionLayout</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.CluGroup" />
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="@{#line.title}" p:render="@{#line.showTitle}"/>
            </list>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-ActionLink" p:actionScript="show(e);" p:render="@{#line.showTitle}"
                      p:actionLabel="Show Courses">
                    <property name="actionImage">
                        <null/>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionScript="hide(e);" p:render="@{#line.showTitle}"
                      p:actionLabel="Hide Courses" p:style="margin-left: 1em;">
                    <property name="actionImage">
                        <null/>
                    </property>
                </bean>
            </list>
        </property>
        <property name="subCollections">
            <list>
                <ref bean="KSCO-ListItems-SubGroup" />
            </list>
        </property>
    </bean>

    <bean id="KS-SimpleTableCollectionLayout" parent="Uif-TableCollectionLayout" class="org.kuali.student.enrollment.class1.krms.SimpleTableLayoutManager">
        <property name="cssClasses">
            <list>
                <value>uif-simpleTableCollectionLayout</value>
            </list>
        </property>
        <property name="applyAlternatingRowStyles" value="false"/>
        <property name="renderAlternatingHeaderColumns" value="false"/>
        <property name="generateAutoSequence" value ="true"/>
        <property name="richTable">
            <bean parent="Uif-PagedRichTable">
                <property name="render" value="false"/>
            </bean>
        </property>
        <property name="renderSequenceField" value="false" />
    </bean>

    <bean id="KSCO-ListItems-SubGroup" parent="Uif-TableCollectionGroup" p:renderAddLine="false">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class1.krms.dto.CluCore" />
        <property name="propertyName" value="clus" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager">
            <ref bean="KS-SimpleTableCollectionLayout"/>
        </property>

        <property name="lineActions">
            <list></list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:propertyName="code"/>
                <bean parent="Uif-DataField" p:propertyName="shortName"/>
                <bean parent="Uif-DataField" p:propertyName="credits"/>
            </list>
        </property>
    </bean>

    <bean name="KSCO-RuleMaintenance-Page-Parent" parent="KRMS-RuleMaintenance-Page-Parent">
        <property name="headerText" value="@{#dp.cluDescription}"/>
        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Course Offering Requisites"/>
                    <property name="url.controllerMapping" value="/courseOfferingRules"/>
                    <property name="url.viewType" value="MAINTENANCE"/>
                    <property name="url.methodToCall" value="maintenanceEdit"/>
                    <property name="url.requestParameters">
                        <map key-type="java.lang.String" merge="true">
                            <entry key="dataObjectClassName"
                                   value="org.kuali.student.enrollment.class1.krms.dto.CORuleManagementWrapper"/>
                            <entry key="viewName" value="COAgendaManagementView"/>
                            <entry key="overrideKeys" value="refObjectId"/>
                            <entry key="refObjectId" value="@{#dp.refObjectId}"/>
                        </map>
                    </property>
                </bean>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label"
                              value="@{#dp.ruleEditor.dummy == true ? 'Add' : 'Edit'} @{#dp.ruleEditor.ruleTypeInfo.description}"/>
                </bean>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HeaderFour" p:headerText="@{#dp.ruleEditor.dummy == true ? 'Add' : 'Edit'} @{#dp.ruleEditor.ruleTypeInfo.description}"/>
                <ref bean="KSCO-Rules-ManageSection"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-Rules-ManageSection" parent="KRMS-Rules-ManageSection">
        <property name="items">
            <list>
                <ref bean="KSCO-RuleHeader-BoxSection"/>
                <ref bean="KSCO-RuleEdit-TabSection"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-RuleHeader-BoxSection" parent="KRMS-RuleHeader-BoxSection">
        <property name="items">
            <list>
                <ref bean="KRMS-RuleHeader-Section"/>
                <bean id="KSCO-RulePreview-ActionLinks" parent="KSCO-RulePreview-Links" p:style="float: right"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-RulePreview-Links" parent="KRMS-RulePreview-Links">
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Compare to Canonical" p:methodToCall="compareRules">
                    <property name="toolTip">
                        <bean parent="Uif-Tooltip" p:tooltipContent="Compare CLU and CO Rules"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KSCO-RuleEdit-TabSection" parent="KRMS-RuleEdit-TabSection">
        <property name="items">
            <list>
                <ref bean="KSCO-EditWithObject-EditSection"/>
                <ref bean="KSCO-EditWithLogic-EditSection"/>
            </list>
        </property>
        <property name="tabsWidget">
            <ref bean="KSCO-TabsWidget"/>
        </property>
    </bean>

    <bean id="KSCO-TabsWidget" parent="KRMS-TabsWidget">
        <property name="templateOptions">
            <map>
                <entry key="selected" value="0"/>
                <entry key="select"
                       value="function(event, ui) {ajaxCallOnTabSelect(event, ui, 'KRMS-RuleEditor-TreeGroup', 'KSCO-EditWithLogic-EditGroup');}"/>
            </map>
        </property>
    </bean>

    <bean id="KSCO-EditWithObject-EditSection" parent="KRMS-EditWithObject-EditSection-parent">
        <property name="items">
            <list>
                <bean parent="KSCO-EditWithObject-EditGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-EditWithObject-EditGroup" parent="KRMS-EditWithObject-EditGroup">
        <property name="headerText" value="Proposition Tree"/>
        <property name="items">
            <list>
                <ref bean="KSCO-EditRule-ToolbarSection"/>
                <ref bean="KRMS-RuleEditor-TreeExpandCollapse"/>
                <ref bean="KRMS-RuleEditor-TreeGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-EditRule-ToolbarSection" parent="KS-Uif-HorizontalBoxSection-ToolbarSection">
        <property name="onDocumentReadyScript" value="loadControlsInit();"/>
        <property name="items">
            <list>

                <bean parent="KS-HorizontalBoxGroup-WithRPadding">
                    <property name="items">
                        <list>
                            <ref bean="KRMS-RuleEditorView-AddButton"/>
                            <ref bean="KRMS-RuleEditorView-EditButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-HorizontalBoxGroup-WithRPadding">
                    <property name="items">
                        <list>
                            <ref bean="KRMS-RuleEditorView-GroupButton"/>
                            <ref bean="KRMS-RuleEditorView-LeftButton"/>
                            <ref bean="KRMS-RuleEditorView-RightButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-HorizontalBoxGroup-WithRPadding">
                    <property name="items">
                        <list>
                            <ref bean="KRMS-RuleEditorView-UpButton"/>
                            <ref bean="KRMS-RuleEditorView-DownButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-HorizontalBoxGroup-WithRPadding">
                    <property name="items">
                        <list>
                            <ref bean="KRMS-RuleEditorView-CopyButton"/>
                            <ref bean="KRMS-RuleEditorView-CutButton"/>
                            <ref bean="KRMS-RuleEditorView-PasteButton"/>
                            <ref bean="KRMS-RuleEditorView-DeleteButton"/>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="KSCO-EditWithLogic-EditSection" parent="KRMS-EditWithLogic-EditSection-parent">
        <property name="items">
            <list>
                <ref bean="KSCO-EditWithLogic-EditGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-EditWithLogic-EditGroup" parent="KRMS-EditWithLogic-EditGroup">
        <property name="items">
            <list>
                <ref bean="KSCO-EditWithLogic-TreeGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-EditWithLogic-TreeGroup" parent="KRMS-EditWithLogic-TreeGroup">
        <property name="items">
            <list>
                <ref bean="KRMS-LogicArea-InputField"/>
                <ref bean="KRMS-LogicPreview-Button"/>
                <ref bean="KSCO-LogicPreview-Tree"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-LogicPreview-Tree" parent="KRMS-LogicPreview-Tree">
        <property name="items">
            <list>
                <bean parent="KSCO-PreviewTree-Section"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-PreviewTree-Section" parent="KRMS-PreviewTree-Section">
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <ref bean="KSCO-PreviewPrototype-BoxGroup"/>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KSCO-PreviewPrototype-BoxGroup" parent="KRMS-PreviewPrototype-BoxGroup">
        <property name="items">
            <list>
                <ref bean="KRMS-PrototypeHeader-BoxGroup"/>
                <ref bean="KSCO-ListItems-DataGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KSCO-RuleAdd-Links" parent="KRMS-RuleAdd-Links">
        <property name="linkSeparator" value="@{#line.dummy and #line.parent != null ? ' | ' : ''}"/>
        <property name="items">
            <list>
                <bean parent="KSCO-RulePreview-Links" p:render="@{#line.dummy and #line.parent != null}"/>
                <bean parent="Uif-ActionLink" p:actionLabel="Add Rule" p:methodToCall="addRule"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"/>
            </list>
        </property>
    </bean>

</beans>
