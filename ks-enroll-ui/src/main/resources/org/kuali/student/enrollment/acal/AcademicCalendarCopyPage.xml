<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
       This page allows user to copy previous acals.
    -->
    <bean id="KS-AcademicCalendar-CopyPage" parent="Uif-Page"
          p:id="academicCalendarCopyPage"
          p:headerText="Create New Academic Calendar"
          p:disclosure.render="false">
        <property name="header">
            <bean parent="Uif-HeaderTwo">
                <property name="cssClasses">
                    <list merge="true">
                        <value>ks-header</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="header.lowerGroup">
                <bean parent="Uif-VerticalBoxGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Message"
                                  p:messageText="When copying an Academic Calendar, all term and milestone names, as well as dates and times from the source calendar are copied."
                                  p:style="margin-bottom:0;"/>
                            <bean parent="Uif-ActionLink" p:methodToCall="createBlankCalendar" p:actionLabel="Start a blank calendar instead?"/>
                        </list>
                    </property>
                </bean>
        </property>

        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="Calendars"/>
                    <property name="url.viewId" value="calendarSearchView"/>
                    <property name="url.controllerMapping" value="/calendarSearch"/>
                    <property name="url.methodToCall" value="start"/>
                </bean>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="New Academic Calendar"/>
                </bean>
            </list>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection"
                      p:style="margin-bottom:0; padding-bottom:0;">
                    <property name="items">
                        <list>
                            <ref bean="KS-AcademicCalendar-CopyPage-From"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-SecondaryActionButton"
                              p:methodToCall="copy"
                              p:actionLabel="Copy Academic Calendar"
                              p:render="@{academicCalendarInfo != null}"/>
                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:actionScript="stepBrowserBack()"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KS-AcademicCalendar-CopyPage-From" parent="Uif-VerticalBoxSubSection"
          p:headerText="Copy From:">
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxGroup"
                      p:render="@{copyFromAcal != null}">
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField"
                                  p:propertyName="copyFromAcal.name"
                                  p:id="copyFromAcalName"
                                  p:style="font-size:125%;"
                                  p:showLabel="false"/>
                            <bean parent="Uif-DataField"
                                  p:propertyName="copyFromAcal.startDate"
                                  p:label="Start Date"/>
                            <bean parent="Uif-DataField"
                                  p:propertyName="copyFromAcal.endDate"
                                  p:label="End Date"/>
                        </list>
                    </property>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>ks-calendar-copy-from</value>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Message"
                      p:messageText="A recent academic calendar could not be found."
                      p:render="@{copyFromAcal == null}"
                      p:style="font-size:125%;"/>
                <bean parent="Uif-ActionLink" p:methodToCall="search"
                      p:actionLabel="@{copyFromAcal != null ? 'Choose a Different Calendar' : 'Choose a Calendar'}"/>
            </list>
        </property>
    </bean>

</beans>