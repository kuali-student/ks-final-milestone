    <bean id="KS-DiagnoseRollover-SelectTermPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="selectCOToDiagnose"
          p:headerText="Diagnose Rollover">
        <!-- It's easier to put the footer up front since it has a lot less content -->
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean parent="Uif-PrimaryActionButton" p:performClientSideValidation="true" p:actionLabel="Rollover Course Offering"
                              p:methodToCall="performCoRollover" p:disabled="@{isRolloverButtonDisabled}"/>
                        <bean parent="Uif-PrimaryActionButton" p:performClientSideValidation="true" p:actionLabel="Delete CO in Target"
                              p:methodToCall="deleteCoInTargetTerm" p:disabled="@{isDeleteCoButtonDisabled}"/>
                        <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:methodToCall="cancel"/>
                    </list>
                </property>
            </bean>
        </property> <!-- End of footer -->
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxGroup" p:style="min-width:17cm">
                    <property name="items">
                        <list>
                            <!-- Select Source Term -->
                            <bean parent="Uif-VerticalBoxSubSection" p:headerText="Select Source Term and Course Offering Code">
                                <property name="validationMessages">
                                    <bean parent="Uif-GroupValidationMessages">
                                        <property name="displayFieldLabelWithMessages" value="false"/>
                                    </bean>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Message" p:messageText="Enter source term and course offering code"/>
                                        <bean parent="Uif-HorizontalBoxSubSection" p:colSpan="1">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalFieldGroup" p:required="true" p:label="Source Term and CO Code" p:labelPlacement="TOP">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-InputField" p:propertyName="sourceTermCode" p:required="true">
                                                                    <property name="control">
                                                                        <bean parent="Uif-TextControl" p:size="6" p:watermarkText="20122" p:minLength="5" p:maxLength="6"/>
                                                                    </property>
                                                                </bean>
                                                                <bean parent="Uif-InputField" p:propertyName="courseOfferingCode"
                                                                      p:required="true">
                                                                    <property name="control">
                                                                        <bean parent="Uif-TextControl" p:size="10" p:watermarkText="CHEM152" p:minLength="7" p:maxLength="10"/>
                                                                    </property>
                                                                </bean>
                                                                <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Go" p:methodToCall="goSourceCO" p:valign="middle"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-VerticalBoxSubSection" p:render="@{isCourseOfferingInfoRendered}">
                                                        <property name="items">
                                                            <list>
                                                                <!-- More stuff on right side here -->
                                                                <bean parent="Uif-DataField" p:propertyName="displayedSourceTermCode" p:label="Term Code"/>
                                                                <bean parent="Uif-DataField" p:propertyName="sourceTermStartDate" p:label="Term Start Date"/>
                                                                <bean parent="Uif-DataField" p:propertyName="sourceTermEndDate" p:label="Term End Date"/>
                                                                <bean parent="Uif-DataField" p:propertyName="displayedCourseOfferingCode" p:label="CO Code"/>
                                                                <bean parent="Uif-DataField" p:propertyName="coCodeId" p:label="COC ID"/>
                                                                <bean parent="Uif-DataField" p:propertyName="courseOfferingTitle" p:label="COC Title"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>

                                    </list>
                                </property>
                            </bean>

                            <!-- Select Target Term -->
                            <bean parent="Uif-VerticalBoxSubSection" p:headerText="Select Target Term">
                                <property name="validationMessages">
                                    <bean parent="Uif-GroupValidationMessages">
                                        <property name="displayFieldLabelWithMessages" value="false"/>
                                    </bean>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Message" p:messageText="Select term to roll course offering into"/>
                                        <bean parent="Uif-HorizontalBoxSubSection" p:colSpan="1">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-HorizontalFieldGroup" p:required="true" p:label="Target Term" p:labelPlacement="TOP">
                                                        <property name="items">
                                                            <list>
                                                                <bean parent="Uif-InputField" p:propertyName="targetTermCode"
                                                                      p:required="true">
                                                                    <property name="control">
                                                                        <bean parent="Uif-TextControl" p:size="6" p:watermarkText="20132" p:minLength="5" p:maxLength="6"/>
                                                                    </property>
                                                                </bean>
                                                                <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Go" p:methodToCall="goTargetTerm"  p:disabled="@{isGoTargetButtonDisabled}" p:valign="bottom"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="Uif-VerticalBoxSubSection" p:render="@{isTargetTermInfoRendered}">
                                                        <property name="items">
                                                            <list>
                                                                <!-- More stuff on left side here -->
                                                                <bean parent="Uif-DataField" p:propertyName="displayedTargetTermCode" p:label="Term Code"/>
                                                                <bean parent="Uif-DataField" p:propertyName="rolloverDuration" p:label="Rollover Duration"/>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>

                                    </list>
                                </property>
                            </bean>


                            <!-- Display Rollover Info -->

                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>
</beans>