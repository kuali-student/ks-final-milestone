    <bean id="ActivityOfferingEdit-SchedulePage" parent="Uif-Page" p:id="ActivityOfferingEdit-SchedulePage">
        <property name="items">
            <list>
                <ref bean="ActivityOffering-DeliveryLogistic-SchedulePage-Actuals"/>
                <ref bean="ActivityOffering-DeliveryLogistic-SchedulePage-New"/>
                <ref bean="ActivityOffering-DeliveryLogistic-SchedulePage-Requested"/>
            </list>
        </property>
        <property name="footer">
          <bean parent="Uif-FooterBase"/>
        </property>
        <property name="footer.items">
            <list>
                <bean parent="Uif-PrimaryActionButton" p:methodToCall="saveRevisedSchedules" p:actionLabel="Save Request"/>
                <bean parent="Uif-PrimaryActionButton" p:methodToCall="processRevisedSchedules" p:actionLabel="Save and Process Request"/>
                <bean parent="Uif-ActionLink" p:methodToCall="cancelScheduleRevise" p:actionLabel="Cancel" />
            </list>
        </property>
    </bean>

    <bean id="ActivityOffering-DeliveryLogistic-SchedulePage-Actuals" parent="ActivityOffering-DeliveryLogistic-Actuals">
         <property name="header.lowerGroup.render" value="false"/>
    </bean>

    <bean id="ActivityOffering-DeliveryLogistic-SchedulePage-New" parent="ActivityOffering-DeliveryLogistic-New" p:componentSecurity.viewAuthz="false">
         <property name="render" value="true"/>
    </bean>

    <bean id="ActivityOffering-DeliveryLogistic-SchedulePage-Requested" parent="ActivityOffering-DeliveryLogistic-Requested" p:componentSecurity.editAuthz="false">
        <property name="render" value="true"/>
        <property name="propertyName" value="revisedScheduleRequestComponents"/>
        <property name="lineActions">
            <list>
                <bean parent="Uif-NavigationActionLink" p:methodToCall="editScheduleComponent" p:actionLabel="Edit"/>
                <bean parent="Uif-ActionLink" p:methodToCall="deleteLine" p:actionLabel="Delete"/>
            </list>
        </property>
    </bean>

    <bean id="ActivityOffering-DeliveryLogistic-Actuals" parent="Uif-TableCollectionSection"
            p:headerText="Actual Delivery Logistics"
            p:collectionObjectClass="org.kuali.student.enrollment.class2.courseoffering.dto.ScheduleWrapper"
            p:propertyName="actualScheduleComponents"
            p:readOnly="true"
            p:layoutManager.renderSequenceField="false">
        <property name="header.lowerGroup">
            <bean id="reviseSchedule" parent="Uif-HorizontalBoxGroup" p:componentSecurity.viewAuthz="true">
                <property name="render" value="@{scheduleCompleted and #actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"/>
                <property name="items">
                    <list>
                        <bean parent="Uif-ActionLink" p:methodToCall="reviseSchedule" p:actionLabel="Revise" />
                    </list>
                </property>
            </bean>
        </property>
        <property name="layoutManager.richTable.render" value="false" />
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:label="TBA" p:propertyName="tbaUI"/>
                <bean parent="Uif-DataField" p:label="Days" p:propertyName="daysUI"/>
                <bean parent="Uif-DataField" p:label="Start Time" p:propertyName="startTimeUI"/>
                <bean parent="Uif-DataField" p:label="End Time" p:propertyName="endTimeUI"/>
                <bean parent="Uif-DataField" p:label="Facility" p:propertyName="buildingName"/>
                <bean parent="Uif-DataField" p:label="Room" p:propertyName="roomCode"/>
                <!--<bean parent="Uif-InputField" p:label="Capacity" p:propertyName="roomCapacity" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="5"/>
                    </property>
                </bean>-->
                <bean parent="Uif-MessageField" p:messageText="F" p:label="Features">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="N/A"/>
                      </property>
                </bean>
            </list>
        </property>
        <property name="propertyReplacers">
              <list>
                <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="headerText"
                      p:condition="@{!scheduleCompleted}" p:replacement="Actual Delivery Logistics (Unassigned)"/>
              </list>
         </property>
    </bean>

    <bean id="ActivityOffering-DeliveryLogistic-Requested" parent="Uif-TableCollectionSection"
            p:collectionObjectClass="org.kuali.student.enrollment.class2.courseoffering.dto.ScheduleWrapper"
            p:propertyName="requestedScheduleComponents"
            p:render="@{!scheduleCompleted}"
            p:renderAddLine="false"
            p:layoutManager.renderSequenceField="false"
            p:componentSecurity.editAuthz="true">
        <property name="headerText" value="Requested Delivery Logistics"/>
        <property name="layoutManager.richTable.render" value="false" />
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:label="TBA" p:propertyName="tbaUI"/>
                <bean parent="Uif-DataField" p:label="Days" p:propertyName="daysUI"/>
                <bean parent="Uif-DataField" p:label="Start Time" p:propertyName="startTimeUI"/>
                <bean parent="Uif-DataField" p:label="End Time" p:propertyName="endTimeUI"/>
                <bean parent="Uif-DataField" p:label="Facility" p:propertyName="buildingName"/>
                <bean parent="Uif-DataField" p:label="Room" p:propertyName="roomName"/>
                <bean parent="Uif-ImageField" p:label="Options" p:hidden="@{#lp.colocatedAOs == null or #lp.colocatedAOs.isEmpty()}" p:image.altText="@{#lp.editRenderHelper.colocatedAOs}"
                    p:source="@{#ConfigProperties['ks.externalizable.images.url']}/colocate_icon.png">
                    <property name="toolTip">
                       <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="@{#lp.editRenderHelper.colocatedAOs}"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ActivityOffering-DeliveryLogistic-New" parent="Uif-VerticalBoxSection" p:style="background-color:#f3f3f3; padding-top:4px; padding-left:4px; padding-bottom:4px; border: 1px solid black;" p:render="@{!scheduleCompleted}" p:componentSecurity.viewAuthz="true">
        <property name="headerText" value="Submit New Request"/>
        <property name="items">
            <list>
                <ref bean="ActivityOffering-DeliveryLogistic-New-Section"/>
                <bean id="ActivityOffering-CoLocated-checkbox" parent="Uif-InputField" p:propertyName="newScheduleRequest.colocatedAOs" p:forceSessionPersistence="true">
                    <property name="label" value="Colocate With"/>
                    <property name="control">
                        <bean parent="Uif-HorizontalCheckboxesControl">
                            <property name="onClickScript" value="onColoCheckBoxChange();"/>
                        </bean>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.ColocatedAOsKeyValues" p:addBlankOption="false" />
                    </property>
                </bean>
                <ref bean="ActivityOffering-DeliveryLogistic-New-Features-Section"/>
                <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="@{deliveryLogisiticsAddButtonText}" p:methodToCall="addScheduleComponent" p:successCallback="addScheduleCallBack();"/>
            </list>
        </property>
    </bean>

    <bean id="ActivityOffering-DeliveryLogistic-New-Features-Section" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="disclosure.defaultOpen" value="false"/>
        <property name="header">
            <bean parent="Uif-HeaderSix" p:headerText="Optional Facility Features"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:id='featuresList' p:propertyName="newScheduleRequest.features" p:label="Features" p:readOnlyDisplayReplacementPropertyName="newScheduleRequest.featuresUI"
                        p:instructionalText="Any features requested will reduce the room assignement possibilities (we only have so many rooms with operable windows!)">
                  <property name="control">
                    <bean parent="Uif-DropdownControl" p:multiple="true" p:size="7" p:options-ref="features-options"/>
                  </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Clear selections" p:preSubmitCall="clearFeaturesSelected();"/>
            </list>
        </property>
    </bean>

    <bean id="ActivityOffering-DeliveryLogistic-New-Section" parent="Uif-HorizontalBoxSubSection" p:id="requestedDeliveryLogistic">
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelRight" p:propertyName="newScheduleRequest.tba" p:label="TBA" p:style="margin-top:15px">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl"/>
                    </property>
                </bean>
                <bean parent="KSInputField" p:label="Days" p:propertyName="newScheduleRequest.days" p:defaultValue="mt" p:uppercaseValue="true">
                    <property name="constraintText" value="MTWHFSU"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="10"/>
                    </property>
                    <property name="validCharactersConstraint">
						<bean parent="CharsetPatternConstraint" p:validChars="MTWHFSUmtwhfsu" p:messageKey="validation.enroll.ao.scheduleValidChars"/>
					</property>
                </bean>
                <bean parent="KSInputField" p:label="Start Time" p:propertyName="newScheduleRequest.startTime">
                    <property name="constraintText" value="HH:MM"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="5"/>
                    </property>
                    <property name="validCharactersConstraint">
                        <bean parent="TimePatternConstraint" />
                    </property>
                    <property name="dependencyConstraints">
                        <list>
                          <bean parent="PrerequisiteConstraint" p:propertyName="newScheduleRequest.startTimeAMPM"/>
                        </list>
                    </property>
                </bean>
                <bean parent="KSInputField" p:label="" p:propertyName="newScheduleRequest.startTimeAMPM" p:style="margin-top:15px">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:options-ref="AmPm-Options"/>
                    </property>
                </bean>
                <bean parent="KSInputField" p:label="End Time" p:propertyName="newScheduleRequest.endTime">
                    <property name="constraintText" value="HH:MM"/>
                     <property name="control">
                        <bean parent="Uif-TextControl" p:size="5"/>
                    </property>
                    <property name="validCharactersConstraint">
                        <bean parent="TimePatternConstraint" />
                    </property>
                </bean>
                <bean parent="KSInputField" p:label="" p:propertyName="newScheduleRequest.endTimeAMPM" p:style="margin-top:15px">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:options-ref="AmPm-Options"/>
                    </property>
                </bean>
                <bean parent="KSInputField" p:label="Facility" p:propertyName="newScheduleRequest.buildingCode" p:uppercaseValue="true" p:defaultValue="PHY" p:propertyNamesForAdditionalDisplay="newScheduleRequest.editRenderHelper.buildingName">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20"/>
                    </property>
                    <!--<property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.room.dto.BuildingInfo"/>
                        <property name="quickfinder.fieldConversions">
                            <map>
                                <entry key="buildingCode" value="newScheduleRequest.buildingCode"/>
                            </map>
                    </property>-->
                    <property name="suggest">
                        <bean parent="Uif-Suggest" p:render="true" p:sourcePropertyName="buildingCode"
                              p:suggestQuery.dataObjectClassName="org.kuali.student.r2.core.room.dto.BuildingInfo">
                          <property name="suggestQuery">
                            <bean parent="Uif-AttributeQueryConfig" p:queryMethodToCall="retrieveBuildingInfo" p:queryFieldMapping="newScheduleRequest.buildingCode:buildingCode" p:returnFieldMapping="buildingCode:newScheduleRequest.buildingCode,name:newScheduleRequest.editRenderHelper.buildingName"/>
                          </property>
                          <property name="templateOptions">
                            <map merge="true">
                              <entry key="minLength" value="1"/>
                            </map>
                          </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="KSInputField" p:label="Room" p:propertyName="newScheduleRequest.roomCode" p:defaultValue="3120">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20"/>
                    </property>
                     <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.room.dto.RoomInfo"/>
                    <property name="quickfinder.autoSearch" value="true"/>
                    <property name="quickfinder.fieldConversions">
                        <map>
                            <entry key="roomCode" value="newScheduleRequest.roomCode"/>
                        </map>
                    </property>
                    <property name="quickfinder.lookupParameters">
                        <map>
                            <entry key="newScheduleRequest.buildingCode" value="buildingCode"/>
                        </map>
                    </property>
                </bean>
                <!--<bean parent="KSInputField" p:label="Capacity" p:propertyName="newScheduleRequest.roomCapacity" p:readOnly="true"/>-->
            </list>
        </property>
    </bean>

</beans>