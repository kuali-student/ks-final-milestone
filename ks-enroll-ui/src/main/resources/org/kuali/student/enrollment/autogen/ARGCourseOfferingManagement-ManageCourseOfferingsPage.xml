    <bean id="ARGCourseOfferingInfo" parent="CourseOfferingInfo-parent">
        <property name="titleAttribute" value="id"/>
    </bean>

    <bean id="KS-ARGCourseOfferingManagement-ManageCourseOfferingsPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="argManageCourseOfferingsPage">
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-CriteriaSection"/>
                <ref bean="KS-ARGCourseOfferingManagement-CourseOfferingResultSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ARGCourseOfferingManagement-CourseOfferingResultSection" parent="Uif-VerticalBoxSection" p:id="argSearchResultSection">
        <!-- turn off the authz to get ARG screen to work -->
        <!--<property name="componentSecurity.viewAuthz" value="true"/>-->
        <property name="headerText" value="@{subjectCode} - @{subjectCodeDescription}" />
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>

                <bean id="KS-ARGCourseOfferingManagement-ApproveSubj" parent="Uif-ActionLink" p:preSubmitCall="return confirm('This will mark all Activity Offerings in this Subject Code as: Ready for Scheduling')"
                      p:methodToCall="markSubjectCodeReadyForScheduling"
                      p:actionLabel="Approve Subject Code for Scheduling" p:disabled="@{#parent.readOnly}"/>
                <ref bean="KS-CourseOfferingManagement-CO-ToolBarSection"/>
                <ref bean="KS-ARGCourseOfferingManagement-CourseOfferingListSection"/>
            </list>
        </property>
    </bean>


    <bean id="KS-ARGCourseOfferingManagement-CourseOfferingListSection" parent="Uif-TableCollectionSection" p:renderAddLine="false"
          p:onDocumentReadyScript="removeColumns(@{#parent.readOnly}, [1], 'KS-CourseOfferingManagement-CourseOfferingListSection'); addActionColumn(@{#parent.readOnly}, 'KS-CourseOfferingManagement-CourseOfferingListSection');">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingListSectionWrapper" />
        <property name="propertyName" value="courseOfferingResultList" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 1, 'asc' ]]"/>
                <entry key="bPaginate" value="false"/>
                <entry key="bAutoWidth" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="isChecked" p:required="false" p:onChangeScript="handleCOToolbar();" p:hidden="@{#lp.crossListed}">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:disabled="false"/>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:fieldLabel.labelText="CODE">
                    <property name="label" value="Label"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:propertyName="courseOfferingCode">
                                <property name="inquiry">
                                    <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingEditWrapper"  p:inquiryParameters="courseOfferingId" />
                                </property>
                            </bean>
                            <bean parent="Uif-ImageField" p:hidden="@{#lp.alternateCOCodes.isEmpty()}" p:image.altText="@{#lp.crossListedCodesUI}" p:source="@{#ConfigProperties['ks.externalizable.images.url']}/cross-listed.png">
                                <property name="toolTip">
                                    <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="@{#lp.crossListedCodesUI}"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-DataField"
                      p:label="STATUS"
                      p:propertyName="courseOfferingStateDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="TITLE"
                      p:propertyName="courseOfferingDesc"/>
                <bean parent="Uif-DataField"
                      p:label="CREDITS"
                      p:propertyName="courseOfferingCreditOptionDisplay"/>
                <bean parent="Uif-DataField"
                      p:label="GRADING"
                      p:propertyName="courseOfferingGradingOptionDisplay"/>
                <bean name="enableApproveButton" parent="Uif-InputField" p:propertyName="enableApproveButton"/>
                <bean name="enableSuspendButton" parent="Uif-InputField" p:propertyName="enableSuspendButton"/>
                <bean name="enableCancelButton" parent="Uif-InputField" p:propertyName="enableCancelButton"/>
                <bean name="enableReinstateButton" parent="Uif-InputField" p:propertyName="enableReinstateButton" />
                <bean name="enableDeleteButton" parent="Uif-InputField" p:propertyName="enableDeleteButton" />
                <bean name="enableCopyCOActionLink" parent="Uif-InputField" p:propertyName="enableCopyCOActionLink" />
                <bean name="enableEditCOActionLink" parent="Uif-InputField" p:propertyName="enableEditCOActionLink" />
            </list>
        </property>
        <property name="layoutManager.richTable.hiddenColumns">
            <set>
                <value>enableApproveButton</value>
                <value>enableSuspendButton</value>
                <value>enableCancelButton</value>
                <value>enableReinstateButton</value>
                <value>enableDeleteButton</value>
                <value>enableCopyCOActionLink</value>
                <value>enableEditCOActionLink</value>
            </set>
        </property>
        <property name="layoutManager.actionFieldPrototype">
            <bean parent="Uif-HorizontalFieldGroup" p:align="left" p:required="false" p:label="ACTIONS"/>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-NavigationActionLink" p:methodToCall="copyCourseOffering" p:actionLabel="Copy" p:render="@{#line.isEnableCopyCOActionLink()}" p:actionEvent="copyCOonManageCOsPage"/>
                <bean parent="Uif-NavigationActionLink" p:methodToCall="edit" p:actionLabel="Edit" p:render="@{#line.isEnableEditCOActionLink()}" p:actionEvent="editCOonManageCOsPage"/>
                <bean parent="Uif-NavigationActionLink" p:methodToCall="loadAOs" p:actionLabel="Manage"/>
            </list>
        </property>
    </bean>

</beans>
