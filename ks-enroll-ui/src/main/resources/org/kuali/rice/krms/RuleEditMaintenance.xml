<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <bean id="RuleMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.rice.krms.dto.RuleEditor"/>
        <property name="maintainableClass" value="org.kuali.rice.krms.service.impl.RuleEditorMaintainableImpl"/>
        <property name="documentTypeName" value="RuleMaintenanceDocument"/>
        <property name="businessRulesClass" value="org.kuali.rice.krms.util.RuleEditorBusRule"/>
        <property name="lockingKeys">
            <list>
                <value>id</value>
            </list>
        </property>
    </bean>

    <bean id="AgendaEditor" parent="AgendaEditor-parentBean"/>
    <bean id="AgendaEditor-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.rice.krms.dto.AgendaEditor"/>
        <property name="titleAttribute" value="id"/>
        <property name="attributes">
            <list>
            </list>
        </property>
        <property name="objectLabel" value="Agenda"/>
        <property name="primaryKeys">
            <list>
                <value>id</value>
            </list>
        </property>
    </bean>

    <bean id="RuleEditor" parent="RuleEditor-parentBean"/>
    <bean id="RuleEditor-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.rice.krms.dto.RuleEditor"/>
        <property name="titleAttribute" value="id"/>
        <property name="attributes">
            <list>
            </list>
        </property>
        <property name="objectLabel" value="Rule"/>
        <property name="primaryKeys">
            <list>
                <value>id</value>
            </list>
        </property>
    </bean>

    <bean id="KS-EditWithLogic-EditGroup" parent="Uif-VerticalBoxGroup"
          p:style="padding: 5px; margin: 5px; background: white; margin-top:null" p:forceSessionPersistence="true">
        <property name="items">
            <list>

                <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
                <!-- also, the bogus refreshWhenChanged is important because it puts a RuleEditorView-TreeGroup_refreshWrapper around the group that
                    is needed for the javascript hack that is refreshing -->
                <bean id="KS-EditWithLogic-TreeGroup" parent="Uif-VerticalBoxGroup"
                      p:style="margin-bottom: 5pt; margin-top: 0em;" p:refreshWhenChangedPropertyNames="this.is.a.hack">
                    <property name="layoutManager.orientation" value="VERTICAL"/>
                    <property name="items">
                        <list>
                            <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
                            <bean id="LogicArea_InputField" parent="Uif-InputField" p:propertyName="logicArea"
                                  p:style="margin-left: 5px; margin-top: 5px">
                                <property name="control">
                                    <bean parent="Uif-MediumTextAreaControl" p:style="width:612px"/>
                                </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton-Small" p:style="margin-left: 5px"
                                  p:methodToCall="updatePreview">
                                <property name="actionLabel" value="Preview Change"/>
                            </bean>
                            <bean id="LogicPreview-Tree" parent="Uif-VerticalBoxGroup" p:cssClasses="editModeNode"
                                  p:width="50%" p:style="border: 1px solid #999999">
                                <property name="items">
                                    <list>
                                        <bean parent="KS-PreviewTree-Section"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-EditWithObject-EditGroup" parent="Uif-VerticalBoxGroup"
          p:style="padding: 5px; margin: 5px; background: white; margin-top:null ">
        <property name="headerText" value="Proposition Tree"/>
        <property name="items">
            <list>

                <bean parent="RuleStudentEditorView-TreeExpandCollapse"/>

                <bean parent="Uif-GridGroup" p:style="margin-bottom: 5pt; margin-top:null 0em;">
                    <property name="items">
                        <list>
                            <bean parent="RuleStudentEditorView-RuleTreeEditControls"/>
                        </list>
                    </property>
                </bean>
                <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
                <!-- also, the bogus refreshWhenChanged is important because it puts a RuleEditorView-TreeGroup_refreshWrapper around the group that
                    is needed for the javascript hack that is refreshing -->
                <bean id="RuleStudentEditorView-TreeGroup" parent="Uif-VerticalBoxGroup"
                      p:style="margin-bottom: 5pt; margin-top: 0em;" p:refreshWhenChangedPropertyNames="this.is.a.hack">
                    <property name="layoutManager.orientation" value="VERTICAL"/>
                    <property name="items">
                        <list>
                            <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
                            <bean parent="Uif-Message" p:messageText="Click on rule statement to edit"
                                  p:style="font-weight:bold;margin-left: 2em;"/>
                            <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
                            <bean id="RuleStudentEditorView-Tree" parent="KS-RulerEditor-TreeSection-parent"
                                  p:forceSessionPersistence="true"/>
                            <bean id="proposition_selected" parent="KS-Rules-HiddenField" p:propertyName="selectedKey"/>
                            <bean id="proposition_copy" parent="KS-Rules-HiddenField" p:propertyName="copyKey"/>
                            <bean id="proposition_cut" parent="KS-Rules-HiddenField" p:propertyName="cutKey"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-Rules-HiddenField" parent="Uif-InputField" p:showLabel="false">
        <property name="control">
            <bean parent="Uif-HiddenControl"/>
        </property>
    </bean>

    <bean id="KS-PropKey-HiddenField" parent="KS-Rules-HiddenField" p:propertyName="proposition.key"
          p:showLabel="false" p:label="id" p:maxLength="255">
        <property name="control">
            <bean parent="Uif-HiddenControl" p:cssClasses="hiddenId"/>
        </property>
    </bean>

    <bean id="RuleStudentEditorView-TreeExpandCollapse" parent="Uif-HorizontalFieldGroup" p:showLabel="false">
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionScript="jq('.jstree').jstree('open_all');"
                      p:actionLabel="[+] expand all" p:style="margin-left: 2em;">
                    <property name="actionImage">
                        <null/>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionScript="jq('.jstree').jstree('close_all');"
                      p:actionLabel="[-] collapse all" p:style="margin-right: 15pt;margin-left:1em">
                    <property name="actionImage">
                        <null/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-RuleEditorView-Button" parent="Uif-Action" p:actionImagePlacement="TOP" p:style="font-size: 10px"
          abstract="true">
        <property name="cssClasses">
            <list merge="true">
                <value>tree-bar-button</value>
            </list>
        </property>
    </bean>

    <bean id="RuleStudentEditorView-RuleTreeEditControls" parent="Uif-HorizontalBoxSection">

        <property name="onDocumentReadyScript" value="loadControlsInit();"/>

        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxGroup" p:style="padding-right: 20px; padding-left:20px">
                    <property name="items">
                        <list>
                            <bean parent="KS-RuleEditorView-Button" p:actionScript="ajaxCallPropositionTree('addProposition','RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Add Rule Statement"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconAdd.png"
                                          p:altText="Add"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-add-button</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="KS-RuleEditorView-Button" p:actionScript="ajaxCallPropositionTree('goToEditProposition', 'RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Edit"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconEdit.png"
                                          p:altText="Edit Proposition"/>
                                </property>

                            </bean>

                            <bean parent="KS-RuleEditorView-Button"
                                  p:actionScript="ajaxCallPropositionTree('togglePropositionSimpleCompound','RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Add Parent"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconGroup.png"
                                          p:altText="Add Parent"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-HorizontalBoxGroup" p:style="padding-right: 20px">
                    <property name="items">
                        <list>
                            <bean parent="KS-RuleEditorView-Button"
                                  p:actionScript="ajaxCallPropositionTree('movePropositionLeft','RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Move Left"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconLeft.png"
                                          p:altText="Left"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-move-button</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="KS-RuleEditorView-Button"
                                  p:actionScript="ajaxCallPropositionTree('movePropositionRight','RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Move Right"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconRight.png"
                                          p:altText="Right"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-move-button</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="KS-RuleEditorView-Button"
                                  p:actionScript="ajaxCallPropositionTree('movePropositionUp','RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Move Up"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconUp.png"
                                          p:altText="Up"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-move-button</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="KS-RuleEditorView-Button"
                                  p:actionScript="ajaxCallPropositionTree('movePropositionDown','RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Move Down"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconDown.png"
                                          p:altText="Down"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-move-button</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-HorizontalBoxGroup" p:style="padding-right: 20px">
                    <property name="items">
                        <list>
                            <bean parent="KS-RuleEditorView-Button" p:actionScript="ajaxCopyPropositionTree();"
                                  p:actionLabel="Copy"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconCopy.png"
                                          p:altText="Copy"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-cut-button</value>
                                        <value>kr-copy-button</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="KS-RuleEditorView-Button" p:actionScript="ajaxCutPropositionTree();"
                                  p:actionLabel="Cut"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconCut.png"
                                          p:altText="Cut"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-cut-button</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="KS-RuleEditorView-Button" p:actionScript="ajaxPastePropositionTree('pasteProposition', 'RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Paste"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');">
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconPaste.png"
                                          p:altText="Paste"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-paste-button</value>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="KS-RuleEditorView-Button"
                                  p:actionScript="ajaxCallPropositionTree('deleteProposition','RuleStudentEditorView-TreeGroup');"
                                  p:actionLabel="Delete"
                                  p:onMouseDownScript="jq(this).addClass('tree-bar-button-selected');"
                                  p:onMouseUpScript="jq(this).removeClass('tree-bar-button-selected');"> <!-- Horiz whitespace -->
                                <property name="actionImage">
                                    <bean parent="Uif-Image"
                                          p:source="@{#ConfigProperties['application.url']}/ks-enroll/css/images/iconDelete.png"
                                          p:altText="Delete"/>
                                </property>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>kr-delete-button</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-RulerEditor-TreeSection-parent" parent="Uif-TreeSection" p:disclosure.render="false"
          p:header.render="false"
          p:style="float:left; margin-left: 2em;" p:forceSessionPersistence="true">
        <property name="propertyName" value="editTree"/>
        <property name="validationMessages.displayMessages" value="true"/>
        <property name="validationMessages.displayFieldLabelWithMessages" value="false"/>
        <property name="tree">
            <bean parent="RuleTreeWidget">
                <property name="templateOptions">
                    <map>
                        <entry key="'plugins'"
                               value="['themes','html_data', 'ui', 'crrm', 'dnd']"/>
                        <entry key="'themes'"
                               value="{'theme':'default','dots':'false','icons':'false'}"/>
                        <entry key="'ui'" value="{ 'select_limit' : 1 }"/>
                        <entry key="'dnd'" value="{ 'drag_target' : false, 'drop_target' : false }"/>
                    </map>
                </property>
            </bean>
        </property>
        <property name="nodePrototypeMap">
            <map key-type="java.lang.Class">
                <entry key="#{ T(org.kuali.rice.krms.tree.node.RuleEditorTreeNode) }">
                    <bean parent="KS-RuleTreeNodePrototype"/>
                </entry>
                <entry key="#{ T(org.kuali.student.enrollment.class1.krms.tree.node.KSSimplePropositionNode) }">
                    <bean parent="KS-SimplePropositionNodePrototype"/>
                </entry>
                <entry key="#{ T(org.kuali.student.enrollment.class1.krms.tree.node.KSSimplePropositionEditNode) }">
                    <bean parent="KS-SimplePropositionEditNodePrototype"/>
                </entry>
                <entry key="#{ T(org.kuali.student.enrollment.class1.krms.tree.node.KSCompoundOpCodeNode) }">
                    <bean parent="KS-CompoundOpCodeNodePrototype"/>
                </entry>
                <entry key="#{ T(org.kuali.student.enrollment.class1.krms.tree.node.KSCompoundPropositionEditNode) }">
                    <bean parent="KS-CompoundPropositionEditNodePrototype"/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="KS-RuleTreeNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
        <property name="labelPrototype">
            <bean parent="Uif-Message"/>
        </property>
        <property name="dataGroupPrototype">
            <bean parent="Uif-HorizontalBoxGroup">
                <property name="items">
                    <list>

                        <bean parent="KS-PropKey-HiddenField"/>

                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KS-SimplePropositionNodePrototype" parent="KS-RuleTreeNodePrototype"/>

    <bean id="KS-SimplePropositionEditNodePrototype" parent="KS-SimplePropositionNodePrototype">
        <property name="labelPrototype">
            <bean id="RuleMessage" parent="Uif-Message">
                <property name="cssClasses">
                    <list merge="true">
                        <value>rule-message</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="dataGroupPrototype">

            <bean parent="PropositionBo-MaintenanceView-Custom-parentBean" p:cssClasses="editModeNode">
                <property name="layoutManager.orientation" value="VERTICAL"/>
            </bean>

        </property>
    </bean>

    <bean id="KS-CompoundOpCodeNodePrototype" parent="KS-RuleTreeNodePrototype">
        <property name="dataGroupPrototype">
            <bean parent="Uif-HorizontalBoxGroup"> <!--p:style="padding-bottom: 10pt;">-->
                <property name="items">
                    <list>

                        <bean parent="KS-PropKey-HiddenField"/>

                        <bean parent="Uif-InputField" p:propertyName="proposition.compoundOpCode"
                              p:style="margin-left: 12pt;" p:showLabel="false" p:label="operator" p:maxLength="20">
                            <property name="control">
                                <bean parent="Uif-DropdownControl"/>
                            </property>
                            <property name="optionsFinder">
                                <bean class="org.kuali.rice.krms.impl.ui.CompoundOpCodeValuesFinder"/>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KS-CompoundPropositionEditNodePrototype" parent="KS-CompoundOpCodeNodePrototype">
        <property name="dataGroupPrototype">
            <bean parent="Uif-HorizontalBoxGroup">
                <property name="items">
                    <list>

                        <bean parent="KS-PropKey-HiddenField"/>

                        <bean parent="Uif-InputField" p:propertyName="proposition.description"
                              p:constraintText="size 100"
                              p:showLabel="false" p:label="description" p:maxLength="255" p:style="margin-left: 12pt">
                            <property name="control">
                                <bean parent="Uif-TextControl" p:size="100" p:maxLength="100"
                                      p:watermarkText="Enter a Compound Proposition Description"
                                      p:cssClasses="editDescription"/>
                            </property>
                        </bean>

                    </list>
                </property>
            </bean>
        </property>
    </bean>

</beans>
