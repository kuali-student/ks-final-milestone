    <bean id="KRMS-AgendaManagement-View" parent="KS-Uif-MaintenanceView">
        <property name="headerText" value="Course Rule"/>
        <property name="header.style" value="border-bottom:solid 4px #000; height:26px"/>
        <property name="dataObjectClassName" value="org.kuali.rice.krms.dto.RuleManagementWrapper"/>
        <property name="additionalScriptFiles">
            <list>
                <value>krms/scripts/agendaTree.js</value>
                <value>ks-enroll/scripts/ruleStudentTree.js</value>
                <value>krms/scripts/requiredAlerts.js</value>
                <value>ks-enroll/scripts/disableStudentButtons.js</value>
                <value>krms/scripts/countdownInputs.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-enroll/css/enroll.css</value>
                <value>ks-enroll/css/krms.css</value>
            </list>
        </property>
        <property name="dialogs">
            <list>
                <bean id="compareRuleLightBox" parent="KRMS-CompareRule"/>
            </list>
        </property>
        <property name="items">
            <list>
                <bean id="KRMS-AgendaMaintenance-Page" parent="KRMS-AgendaMaintenance-Page-Parent"/>
                <bean id="KRMS-RuleMaintenance-Page" parent="KRMS-RuleMaintenance-Page-Parent"/>
            </list>
        </property>
        <property name="singlePageView" value="false"/>
        <property name="entryPageId" value="KRMS-AgendaMaintenance-Page"/>
    </bean>

    <bean id="RuleManagementWrapper" parent="RuleManagementWrapper-parentBean"/>
    <bean id="RuleManagementWrapper-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.rice.krms.dto.RuleManagementWrapper"/>
        <property name="titleAttribute" value="id"/>
        <property name="attributes">
            <list>
            </list>
        </property>
        <property name="objectLabel" value="Rule"/>
        <property name="primaryKeys">
            <list>
                <value>refObjectId</value>
            </list>
        </property>
    </bean>

    <bean name="KRMS-AgendaMaintenance-Page-Parent" parent="Uif-Page">
        <property name="headerText" value="@{#dp.cluDescription}"/>
        <property name="header.lowerGroup">
            <bean parent="Uif-HorizontalBoxGroup" p:style="margin-top:1em; margin-bottom:-1em">
                <property name="items">
                    <list>
                        <bean parent="Uif-ActionLink" p:actionScript="expandDisclosures();"
                                p:actionLabel="[+] expand all">
                            <property name="actionImage">
                                <null/>
                            </property>
                        </bean>
                        <bean parent="Uif-ActionLink" p:actionScript="collapseDisclosures();"
                              p:actionLabel="[-] collapse all" p:style="margin-left:1em">
                            <property name="actionImage">
                                <null/>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
        <property name="footer">
            <ref bean="KS-Uif-DocumentPageFooter-SubmitCancel"/>
        </property>
    </bean>

    <bean name="KRMS-RuleMaintenance-Page-Parent" parent="Uif-Page">
        <property name="items">
            <list>
                <ref bean="KS-Rules-ManageSection"/>
            </list>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean id="update-button" parent="Uif-SecondaryActionButton-Small"
                              p:performClientSideValidation="true">
                            <property name="actionLabel" value="Update Rule"/>
                            <property name="methodToCall" value="updateRule"/>
                        </bean>
                        <bean id="cancel-button" parent="Uif-ActionLink"
                              p:style="margin-left: 0.5em;margin-top: 0.3em;">
                            <property name="actionLabel" value="Cancel"/>
                            <property name="methodToCall" value="cancelEditRule"/>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KRMS-AgendaSection-Template" parent="Uif-VerticalBoxSection">
        <property name="header">
            <bean parent="Uif-HeaderThree" p:style="border-bottom:solid 2px #000; margin-bottom:5px; margin-top:15px;"/>
        </property>
    </bean>

    <bean id="KRMS-RuleEdit-Links" parent="Uif-LinkGroup">
        <property name="linkSeparator" value=" | "/>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Compare to Original" p:methodToCall="compareRules">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                              p:tooltipContent="Compares Rules"/>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Edit Rule" p:methodToCall="goToRuleView">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                              p:tooltipContent="Edit Rule"/>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Delete Rule" p:methodToCall="deleteRule">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                              p:tooltipContent="Delete Rule"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KRMS-RuleAdd-Links" parent="Uif-LinkGroup">
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Add Rule" p:methodToCall="addRule">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                              p:tooltipContent="Add Requisite to Rule"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KRMS-Rule-Template" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="disclosure.defaultOpen" value="false"/>
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
    </bean>

    <bean id="KRMS-RuleEdit-Section" parent="Uif-VerticalBoxSection" p:width="500px"
          p:style="margin-left:1em">
        <property name="items">
            <list>
                <bean parent="KRMS-RuleEdit-Links" p:id="KRSM-RuleEdit-ActionLinks" p:align="right"/>
                <bean id="KRMS-Instruction-EditMessage" parent="Uif-MessageField"/>
                <bean id="KRMS-PreviewTree-Group" parent="Uif-VerticalBoxGroup" p:cssClasses="viewModeNode"
                      p:style="border: 1px solid #999999">
                    <property name="items">
                        <list>
                            <bean parent="KS-ViewTree-Section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KRMS-RuleAdd-Section" parent="Uif-VerticalBoxSection" p:width="500px"
          p:style="margin-left:1em">
        <property name="items">
            <list>
                <bean parent="KRMS-RuleAdd-Links" p:id="KRMS-RuleAdd-ActionLink" p:align="right"/>
                <bean id="KRMS-Instruction-AddMessage" parent="Uif-MessageField"/>
            </list>
        </property>
    </bean>

    <bean id="KRMS-CompareRule" parent="KS-CompareRule-parent"/>

</beans>