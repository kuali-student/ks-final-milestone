    <bean id="KS-AgendaManagement-View" parent="KSFormView" p:applyDirtyCheck="true"
          p:id="agendaManagementView"
          p:viewHelperServiceClass="org.kuali.rice.krms.service.impl.AgendaManagementViewHelperServiceImpl"
          p:formClass="org.kuali.student.enrollment.class1.krms.form.AgendaManagementForm"
            p:singlePageView="true">
        <property name="headerText" value="Manage Requisites"/>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-enrollment-home</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>krms/scripts/agendaTree.js</value>
                <value>ks-enroll/scripts/ruleStudentTree.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-enroll/css/enroll.css</value>
            </list>
        </property>
        <property name="page">
            <ref bean="KRMS-AgendaManageRequisites-Page"/>
        </property>
    </bean>

    <bean name="KRMS-AgendaManageRequisites-Page" parent="Uif-Page"/>

    <bean id="KRMS-AgendaSection-Template" parent="Uif-VerticalBoxSection">
        <property name="header">
            <bean parent="Uif-HeaderThree" p:style="border-bottom:solid 2px #000; margin-bottom:5px; margin-top:15px;"/>
        </property>
    </bean>

    <bean id="KRMS-RuleEdit-Links" parent="Uif-LinkGroup">
        <property name="linkSeparator" value=" | "/>
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:linkText="Copy">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                              p:tooltipContent="Copy Rule to other CO"/>
                    </property>
                </bean>
                <bean parent="Uif-Link" p:linkText="Compare">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="Compares CLU and CO Rules"/>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Edit" p:methodToCall="goToRuleView">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                              p:tooltipContent="Edit Rule"/>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Delete">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                              p:tooltipContent="Delete Rule"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KRMS-RuleAdd-Links" parent="Uif-LinkGroup">
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="Add Requisite" p:methodToCall="goToRuleView">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true"
                              p:tooltipContent="Add Requisite to Rule"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KRMS-RuleEdit-Template" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="disclosure.defaultOpen" value="false"/>
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
        <property name="items">
            <list>
                <bean id="KRMS-RuleEdit-Section" parent="Uif-VerticalBoxSection" p:width="500px" p:style="margin-left:1em">
                    <property name="items">
                        <list>
                            <bean parent="KRMS-RuleEdit-Links" p:id="KRSM-RuleEdit-ActionLinks" p:align="right"/>
                            <bean id="KRMS-Instruction-EditMessage" parent="Uif-MessageField"/>
                            <bean id="KRMS-PreviewTree-Section" parent="KS-ViewTree-Section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KRMS-RuleAdd-Template" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="disclosure.defaultOpen" value="false"/>
        <property name="header">
            <bean parent="Uif-HeaderThree"/>
        </property>
        <property name="items">
            <list>
                <bean id="KRMS-RuleAdd-Section" parent="Uif-VerticalBoxSection" p:width="500px" p:style="margin-left:1em">
                    <property name="items">
                        <list>
                            <bean parent="KRMS-RuleAdd-Links" p:id="KRMS-RuleAdd-ActionLink" p:align="right"/>
                            <bean id="KRMS-Instruction-AddMessage" parent="Uif-MessageField"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>