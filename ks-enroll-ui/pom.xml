<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>ks-enroll</artifactId>
        <groupId>org.kuali.student.enroll</groupId>
        <version>0.2.0-FR2-M1-SNAPSHOT</version>
    </parent>
    <artifactId>ks-enroll-ui</artifactId>
    <name>KS Enroll UI</name>
    <properties>
        <ks.build.angular.phase>generate-resources</ks.build.angular.phase>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.kuali.student.core</groupId>
            <artifactId>ks-core-krms</artifactId>
            <version>${ks.core.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ks-enroll-impl</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kuali.student.api</groupId>
            <artifactId>ks-enroll-api</artifactId>
            <version>${ks.api.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kuali.student.core</groupId>
            <artifactId>ks-common-util</artifactId>
            <version>${ks.core.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kuali.student.core</groupId>
            <artifactId>ks-common-ui</artifactId>
            <version>${ks.core.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.google.gwt</groupId>
                    <artifactId>gwt-dev</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.kuali.student.core</groupId>
            <artifactId>ks-core-ui</artifactId>
            <version>${ks.core.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kuali.student.lum</groupId>
            <artifactId>ks-lum-ui</artifactId>
            <version>${ks.lum.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kuali.rice</groupId>
            <artifactId>rice-core-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.kuali.rice</groupId>
            <artifactId>rice-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.kuali.student.api</groupId>
            <artifactId>ks-lum-api</artifactId>
            <version>${ks.api.version}</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activemq-web</artifactId>
            <scope>runtime</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.kuali.maven.plugins</groupId>
                <artifactId>maven-kscontractdoc-plugin</artifactId>
                <version>${ks-contract-docs.plugin.version}</version>
                <executions>
                    <!-- This generates the the dictionary documentation docs on the site-->
                    <execution>
                        <id>generate-dictionary-documentation</id>
                        <phase>none</phase>
                        <!--                        <phase>${ks.dictionarydoc.phase}</phase>                        -->
                        <goals>
                            <goal>ksdictionarydoc</goal>
                        </goals>
                        <configuration>
                            <projectUrl>https://test.kuali.org/svn/student/branches/ks-1.3/ks-enroll/ks-enroll-ui/src/main/resources/</projectUrl>
                            <inputFiles>
                                <!--  inputFiles that do not end in ".xml" are treated it
                      as a header and used it to group the dictionary files-->
                                <inputFile>AppliedHoldInfo.xml</inputFile>
                                <inputFile>HoldIssueInfo.xml</inputFile>
                            </inputFiles>
                            <supportFiles>
                                <supportFile>org/kuali/rice/kns/bo/datadictionary/DataDictionaryBaseTypes.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/bo/datadictionary/DataDictionaryBaseTypes.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/bo/datadictionary/AttributeReferenceDummy.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/uif/UifControlDefinitions.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/uif/UifWidgetDefinitions.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/uif/UifFieldDefinitions.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/uif/UifGroupDefinitions.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/uif/UifHeaderFooterDefinitions.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/uif/UifLayoutManagerDefinitions.xml</supportFile>
                                <supportFile>org/kuali/rice/krad/uif/UifViewPageDefinitions.xml</supportFile>
                            </supportFiles>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.kuali.rice</groupId>
                        <artifactId>rice-impl</artifactId>
                        <version>${kuali.rice.version}</version>
                        <exclusions>
                            <exclusion>
                                <groupId>org.springframework.security</groupId>
                                <artifactId>spring-security-cas-client</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>build-angular</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <!-- Config to automatically install nodejs/npm and run grunt build to build the registration angularJs application -->
                    <plugin>
                        <groupId>com.github.eirslett</groupId>
                        <artifactId>frontend-maven-plugin</artifactId>
                        <version>0.0.16</version>
                        <configuration>
                            <workingDirectory>src/main/angular/registration</workingDirectory>
                        </configuration>
                        <executions>
                            <execution>
                                <id>install node and npm</id>
                                <goals>
                                    <goal>install-node-and-npm</goal>
                                </goals>
                                <phase>${ks.build.angular.phase}</phase>
                                <configuration>
                                    <nodeVersion>v0.10.24</nodeVersion>
                                    <npmVersion>1.3.21</npmVersion>
                                </configuration>
                            </execution>
                            <execution>
                                <id>npm install</id>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <phase>${ks.build.angular.phase}</phase>
                                <configuration>
                                    <arguments>install</arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>grunt build</id>
                                <goals>
                                    <goal>grunt</goal>
                                </goals>
                                <phase>${ks.build.angular.phase}</phase>
                                <configuration>
                                    <arguments>build</arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
