                    </execution>
                    <execution>
                        <id>fee-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.core.fee.service.FeeService </className>
                            <serviceName>FeeService</serviceName>
                            <targetNameSpace>http://student.kuali.org/wsdl/FeeService</targetNameSpace>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>organization-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.r2.core.organization.service.OrganizationService</className>
                            <serviceName>OrganizationService</serviceName>
                            <targetNameSpace>http://student.kuali.org/wsdl/organization</targetNameSpace>
                        </configuration>
