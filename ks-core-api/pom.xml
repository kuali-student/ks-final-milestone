<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kuali.student.api</groupId>
        <artifactId>ks-api</artifactId>
        <version>2.0.0-services-M7-SNAPSHOT</version>
    </parent>
    <artifactId>ks-core-api</artifactId>
    <name>KS Core API</name>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ks-common-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kuali.rice</groupId>
            <artifactId>rice-kim-api</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.kuali.maven.plugins</groupId>
                <artifactId>maven-kscontractdoc-plugin</artifactId>
                <version>${ks-contract-docs.plugin.version}</version>
                <!-- For instructions see https://wiki.kuali.org/display/STUDENT/Using+the+Contract+Doc+Maven+Plugin  -->
                <executions>
                    <!-- This generates the standard contract docs on the site-->
                    <execution>
                        <id>generate-contract-documentation</id>
                        <phase>${ks.contractdoc.phase}</phase>
                        <goals>
                            <goal>kscontractdoc</goal>
                        </goals>
                        <configuration>
                            <!-- generate on all kuali dependencies -->
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.build.directory}/dependency-sources</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <!-- This generates the the dictionary documentation docs on the site-->
                    <execution>
                        <id>generate-dictionary-documentation</id>
                        <phase>${ks.dictionarydoc.phase}</phase>
                        <goals>
                            <goal>ksdictionarydoc</goal>
                        </goals>
                        <configuration>
                            <!-- generate only on the kuali student api -->
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <!-- This generates the the ks-xxxx-generated.xml files in target/classes -->
                    <execution>
                        <id>generate-dictionary-files</id>
                        <phase>${ks.dictionarycreate.phase}</phase>
                        <goals>
                            <goal>ksdictionarycreator</goal>
                        </goals>
                        <configuration>
                            <writeManual>true</writeManual>
                            <!-- generate only on the kuali student api -->
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <!-- This generates the mock-implementation java code-->
                    <execution>
                        <id>generate-mock-implementations</id>
                        <phase>${ks.mockimpl.phase}</phase>
                        <goals>
                            <goal>kscreatemock</goal>
                        </goals>
                        <configuration>
                            <!-- generate only on the kuali student api -->
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                    <!-- This generates the conformance test java code-->
                    <!--
                    <execution>
                        <id>generate-conformance-tests</id>
                        <phase>${ks.conftest.phase}</phase>
                        <goals>
                            <goal>kscreateconftest</goal>
                        </goals>
                        <configuration>
                            &lt;!&ndash; generate only on the kuali student api &ndash;&gt;
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
-->
                    <!-- generate only on the kuali student api -->
                    <execution>
                        <id>generate-validation-decorators</id>
                        <phase>${ks.vdecorator.phase}</phase>
                        <goals>
                            <goal>kscreatevdec</goal>
                        </goals>
                        <configuration>
                            <sourceDirs>
                                <sourceDir>${project.basedir}/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-core-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-common-api/src/main/java</sourceDir>
                                <sourceDir>${project.basedir}/../ks-lum-api/src/main/java</sourceDir>
                            </sourceDirs>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.kuali.rice</groupId>
                        <artifactId>rice-impl</artifactId>
                        <version>${kuali.rice.version}</version>
                        <exclusions>
                            <exclusion>
                                <groupId>org.springframework.security</groupId>
                                <artifactId>spring-security-cas-client</artifactId>
                            </exclusion>
                            <exclusion>
                                <groupId>javax.servlet</groupId>
                                <artifactId>servlet-api</artifactId>
                            </exclusion>
                            <exclusion>
                                <groupId>javax.servlet.jsp</groupId>
                                <artifactId>jsp-api</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-java2ws-plugin</artifactId>
                <executions>
                    <!-- removed until needed
                    <execution>
                        <id>role-type-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>
                                org.kuali.student.core.role.service.QualifierHierarchyRoleTypeService
                            </className>
                            <serviceName>QHRoleTypeService</serviceName>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    -->
                    <execution>
                        <id>atp-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.r2.core.atp.service.AtpService</className>
                            <serviceName>AtpService</serviceName>
                            <targetNameSpace>http://student.kuali.org/wsdl/atp</targetNameSpace>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>comment-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.r2.core.comment.service.CommentService</className>
