                        </goals>
                    </execution>
                    <execution>
                        <id>proposal-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.r2.core.proposal.service.ProposalService</className>
                            <serviceName>ProposalService</serviceName>
                            <targetNameSpace>http://student.kuali.org/wsdl/proposal</targetNameSpace>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>scheduling-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.r2.core.scheduling.service.SchedulingService</className>
                            <serviceName>SchedulingService</serviceName>
                            <targetNameSpace>http://student.kuali.org/wsdl/scheduling</targetNameSpace>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>statement-wsdl</id>
                        <phase>${ks.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.student.r2.core.statement.service.StatementService</className>
                            <serviceName>StatementService</serviceName>
                            <targetNameSpace>http://student.kuali.org/wsdl/statement</targetNameSpace>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
