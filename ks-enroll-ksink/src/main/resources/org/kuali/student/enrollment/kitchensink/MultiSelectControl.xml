<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <!-- The Interesting Bits -->

    <bean parent="Uif-InputField"  id="KS-KitchenSink-MultiSelect-Example1">
        <property name="propertyName" value="multiSelections"/>
        <property name="label" value="Multi-Select Label"/>
        <property name="width" value="auto"/>
        <property name="instructionalText"
                  value="Please select one or more items. To select multiple items, hold the control key while selecting items."/>
        <!--<property name="helpSummary" value="Help text when the mouse hovers over the label..."/>-->
        <property name="control">
            <bean parent="Uif-DropdownControl"
                  p:multiple="true" p:size="3" p:options-ref="KS-KitchenSink-MultiSelect-Example1-Options"
                  p:toolTip.tooltipContent="Additional help or information for this field can go here."/>
        </property>
    </bean>

    <util:list id="KS-KitchenSink-MultiSelect-Example1-Options">
        <bean parent="Uif-KeyLabelPair" p:key="1" p:value="Select option #1"/>
        <bean parent="Uif-KeyLabelPair" p:key="2" p:value="Select option #2"/>
        <bean parent="Uif-KeyLabelPair" p:key="3" p:value="Select option #3"/>
        <bean parent="Uif-KeyLabelPair" p:key="4" p:value="Select option #4"/>
        <bean parent="Uif-KeyLabelPair" p:key="5" p:value="Select option #5"/>
    </util:list>

    <bean parent="Uif-InputField"  id="KS-KitchenSink-MultiSelect-Example2">
        <property name="propertyName" value="multiSelections"/>
        <property name="label" value="Multi-Select Label"/>
        <property name="labelPlacement" value="RIGHT"/>
        <property name="width" value="auto"/>
        <property name="instructionalText"
                  value="Please select one or more items. To select multiple items, hold the control key while selecting items."/>
        <!--<property name="helpSummary" value="Help text when the mouse hovers over the label..."/>-->
        <property name="control">
            <bean parent="Uif-DropdownControl"
                  p:multiple="true" p:size="4"
                  p:toolTip.tooltipContent="Additional help or information for this field can go here."/>
        </property>
        <property name="optionsFinder">
            <bean class="org.kuali.student.enrollment.kitchensink.KitchenSinkKeyValues"/>
        </property>
    </bean>



    <!-- just the various containers for the interesting bits -->

    <bean id="KS-KitchenSink-MultiSelect-View" parent="KS-KitchenSink-FormView">
        <property name="headerText" value="Input Fields"/>
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:headerText="Multi-Select Control">
                    <property name="items">
                        <list>
                            <bean parent="KS-KitchenSink-Page-Summary">
                                <property name="messageText">
                                    <value>
                                        A form field that provides a scrollable list of options.
                                    </value>
                                </property>
                            </bean>
                            <ref bean="KS-KitchenSink-MultiSelect-Content"/>
                            <ref bean="KS-KitchenSink-MultiSelect-Links"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-MultiSelect-Content" parent="Uif-TabSection" p:width="500px">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-MultiSelect-Example1-Section">
                    <property name="items">
                        <list merge="true">
                            <bean parent="Uif-MessageField"
                                  p:messageText="Uif-DropdownControl with multiple=&quot;true&quot;, size=&quot;3&quot;, using explicitly defined key-value pairs from the XML configuration."/>
                        </list>
                    </property>
                </bean>
                <bean parent="KS-KitchenSink-MultiSelect-Example2-Section">
                    <property name="items">
                        <list merge="true">
                            <bean parent="Uif-MessageField"
                                  p:messageText="Uif-DropdownControl with multiple=&quot;true&quot;, size=&quot;4&quot;, using key-value pairs defined in the code, presumably from a database."/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Example #1 containers -->

    <bean id="KS-KitchenSink-MultiSelect-Example1-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:header.render="false">
                    <property name="items">
                        <list>
                            <ref bean="KS-KitchenSink-MultiSelect-Example1-Section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-MultiSelect-Example1-Section" parent="Uif-VerticalBoxSection"
          p:headerText="Example #1" p:header.render="false">
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="items">
                        <list>
                            <ref bean="KS-KitchenSink-MultiSelect-Example1"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Example #2 containers -->

    <bean id="KS-KitchenSink-MultiSelect-Example2-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-Page" p:header.render="false">
                    <property name="items">
                        <list>
                            <ref bean="KS-KitchenSink-MultiSelect-Example2-Section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-MultiSelect-Example2-Section" parent="Uif-VerticalBoxSection"
          p:headerText="Example #2" p:header.render="false">
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxSection">
                    <property name="items">
                        <list>
                            <ref bean="KS-KitchenSink-MultiSelect-Example2"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- Links -->

    <bean id="KS-KitchenSink-MultiSelect-Links" parent="KS-KitchenSink-Page-Links">
        <property name="items">
            <list>
                <bean parent="Uif-LinkField"
                      p:label="Page Configuration"
                      p:linkText="ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/MultiSelectControl.xml" p:target="_blank"
                      p:href="https://svn.kuali.org/repos/student/enrollment/ks-enroll/trunk/ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/MultiSelectControl.xml"/>
                <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="KRAD XML Configuration"
                                  p:linkText="UifElementDefinitions.xml" p:target="_blank"
                                  p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/resources/org/kuali/rice/krad/uif/UifFieldDefinitions.xml"/>
                            <bean parent="Uif-MessageField" p:messageText="(Uif-InputField)"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="KRAD Java Source"
                                  p:linkText="InputField.java" p:target="_blank"
                                  p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/java/org/kuali/rice/krad/uif/field/InputField.java"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="KRAD Java API"
                                  p:linkText="InputField.html" p:target="_blank"
                                  p:href="http://site.origin.kuali.org/rice/2.2.0-M3/apidocs/org/kuali/rice/krad/uif/field/InputField.html"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:style="margin-bottom:0;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="KRAD Guide"
                                  p:linkText="InputField - Select Control" p:target="_blank"
                                  p:href="http://site.kuali.org/rice/2.2.0-M3/reference/html/KRAD_Guide.html#d6766e5292"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:style="border-top:solid 1px #333333;margin-bottom:0;padding-top:5px;">
                    <property name="items">
                        <list>
                            <bean parent="Uif-LinkField"
                                  p:label="Widget-Only Links (UIM)"
                                  p:linkText="Example #1" p:target="_blank"
                                  p:href="../kr-krad/kitchensink?viewId=KS-KitchenSink-MultiSelect-Example1-View-Bare&amp;methodToCall=start"/>
                            <bean parent="Uif-LinkField"
                                  p:linkText="Example #2" p:target="_blank"
                                  p:href="../kr-krad/kitchensink?viewId=KS-KitchenSink-MultiSelect-Example2-View-Bare&amp;methodToCall=start"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>