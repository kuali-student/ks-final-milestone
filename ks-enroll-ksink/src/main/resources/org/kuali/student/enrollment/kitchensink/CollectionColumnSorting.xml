<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- The Interesting Bits -->

    <bean id="KS-KitchenSink-CollectionColumnSorting" parent="KS-KitchenSink-Collection-Base">
        <!-- KS-KitchenSink-Collection-Base is in KitchenSinkView.xml; parent="Uif-TableCollectionSection" -->

        <!-- simple way to define column sorting:
        <property name="layoutManager.sortableColumns">
            <set>
                <value>id</value>
                <value>name</value>
                <value>date</value>
            </set>
        </property>
        -->

        <!-- define column sorting using the richTable options: -->
        <property name="layoutManager.richTable">
            <!-- see http://datatables.net/ref for all options -->
            <bean parent="Uif-PagedRichTable">
                <property name="templateOptions">
                    <map merge="true">
                        <!--
                            aaSorting defines which column(s) the collection is initially sorted
                            by.  The default is "[[0,'asc']]" and if no sorting is desired the
                            value should just be "[]".
                            -->
                        <entry key="aaSorting" value="[[1,'asc']]"/>

                        <!--
                            aoColumnDefs allows customization of individual columns.
                            (trial-n-error shows that using 'aoColumns' breaks sorting)
                            Here, the 3rd column (description) is marked as unsortable.
                            -->
                        <entry key="aoColumnDefs"
                               value="[ {'aTargets':[2], 'bSortable':false}
                                    ]"/>
                    </map>
                </property>
            </bean>
        </property>
    </bean>


    <!-- just the various containers for the interesting bits -->

    <bean id="KS-KitchenSink-CollectionColumnSorting-View" parent="KS-KitchenSink-FormView">
        <property name="headerText" value="Collections"/>
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-CollectionColumnSorting-Page">
                    <property name="headerText" value="Collection Column Sorting"/>
                    <property name="footer">
                        <bean parent="Uif-VerticalBoxSection">
                            <property name="header.render" value="false"/>
                            <property name="style" value="margin-top:10px"/>
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Message">
                                        <property name="style" value="margin-bottom:15px;font-size:125%"/>
                                        <property name="messageText">
                                            <value>
                                                By default, all column headers are sorted and the collection is sorted
                                                on the first column. In this example, the initial sort is done on the
                                                second column "Name" and the third column "Description" is not sortable.
                                            </value>
                                        </property>
                                    </bean>
                                    <bean parent="KS-KitchenSink-Link-To-Source"
                                          p:href="https://svn.kuali.org/repos/student/enrollment/ks-enroll/trunk/ks-enroll-ksink/src/main/resources/org/kuali/student/enrollment/kitchensink/CollectionColumnSorting.xml"/>
                                    <bean parent="KS-KitchenSink-Link-To-Source"
                                          p:label="DataTables Reference"
                                          p:href="http://datatables.net/ref"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-XML-Source"
                                          p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/resources/org/kuali/rice/krad/uif/UifGroupDefinitions.xml"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-Java-Source"
                                          p:href="http://svn.kuali.org/repos/rice/tags/rice-2.2.0-M3/krad/krad-web-framework/src/main/java/org/kuali/rice/krad/uif/container/CollectionGroup.java"/>
                                    <bean parent="KS-KitchenSink-Link-To-KRAD-API"
                                          p:href="http://site.origin.kuali.org/rice/2.2.0-M3/apidocs/org/kuali/rice/krad/uif/container/CollectionGroup.html"/>
                                    <bean parent="KS-KitchenSink-Link-To-Guide"
                                          p:href="http://site.kuali.org/rice/2.2.0-M3/reference/html/KRAD_Guide.html#d6766e7731"/>
                                    <bean parent="KS-KitchenSink-Link-To-Bare">
                                        <property name="finalizeMethodAdditionalArguments">
                                            <list>
                                                <value>collection</value>
                                            </list>
                                        </property>
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-CollectionColumnSorting-View-Bare" parent="KS-KitchenSink-FormView-Bare">
        <property name="items">
            <list>
                <bean parent="KS-KitchenSink-CollectionColumnSorting-Page">
                    <property name="header.render" value="false"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-KitchenSink-CollectionColumnSorting-Page" parent="KS-KitchenSink-Page">
        <property name="items">
            <list>
                <ref bean="KS-KitchenSink-CollectionColumnSorting"/>
            </list>
        </property>
    </bean>

</beans>