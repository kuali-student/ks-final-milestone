<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-cfg-dbs</artifactId>
    <version>1.0.0-m5-SNAPSHOT</version>
  </parent>
  <artifactId>ks-core-db</artifactId>
  <name>KS Core Database</name>
  <description>Kuali Student Core Database</description>
  <build>
    <resources>
      <resource>
        <directory>src/main/impex/data</directory>
      </resource>
      <resource>
        <directory>src/main/impex/schema</directory>
      </resource>
      <resource>
        <directory>${project.build.directory}/generated-sql/impex</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.kuali.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <version>3.3.1-kuali-1-SNAPSHOT</version>
        <configuration>
          <runOnlyOnSchemaChange>false</runOnlyOnSchemaChange>
        </configuration>
        <executions>
          <execution>
            <id>generate-oracle-sql</id>
            <configuration>
              <targetDatabase>oracle</targetDatabase>
              <schemaXMLFile>${basedir}/src/main/impex/schema/ks-core-schema.xml</schemaXMLFile>
            </configuration>
            <goals>
              <goal>schemasql</goal>
              <goal>datadtd</goal>
              <goal>datasql</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-mysql-sql</id>
            <configuration>
              <targetDatabase>mysql</targetDatabase>
              <schemaXMLFile>${basedir}/src/main/impex/schema/ks-core-schema.xml</schemaXMLFile>
            </configuration>
            <goals>
              <goal>schemasql</goal>
              <goal>datadtd</goal>
              <goal>datasql</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>10.2.0.3.0</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>