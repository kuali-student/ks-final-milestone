<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-cfg-dbs</artifactId>
    <version>1.0.0-m5-SNAPSHOT</version>
  </parent>
  <artifactId>ks-core-db</artifactId>
  <name>KS Core Database</name>
  <description>Kuali Student Core Database</description>
  <properties>
    <ks.core.url>jdbc:oracle:thin:@localhost:1521:XE</ks.core.url>
    <ks.core.schema>KSCORE</ks.core.schema>
    <ks.core.username>KSCORE</ks.core.username>
    <ks.core.password>KSCORE</ks.core.password>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>src/main/impex/schema</directory>
      </resource>
      <resource>
        <directory>${project.build.directory}/generated-sql/impex</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.kuali.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <configuration>
          <targetDatabase>${ks.db.type}</targetDatabase>
          <driver>${ks.db.driver}</driver>
          <url>${ks.core.url}</url>
          <schema>${ks.core.schema}</schema>
          <username>${ks.core.username}</username>
          <password>${ks.core.password}</password>
        </configuration>
        <executions>
          <execution>
            <id>generate-data-dtd</id>
            <goals>
              <goal>datadtd</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-oracle-sql</id>
            <configuration>
              <targetDatabase>oracle</targetDatabase>
            </configuration>
            <goals>
              <goal>schemasql</goal>
              <goal>datasql</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-mysql-sql</id>
            <configuration>
              <targetDatabase>mysql</targetDatabase>
            </configuration>
            <goals>
              <goal>schemasql</goal>
              <goal>datasql</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>