<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student</groupId>
    <artifactId>student</artifactId>
    <version>1.1.0-M10-SNAPSHOT</version>
  </parent>
  <groupId>org.kuali.student.db</groupId>
  <artifactId>ks-db</artifactId>
  <packaging>pom</packaging>
  <name>KS Databases</name>
  <description>Kuali Student Databases</description>
  <repositories>
    <repository>
      <id>kuali.nexus</id>
      <name>Nexus Repository Manager</name>
      <url>http://nexus.kuali.org/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <properties>
    <!-- Example values for db specific properties -->

    <!-- Oracle JDBC url's don't contain a database name -->
    <ks.impex.jdbc.driver.oracle>oracle.jdbc.driver.OracleDriver</ks.impex.jdbc.driver.oracle>

    <!-- Oracle JDBC url's don't contain a database name -->
    <ks.impex.url.oracle>jdbc:oracle:thin:@localhost:1521:XE</ks.impex.url.oracle>
    <ks.impex.dba.username.oracle>system</ks.impex.dba.username.oracle>
    <ks.impex.dba.password.oracle></ks.impex.dba.password.oracle>

    <!-- MySQL JDBC url's do contain a database name -->
    <ks.impex.url.mysql>jdbc:mysql://localhost/ksembedded</ks.impex.url.mysql>
    <ks.impex.dba.username.mysql>root</ks.impex.dba.username.mysql>
    <ks.impex.dba.password.mysql></ks.impex.dba.password.mysql>

    <!-- *** Start REQUIRED properties *** -->
    <!-- JDBC url -->
    <ks.impex.url>${ks.impex.url.oracle}</ks.impex.url> 
    <!-- User with DBA privileges -->
    <ks.impex.dba.username>${ks.impex.dba.username.oracle}</ks.impex.dba.username>
    <!-- Password for the DBA user -->
    <ks.impex.dba.password>${ks.impex.dba.password.oracle}</ks.impex.dba.password>
    <!-- *** End REQUIRED properties *** -->

    <!-- *** Start OPTIONAL properties *** -->
    <!-- Platform specific logic generates default values for these if they are not specified -->
    <!-- A url for connecting directly to the database server ie no database specified -->
    <ks.impex.server.url></ks.impex.server.url>

    <!-- Aka "schema" for Oracle. This database/schema gets dropped/created by the DBA user-->
    <ks.impex.database></ks.impex.database>
    
    <!-- This is the user the application will connect to the database as. -->
    <!-- This user gets dropped/created by the DBA user -->
    <ks.impex.username></ks.impex.username>
    <ks.impex.password></ks.impex.password>

    <!--  This is the format dates will be exported/imported as -->
    <ks.impex.date.format>yyyyMMddHHmmss</ks.impex.date.format>
    <!-- *** End OPTIONAL properties *** -->
    
    <!-- Properties located in the properties file, override POM properties, but not system properties -->
    <ks.impex.properties>${user.home}/impex.properties</ks.impex.properties>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>${project.build.directory}/generated-impex</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.4</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.kuali.maven.impex</groupId>
        <artifactId>maven-impex-plugin</artifactId>
        <version>1.0.7</version>
        <dependencies>
          <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${mysql.connector.version}</version>
          </dependency>
          <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc14</artifactId>
            <version>${oracle.ojdbc.version}</version>
          </dependency>
        </dependencies>
        <configuration>
          <dataXMLDir>${project.build.directory}/generated-impex/xml</dataXMLDir>
          <schemaDir>${project.build.directory}/generated-impex</schemaDir>
          <schemaXMLFile>${project.build.directory}/generated-impex/${project.artifactId}.xml</schemaXMLFile>
          <dateFormat>${ks.impex.date.format}</dateFormat>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>ks-rice-db</module>
        <module>ks-embedded-db</module>
        <module>ks-standalone-db</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.properties</groupId>
            <artifactId>maven-properties-plugin</artifactId>
            <version>1.0.0</version>
            <executions>
              <execution>
                <id>properties</id>
                <goals>
                  <goal>properties</goal>
                </goals>
                <configuration>
                  <properties>${ks.impex.properties}</properties>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>generate-oracle-sql</id>
      <modules>
        <module>ks-rice-db</module>
        <module>ks-embedded-db</module>
        <module>ks-standalone-db</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-oracle-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
                <configuration>
                  <targetDatabase>oracle</targetDatabase>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>generate-mysql-sql</id>
      <modules>
        <module>ks-rice-db</module>
        <module>ks-embedded-db</module>
        <module>ks-standalone-db</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-mysql-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
                <configuration>
                  <targetDatabase>mysql</targetDatabase>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>generate-sql</id>
      <modules>
        <module>ks-rice-db</module>
        <module>ks-embedded-db</module>
        <module>ks-standalone-db</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-oracle-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
                <configuration>
                  <targetDatabase>oracle</targetDatabase>
                </configuration>
              </execution>
              <execution>
                <id>generate-mysql-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
                <configuration>
                  <targetDatabase>mysql</targetDatabase>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>reset-dbs</id>
      <modules>
        <module>ks-embedded-db</module>
        <module>ks-rice-db</module>
        <module>ks-standalone-db</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.properties</groupId>
            <artifactId>maven-properties-plugin</artifactId>
            <version>1.0.0</version>
            <executions>
              <execution>
                <id>properties</id>
                <goals>
                  <goal>properties</goal>
                </goals>
                <configuration>
                  <properties>${ks.impex.properties}</properties>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <configuration>
              <url>${ks.impex.url}</url>
              <username>${ks.impex.username}</username>
              <password>${ks.impex.password}</password>
            </configuration>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
              </execution>
              <execution>
                <id>purge-db</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>drop</goal>
                  <goal>create</goal>
                </goals>
                <configuration>
                  <serverUrl>${ks.impex.server.url}</serverUrl>
                  <username>${ks.impex.dba.username}</username>
                  <password>${ks.impex.dba.password}</password>
                  <database>${ks.impex.database}</database>
                  <databaseUsername>${ks.impex.username}</databaseUsername>
                  <databasePassword>${ks.impex.password}</databasePassword>
                </configuration>
              </execution>
              <execution>
                <id>import-data</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>import</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql.connector.version}</version>
              </dependency>
              <dependency>
                <groupId>com.oracle</groupId>
                <artifactId>ojdbc14</artifactId>
                <version>${oracle.ojdbc.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>reset-db</id>
      <modules>
        <module>ks-embedded-db</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.properties</groupId>
            <artifactId>maven-properties-plugin</artifactId>
            <version>1.0.0</version>
            <executions>
              <execution>
                <id>properties</id>
                <goals>
                  <goal>properties</goal>
                </goals>
                <configuration>
                  <properties>${ks.impex.properties}</properties>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <configuration>
              <url>${ks.impex.url}</url>
              <username>${ks.impex.username}</username>
              <password>${ks.impex.password}</password>
            </configuration>
            <executions>
              <execution>
                <id>morph-xml</id>
                <goals>
                  <goal>morphschema</goal>
                  <goal>morphdata</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <goals>
                  <goal>datadtd</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-sql</id>
                <goals>
                  <goal>schemasql</goal>
                  <goal>datasql</goal>
                </goals>
              </execution>
              <execution>
                <id>purge-db</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>drop</goal>
                  <goal>create</goal>
                </goals>
                <configuration>
                  <serverUrl>${ks.impex.server.url}</serverUrl>
                  <username>${ks.impex.dba.username}</username>
                  <password>${ks.impex.dba.password}</password>
                  <database>${ks.impex.database}</database>
                  <databaseUsername>${ks.impex.username}</databaseUsername>
                  <databasePassword>${ks.impex.password}</databasePassword>
                </configuration>
              </execution>
              <execution>
                <id>import-data</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>import</goal>
                </goals>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql.connector.version}</version>
              </dependency>
              <dependency>
                <groupId>com.oracle</groupId>
                <artifactId>ojdbc14</artifactId>
                <version>${oracle.ojdbc.version}</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>commit-impex-changes</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-scm-plugin</artifactId>
            <executions>
              <execution>
                <id>commit-impex-changes</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>checkin</goal>
                </goals>
                <configuration>
                  <message>Automated Impex update</message>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>