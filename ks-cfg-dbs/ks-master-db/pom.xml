<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.student.db</groupId>
    <artifactId>ks-db</artifactId>
    <version>1.1.0-M10-SNAPSHOT</version>
  </parent>
  <artifactId>ks-master-db</artifactId>
  <packaging>pom</packaging>
  <name>KS Master Database</name>
  <description>Kuali Student Master Database</description>
  <properties>
    <ks.masterdb.url>jdbc:oracle:thin:@localhost:1521:XE</ks.masterdb.url>
    <ks.masterdb.driver>oracle.jdbc.driver.OracleDriver</ks.masterdb.driver>
    <ks.masterdb.username>KSMASTER</ks.masterdb.username>
    <ks.masterdb.password>KSMASTER</ks.masterdb.password>
    <ks.masterdb.dba.username>KSDBA</ks.masterdb.dba.username>
    <ks.masterdb.dba.password>KSDBA</ks.masterdb.dba.password>
  </properties>
  <profiles>
    <profile>
      <id>build-master-db</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <phase>process-resources</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.kuali.student.core</groupId>
                      <artifactId>ks-core-sql</artifactId>
                      <version>${project.version}</version>
                      <includes>**\/*.sql</includes>
                      <outputDirectory>${project.build.directory}/gen/data</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.kuali.student.lum</groupId>
                      <artifactId>ks-lum-sql</artifactId>
                      <version>${project.version}</version>
                      <includes>**\/*.sql</includes>
                      <outputDirectory>${project.build.directory}/gen/data</outputDirectory>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.kuali.student.db</groupId>
                      <artifactId>ks-rice-db</artifactId>
                      <version>${project.version}</version>
                      <includes>**/oracle/*.sql</includes>
                      <outputDirectory>${project.build.directory}/gen/data/rice</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>org.kuali.student.core</groupId>
                <artifactId>ks-core-sql</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.student.lum</groupId>
                <artifactId>ks-lum-sql</artifactId>
                <version>${project.version}</version>
              </dependency>
              <dependency>
                <groupId>org.kuali.student.db</groupId>
                <artifactId>ks-rice-db</artifactId>
                <version>${project.version}</version>
              </dependency>
            </dependencies>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <configuration>
              <forceMojoExecution>true</forceMojoExecution>
              <url>${ks.masterdb.url}</url>
              <username>${ks.masterdb.username}</username>
              <password>${ks.masterdb.password}</password>
              <database>${ks.masterdb.username}</database>
              <importDir>${project.build.directory}/gen/data/rice/sql</importDir>
            </configuration>
            <executions>
              <execution>
                <id>morph-xml</id>
                <phase>none</phase>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <phase>none</phase>
              </execution>
              <execution>
                <id>drob-create-db</id>
                <phase>initialize</phase>
                <goals>
                  <goal>drop</goal>
                  <goal>create</goal>
                </goals>
                <configuration>
                  <username>${ks.masterdb.dba.username}</username>
                  <password>${ks.masterdb.dba.password}</password>
                  <databaseUsername>${ks.masterdb.username}</databaseUsername>
                  <databasePassword>${ks.masterdb.password}</databasePassword>
                </configuration>
              </execution>
              <execution>
                <id>create-rice-schema</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>import</goal>
                </goals>
                <configuration>
                  <importDirIncludes>ks-rice-db.sql</importDirIncludes>
                </configuration>
              </execution>
              <execution>
                <id>load-rice-data</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>import</goal>
                </goals>
                <configuration>
                  <importDirExcludes>ks-rice-db*.sql</importDirExcludes>
                </configuration>
              </execution>
              <execution>
                <id>add-rice-constraints</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>import</goal>
                </goals>
                <configuration>
                  <importDirIncludes>ks-rice-db-constraints.sql</importDirIncludes>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>sql-maven-plugin</artifactId>
            <version>1.1</version>
            <dependencies>
              <dependency>
                <groupId>com.oracle</groupId>
                <artifactId>ojdbc14</artifactId>
                <version>${oracle.ojdbc.version}</version>
              </dependency>
            </dependencies>
            <configuration>
              <driver>${ks.masterdb.driver}</driver>
              <url>${ks.masterdb.url}</url>
              <username>${ks.masterdb.username}</username>
              <password>${ks.masterdb.password}</password>
              <delimiter>/</delimiter>
            </configuration>
            <executions>
              <execution>
                <id>create-schema</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <fileset>
                    <basedir>${project.build.directory}/gen/data</basedir>
                    <includes>
                      <include>initial-db/*/*-create-schema.sql</include>
                    </includes>
                  </fileset>
                </configuration>
              </execution>
              <execution>
                <id>load-data</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <fileset>
                    <basedir>${project.build.directory}/gen/data</basedir>
                    <includes>
                      <include>initial-db/*/*data/*.sql</include>
                    </includes>
                  </fileset>
                </configuration>
              </execution>
              <execution>
                <id>add-constraints</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <fileset>
                    <basedir>${project.build.directory}/gen/data</basedir>
                    <includes>
                      <include>initial-db/*/*-constraints.sql</include>
                    </includes>
                  </fileset>
                </configuration>
              </execution>
              <execution>
                <id>run-upgrades</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <fileset>
                    <basedir>${project.build.directory}/gen/data</basedir>
                    <includes>
                      <include>upgrades/*/*.sql</include>
                    </includes>
                  </fileset>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>export-impex</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kuali.maven.impex</groupId>
            <artifactId>maven-impex-plugin</artifactId>
            <version>1.0.6-SNAPSHOT</version>
            <configuration>
              <forceMojoExecution>true</forceMojoExecution>
              <url>${ks.masterdb.url}</url>
              <username>${ks.masterdb.username}</username>
              <password>${ks.masterdb.password}</password>
              <database>${ks.masterdb.username}</database>
              <antCompatibilityMode>true</antCompatibilityMode>
            </configuration>
            <executions>
              <execution>
                <id>morph-xml</id>
                <phase>none</phase>
              </execution>
              <execution>
                <id>generate-data-dtd</id>
                <phase>none</phase>
              </execution>
              <execution>
                <id>export-impex-for-ks-embedded-db</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>exportschema</goal>
                  <goal>exportdata</goal>
                  <goal>datadtd</goal>
                </goals>
                <configuration>
                  <includes>^KS.*,^KR.*</includes>
                  <schemaXMLFile>${basedir}/../ks-embedded-db/src/main/impex/schema.xml</schemaXMLFile>
                  <dataXMLDir>${basedir}/../ks-embedded-db/src/main/impex</dataXMLDir>
                  <copyToFile>${basedir}/../ks-embedded-db/src/main/impex/data.dtdd</copyToFile>
                </configuration>
              </execution>
              <execution>
                <id>export-impex-for-ks-standalone-db</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>exportschema</goal>
                  <goal>exportdata</goal>
                  <goal>datadtd</goal>
                </goals>
                <configuration>
                  <includes>^KS.*</includes>
                  <schemaXMLFile>${basedir}/../ks-standalone-db/src/main/impex/schema.xml</schemaXMLFile>
                  <dataXMLDir>${basedir}/../ks-standalone-db/src/main/impex</dataXMLDir>
                  <copyToFile>${basedir}/../ks-embedded-db/src/main/impex/data.dtd</copyToFile>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>