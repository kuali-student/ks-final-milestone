    <bean id="ksapContext" class="org.kuali.student.ap.framework.context.support.DefaultKsapContext"/>

    <bean id="ksapTextHelper" class="org.kuali.student.ap.framework.context.support.DefaultTextHelper">
        <property name="messageGroup" value="ksap"/>
    </bean>

    <bean id="ksapDefaultTermHelper" class="org.kuali.student.ap.framework.context.support.DefaultTermHelper"/>
    <bean id="ksapTermHelperCacheDecorator" class="org.kuali.student.ap.framework.context.decorators.TermHelperCacheDecorator">
        <property name="nextDecorator">
            <ref bean="ksapDefaultTermHelper"/>
