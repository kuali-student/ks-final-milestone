<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KSAP-DevelopementUtils-FormView" parent="KSAP-DevelopementUtils-FormView-parent" />
    <bean id="KSAP-DevelopementUtils-FormView-parent" abstract="true" parent="KSAPFormView">
        <property name="id" value="KSAP-DevelopementUtils-FormView" />
        <property name="formClass" value="org.kuali.student.ap.development.form.DevelopmentForm" />
        <property name="items">
            <list>
                <bean parent="Ksap-Page">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout" />
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-PrimaryActionButton" p:methodToCall="InvalidateCache" p:actionLabel="Invalidate Caches"/>
                        </list>
                    </property>
                    <property name="stickyFooter" value="false"/>
                </bean>
            </list>
        </property>
        <property name="footer.render" value="false" />
    </bean>
</beans>