<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kuali.student</groupId>
        <artifactId>student</artifactId>
        <version>2.1.1-FR2-M1-build-917</version>
    </parent>
    <groupId>org.kuali.student.core</groupId>
    <artifactId>ks-core</artifactId>
    <version>2.1.1-FR2-M1-build-917</version>
    <name>KS Core</name>
    <packaging>pom</packaging>
    <profiles>
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>ks-common</module>
                <module>ks-security</module>
                <module>ks-core-impl</module>
                <module>ks-core-sql</module>
                <module>ks-rice-sql</module>
                <module>ks-core-ui</module>
                <module>ks-core-krms</module>
            </modules>
        </profile>
        <profile>
            <id>sql-only</id>
            <modules>
                <module>ks-core-sql</module>
                <module>ks-rice-sql</module>
            </modules>
        </profile>
        <profile>
            <id>skip-all-wars</id>
            <modules>
                <module>ks-common</module>
                <module>ks-security</module>
                <module>ks-core-impl</module>
                <module>ks-core-sql</module>
                <module>ks-rice-sql</module>
                <module>ks-core-ui</module>
                <module>ks-core-krms</module>
            </modules>
        </profile>
        <profile>
            <id>test-only</id>
            <modules>
                <module>ks-common</module>
                <module>ks-security</module>
                <module>ks-core-impl</module>
                <module>ks-core-ui</module>
                <module>ks-core-krms</module>
            </modules>
        </profile>
        <profile>
            <id>skip-ui</id>
            <modules>
                <module>ks-common</module>
                <module>ks-security</module>
                <module>ks-core-impl</module>
                <module>ks-core-sql</module>
                <module>ks-rice-sql</module>
                <module>ks-core-krms</module>
            </modules>
        </profile>
        <profile>
            <id>skip-surefire-tests</id>
            <activation>
                <property>
                    <name>skip.core.tests</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skipTests>true</skipTests>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <!-- include all the modules from the default profile (except SQL modules) -->
            <modules>
                <module>ks-common</module>
                <module>ks-security</module>
                <module>ks-core-impl</module>
                <module>ks-core-ui</module>
                <module>ks-core-krms</module>
            </modules>
        </profile>
    </profiles>
</project>
