<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ks="urn:import:org.kuali.student.common.ui.client.widgets">
	<ui:style>
.leftRightContainer{
  padding-top: 10px;
  width:100%;
  margin-bottom: 10px;
  
}
.leftPart{
   width:50%;
   float: left;
   margin-bottom: 5px;
   
}
.rightPart{
   float:right;
   width:50%;
}
.course{
   float:right;
   padding: 2px;   
}
.searchControl{
   float:right;
   padding: 2px;   
}
.searchButton{
   float:right;
   padding: 2px;   
}
.title{
  padding-left: 5px;
  font-weight: bold;
  font-size: 20px;
  color: gray;
}

.logoutButton{
   float:right;
   padding: 2px;
}
.separator{
   float:right;
   padding: 2px;
}

.userName{
   float:right;
   padding: 2px;
}

.hiPanel{
   float:right;
   padding: 2px;
}
.clearBothDiv{
   clear:both;
}
.bottomLine{
   border-top: 3px solid gray;
   background-color: #E8E8E8;
   width:100%;
   clear:both;
   padding-top: 3px;
   padding-bottom: 4px;
   padding-left: 5px;
   font-size: 1.1em;
}

.bottomLine a{
   color: black;
   font-weight: bold;
}

.bottomLine a:hover{
	color: gray;
}

</ui:style>
<g:HTMLPanel >
	<div class='{style.leftRightContainer}'>
	    <g:Label ui:field='applicationTitleLabel' styleName='header-appTitle'>KRU</g:Label>
	    <div class='header-innerDiv'>
	        <g:FlowPanel ui:field="leftPartPanel" styleName='{style.leftPart}'>
	        </g:FlowPanel>
	        <div class='{style.rightPart}'>
	           <g:Label styleName='{style.searchButton}'></g:Label><!-- place holder -->
	           <g:Label styleName='{style.searchControl}'></g:Label><!-- place holder -->
	           <g:Label ui:field="searchLabel" styleName='{style.course}'></g:Label>
	           
	           <div class='{style.clearBothDiv}'></div>
	           
	           <g:FlowPanel ui:field="logoutPanel" styleName='{style.logoutButton}'></g:FlowPanel>
	           <div class='{style.separator}'>|</div>
	           <g:FlowPanel ui:field="userNamePanel" styleName='{style.userName}'></g:FlowPanel>
	           <g:FlowPanel ui:field="hiPanel" styleName='{style.hiPanel}'></g:FlowPanel>
	        </div>
	    </div>
	    <g:FlowPanel ui:field="bottomContainer" styleName="{style.bottomLine}"></g:FlowPanel>
	</div>		
</g:HTMLPanel>
</ui:UiBinder> 
