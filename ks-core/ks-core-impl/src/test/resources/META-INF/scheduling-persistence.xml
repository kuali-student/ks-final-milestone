<?xml version="1.0" encoding="UTF-8" ?>
<!-- Use this one for deploying to JBoss -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <!-- JPA test "unit" -->
    <persistence-unit name="persistentUnit" transaction-type="JTA">

        <class>org.kuali.student.r2.core.scheduling.model.TimeSlotEntity</class>
        <class>org.kuali.student.r2.core.scheduling.model.TimeSlotAttributeEntity</class>

        <class>org.kuali.student.r2.core.scheduling.model.ScheduleRequestEntity</class>
        <class>org.kuali.student.r2.core.scheduling.model.ScheduleRequestAttributeEntity</class>
        <class>org.kuali.student.r2.core.scheduling.model.ScheduleRequestComponentEntity</class>
        <class>org.kuali.student.r2.core.scheduling.model.ScheduleEntity</class>
        <class>org.kuali.student.r2.core.scheduling.model.ScheduleAttributeEntity</class>
        <class>org.kuali.student.r2.core.scheduling.model.ScheduleComponentEntity</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

    </persistence-unit>


</persistence>