    <!-- Natural Language Translation Contexts -->
    
    <bean id="basicContext" class="org.kuali.student.lum.statement.config.context.lu.BasicContextImpl">
        <property name="luService" ref="luServiceImpl" />
    </bean>
    <bean id="cluSetContext" class="org.kuali.student.lum.statement.config.context.lu.CluSetContextImpl">
        <property name="luService" ref="luServiceImpl" />
    </bean>
    <bean id="gradeContext" class="org.kuali.student.lum.statement.config.context.lu.GradeContextImpl">
        <property name="luService" ref="luServiceImpl" />
    </bean>
    <bean id="gpaContext" class="org.kuali.student.lum.statement.config.context.lu.GPAContextImpl">
        <property name="luService" ref="luServiceImpl" />
    </bean>
    <bean id="instructorPermissionContext" class="org.kuali.student.lum.statement.config.context.lu.PersonContextImpl">
        <property name="luService" ref="luServiceImpl" />
    </bean>
    <bean id="orgPermissionContext" class="org.kuali.student.lum.statement.config.context.lu.OrganizationContextImpl">
        <property name="luService" ref="luServiceImpl" />
    </bean>

    <bean id="contextRegistryReqComponent"
        class="org.kuali.student.core.statement.naturallanguage.ContextRegistry">
        <constructor-arg>
            <map>
                <entry key="kuali.reqCompType.course.courseset.completed.none">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.course.courseset.completed.all">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.course.courseset.completed.nof">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.course.courseset.enrolled.nof">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.course.courseset.credits.completed.nof">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.course.courseset.credits.completed.none">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.course.courseset.credits.completed.max">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>                
                <entry key="kuali.reqCompType.course.courseset.gpa.min">
                    <list>
                        <ref local="cluSetContext"/>
                        <ref local="gpaContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.courseList.coreq.all">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.courseList.coreq.oneof">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>              
                <entry key="kuali.reqCompType.course.courseset.grade.min">
                    <list>
                        <ref local="cluSetContext"/>
                        <ref local="gradeContext"/>
                    </list>
                </entry>       
                <entry key="kuali.reqCompType.course.courseset.grade.max">
                    <list>
                        <ref local="cluSetContext"/>
                        <ref local="gradeContext"/>
                    </list>
                </entry>  
                <entry key="kuali.reqCompType.course.permission.org.required">
                    <ref local="orgPermissionContext"/>
                </entry>  
                <entry key="kuali.reqCompType.course.permission.instructor.required">
                    <ref local="instructorPermissionContext"/>
                </entry>
                <entry key="kuali.reqCompType.course.test.score.min">
	                <ref local="cluSetContext"/>
                </entry>              
                <entry key="kuali.reqCompType.course.test.score.max">
                    <ref local="cluSetContext"/>
                </entry>
                <entry key="kuali.reqCompType.course.courseset.nof.grade.min">
                    <list>
                        <ref local="cluSetContext"/>
                        <ref local="gradeContext"/>
                    </list>
                </entry>                              

                <!-- Program Contexts -->
                <entry key="kuali.reqCompType.programList.enroll.oneof">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.programList.enroll.none">
                    <list>
	                    <ref local="cluSetContext"/>
                    </list>
                </entry> 

                <!-- New Program Contexts-->
                <entry key="kuali.reqCompType.program.programset.completed.nof">
                    <list>
                        <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.program.programset.notcompleted.nof">
                    <list>
                        <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.program.programset.completed.all">
                    <list>
                        <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.program.programset.coursecompleted.nof">
                    <list>
                        <ref local="cluSetContext"/>
                    </list>
                </entry>
                <entry key="kuali.reqCompType.program.admitted.credits">
                    <ref local="basicContext"/>                
                </entry>                
            </map>
        </constructor-arg>
    </bean>

    <bean id="booleanOperatorLanguageMap"
    	class="org.springframework.beans.factory.config.MapFactoryBean">
    	<property name="sourceMap">
    		<map>
    			<entry key="en">
    				<bean class="org.kuali.student.common.messagebuilder.impl.BooleanOperators">
    				    <constructor-arg index="0" value="and" />
                        <constructor-arg index="1" value="or" />
    				</bean>
    			</entry>
                <entry key="dk">
                    <bean class="org.kuali.student.common.messagebuilder.impl.BooleanOperators">
                        <constructor-arg index="0" value="og" />
                        <constructor-arg index="1" value="eller" />
                    </bean>
                </entry>
                <entry key="de">
                    <bean class="org.kuali.student.common.messagebuilder.impl.BooleanOperators">
                        <constructor-arg index="0" value="und" />
                        <constructor-arg index="1" value="oder" />
                    </bean>
                </entry>
                <entry key="fr">
                    <bean class="org.kuali.student.common.messagebuilder.impl.BooleanOperators">
                        <constructor-arg index="0" value="et" />
                        <constructor-arg index="1" value="ou" />
                    </bean>
                </entry>
                <entry key="jp">
                    <bean class="org.kuali.student.common.messagebuilder.impl.BooleanOperators">
                        <constructor-arg index="0" value="および" />
                        <constructor-arg index="1" value="または" />
                    </bean>
                </entry>
                <entry key="zh">
                    <bean class="org.kuali.student.common.messagebuilder.impl.BooleanOperators">
                        <constructor-arg index="0" value="和" />
                        <constructor-arg index="1" value="或" />
                    </bean>
                </entry>
    		</map>
    	</property>
    </bean>

    <bean id="naturalLanguageMessageBuilder"
        class="org.kuali.student.core.statement.naturallanguage.translators.NaturalLanguageMessageBuilder">
        <constructor-arg index="0" value="en" />
        <constructor-arg index="1" ref="booleanOperatorLanguageMap" />
    </bean>

    <bean id="reqComponentTranslator"
        class="org.kuali.student.core.statement.naturallanguage.translators.ReqComponentTranslator">
        <property name="contextRegistry" ref="contextRegistryReqComponent" />
        <!--property name="language" value="en" /-->
    </bean>

    <bean id="statementTranslator"
        class="org.kuali.student.core.statement.naturallanguage.translators.StatementTranslator">
        <property name="reqComponentTranslator" ref="reqComponentTranslator" />
        <property name="messageBuilder" ref="naturalLanguageMessageBuilder" />
        <!--property name="language" value="en" /-->
    </bean>

    <bean id="naturalLanguageTranslator"
        class="org.kuali.student.core.statement.naturallanguage.translators.NaturalLanguageTranslatorImpl">
        <property name="reqComponentTranslator" ref="reqComponentTranslator" />
        <property name="statementTranslator" ref="statementTranslator" />
        <property name="language" value="en" />
    </bean>
