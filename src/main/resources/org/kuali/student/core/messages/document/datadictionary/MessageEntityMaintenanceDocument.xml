<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dd="http://rice.kuali.org/dd"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

  <bean id="MessageEntityMaintenanceDocument" parent="MessageEntityMaintenanceDocument-parentBean"/>

  <bean id="MessageEntityMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry" 
  		p:businessObjectClass="org.kuali.student.core.messages.bo.MessageEntity"
  		p:maintainableClass="org.kuali.student.core.messages.maintenance.MessageMaintainable">
    <property name="maintainableSections">
      <list>
        <ref bean="MessageEntityMaintenanceDocument-MessageEntityMaintenance"/>
      </list>
    </property>
    <property name="lockingKeys">
      <list>
        <value>databaseId</value>
      </list>
    </property>
    <property name="documentTypeName" value="MessageEntityDocumentType"/>
  </bean>

  <!-- Maintenance Section Definitions -->

  <bean id="MessageEntityMaintenanceDocument-MessageEntityMaintenance" parent="MessageEntityMaintenanceDocument-MessageEntityMaintenance-parentBean"/>

  <bean id="MessageEntityMaintenanceDocument-MessageEntityMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="title" value="Message Maintenance"/>
    <property name="maintainableItems">
      <list>
      	<bean parent="MaintainableFieldDefinition" p:name="id" p:required="true"/>
      	<bean parent="MaintainableFieldDefinition" p:name="locale" p:required="true"/>
      	<bean parent="MaintainableFieldDefinition" p:name="groupName" p:required="true"/>
      	<bean parent="MaintainableFieldDefinition" p:name="value" p:required="true"/>
      </list>
    </property>
  </bean>

</beans>