    <!-- Not used to view audit reports. -->
    <bean id="DegreeAudit-FormView" parent="MyPlanFormView">
        <property name="headerText" value="Audit Degree"/>

        <!-- To Support progressive disclosure of campus select -->
        <property name="persistFormToSession" value="true"/>
        <property name="viewName" value="DegreeAudit-FormView"/>
        <property name="id" value="DegreeAudit-FormView"/>
        <property name="entryPageId" value="degree_audit"/>
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-view</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>

        <property name="additionalScriptFiles">
            <list>
                <value>ks-myplan/scripts/myplan.audit.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-myplan/css/audit.css</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Page" p:id="degree_audit">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean id="degree_audit_block" parent="Uif-VerticalBoxSection"
                                  p:style="width: 700px; margin-right: 10px; float: left;">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="onDocumentReadyScript" value="
                                    blockPendingAudit('audit_section');
                                "/>
                                <property name="items">
                                    <list>
                                        <ref bean="run_degree_audits"/>
                                        <ref bean="audit_section"/>
                                    </list>
                                </property>
                                <property name="propertyReplacers">
                                    <list>
                                        <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                              p:condition="T(org.kuali.student.myplan.utils.UserSessionHelper).isAdviser()">
                                            <property name="replacement">
                                                <list>
                                                    <ref bean="audit_adviser_actions_message"/>
                                                    <ref bean="audit_section"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxSection" p:style="width: 230px; margin: 0;">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="myplan_section">
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>no-primary</value>
                                                </list>
                                            </property>
                                            <property name="items">
                                                <list>
                                                    <bean parent="your_stuff_widget" p:headerText="">
                                                        <property name="header.render" value="false"/>
                                                        <property name="items">
                                                            <list>
                                                                <ref bean="non_student_degree_audits_list"/>
                                                            </list>
                                                        </property>
                                                        <property name="propertyReplacers">
                                                            <list>
                                                                <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                                                      p:condition="T(org.kuali.student.myplan.utils.UserSessionHelper).isStudent()">
                                                                    <property name="replacement">
                                                                        <list>
                                                                            <ref bean="degree_audits_list"/>
                                                                        </list>
                                                                    </property>
                                                                </bean>
                                                            </list>
                                                        </property>
                                                    </bean>
                                                    <bean parent="your_stuff_widget" p:headerText="">
                                                        <property name="header.render" value="false"/>
                                                        <property name="items">
                                                            <list>
                                                                <ref bean="watch_list"/>
                                                            </list>
                                                        </property>
                                                        <property name="propertyReplacers">
                                                            <list/>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-Page" p:id="degree_audit_non_student_page">
                    <property name="layoutManager">
                        <bean parent="Uif-HorizontalBoxLayout"/>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:style="width: 700px; margin-right: 10px;">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <ref bean="non_student_degree_audits"/>
                                    </list>
                                </property>
                                <property name="propertyReplacers">
                                    <list>
                                        <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                              p:condition="T(org.kuali.student.myplan.utils.UserSessionHelper).isAdviser()">
                                            <property name="replacement">
                                                <list>
                                                    <ref bean="audit_adviser_actions_message"/>
                                                    <ref bean="non_student_degree_audits"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalBoxSection" p:style="width: 230px; margin: 0;">
                                <property name="layoutManager">
                                    <bean parent="Uif-VerticalBoxLayout"/>
                                </property>
                                <property name="items">
                                    <list>
                                        <bean parent="myplan_section">
                                            <property name="items">
                                                <list>

                                                    <bean parent="your_stuff_widget" p:headerText="">
                                                        <property name="header.render" value="false"/>
                                                        <property name="items">
                                                            <list>
                                                                <ref bean="watch_list"/>
                                                            </list>
                                                        </property>
                                                        <property name="propertyReplacers">
                                                            <list/>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
        <property name="footer.render" value="false"/>
        <property name="formClass" value="org.kuali.student.myplan.audit.form.DegreeAuditForm"/>
    </bean>

    <bean id="audit_section" parent="Uif-VerticalBoxSubSection">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-audit-report</value>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="empty_degree_audits"/>
                <ref bean="audit_report_section"/>
            </list>
        </property>
    </bean>

    <bean id="audit_report_section" parent="Uif-VerticalBoxSubSection">
        <property name="onDocumentReadyScript" value="
            initAuditActions();
        "/>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalBoxGroup">
                    <property name="items">
                        <list>
                            <bean id="txtaudit" parent="Uif-Message" p:messageText="@{getAuditHtml()}"
                                  p:style="display:block;"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="run_degree_audits" parent="Uif-VerticalBoxGroup">
        <property name="cssClasses">
            <list merge="true">
                <value>myplan-run-audit-panel</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderFive"/>
        </property>
        <property name="items">
            <list>
                <ref bean="select_instruction"/>
                <ref bean="campus_params"/>
                <ref bean="program_params"/>
                <!-- <ref bean="degree_audit_run"/> -->
                <!-- <ref bean="audit_type"/> -->
                <ref bean="audit_instruction"/>
            </list>
        </property>
    </bean>

    <bean id="empty_degree_audits" parent="Uif-HorizontalBoxGroup" p:style="padding: 10px;"
          p:render="@{getAuditHtml() eq null ? true : false}" p:headerText="How to Use Degree Audit (DARS) for Academic Planning">
        <property name="header">
            <bean parent="Uif-HeaderFour" p:style="padding: 5px;"/>
        </property>
        <property name="items">
            <list>
                <ref bean="degree_audit_info_2"/>
                <ref bean="degree_audit_info_1"/>
            </list>
        </property>
    </bean>

    <bean id="non_student_degree_audits" parent="Uif-HorizontalBoxGroup" p:style="padding: 10px;">
        <property name="header">
            <bean parent="Uif-HeaderFour" p:style="padding: 5px;"/>
        </property>
        <property name="items">
            <list>
                <ref bean="degree_audit_non_student_info"/>
            </list>
        </property>
    </bean>

    <bean id="degree_audit_non_student_info" parent="Uif-VerticalFieldGroup"
          p:style="padding: 10px;  border-color: #DAEAFF; ">
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-600</value>
                <value>myplan-audit-info-panel</value>
                <value>myplan-audit-message-info</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean id="audit_inf_text_1" parent="Uif-Message" p:style="padding: 5px;"
                      p:cssClasses="fl-font-size-100 ">
                    <property name="messageText"
                              value="The Audit feature is disabled for non-students. We are unable to run a degree audit for you at this time."/>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="degree_audit_info_1" parent="Uif-VerticalFieldGroup" p:style="padding: 10px;">
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-300</value>
                <value>myplan-audit-info-panel</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean id="audit_info_header_1" parent="Uif-Message" p:style="padding: 5px;"
                      p:cssClasses="fl-font-size-130 fl-text-gray fl-text-bold myplan-carousel-list">
                    <property name="messageText" value="Track Your Progress"/>
                </bean>
                <bean id="audit_info_text_1" parent="Uif-Message" p:style="padding: 5px;"
                      p:cssClasses="fl-font-size-100 ">
                    <property name="messageText"
                              value="Stay on top of your required credits and courses. DARS will compare your academic record with program requirements so that you know what&#39;s needed to complete your degree. "/>
                </bean>
                <bean id="audit_info_footer_1" parent="Uif-Message" p:style="padding: 5px;"
                      p:cssClasses="fl-font-size-100 ">
                    <property name="messageText"
                              value="Select your program from the menu above &amp; run DARS to see your academic progress now."/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="degree_audit_info_2" parent="Uif-VerticalFieldGroup" p:style="padding: 10px; height: 185px;">
        <property name="cssClasses">
            <list merge="true">
                <value>fl-container-300</value>
                <value>myplan-audit-info-panel</value>
                <value>myplan-carousel-list</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean id="audit_info_header_2" parent="Uif-Message" p:style="padding: 5px;"
                      p:cssClasses="fl-font-size-130 fl-text-gray fl-text-bold ">
                    <property name="messageText" value="Explore Programs and Minors"/>
                </bean>
                <bean id="audit_info_text_2" parent="Uif-Message" p:style="padding: 5px;"
                      p:cssClasses="fl-font-size-100 ">
                    <property name="messageText"
                              value="Still deciding on a degree program? DARS can help you determine your academic progress towards any degree."/>
                </bean>
                <bean id="audit_info_footer_2" parent="Uif-Message" p:style="padding: 5px;"
                      p:cssClasses="fl-font-size-100 ">
                    <property name="messageText"
                              value="Select a program from the menu above and run DARS to explore listed majors and more."/>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="select_instruction" parent="Uif-Message" p:cssClasses="myplan-text-normal">
        <property name="messageText"
                  value="Select your campus and choose a degree program or minor from the dropdown menu below. Audits may take 1-5 minutes to load. You can leave this page to browse MyPlan further while you wait."/>
    </bean>

    <bean id="campus_params" parent="Uif-HorizontalFieldGroup">
        <property name="items">
            <list>
                <bean id="radio_campusParam" parent="Uif-InputField" p:propertyName="campusParam">
                    <property name="onChangeScript" value="
                        jQuery('button#degree_audit_run').attr('disabled', degreeAuditButton());
                        setUrlHash('modified', 'yes');
                    "/>
                    <property name="control">
                        <bean parent="Uif-HorizontalRadioControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.myplan.course.util.AuditRunCampusParam"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="program_params" parent="Uif-HorizontalBoxSection" p:layoutManager.orientation="HORIZONTAL">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection"
                      p:progressiveRender="campusParam eq '306'" p:disclosure.render="false">
                    <property name="items">
                        <list>
                            <bean id="select_programParam_seattle" parent="Uif-InputField"
                                  p:propertyName="programParamSeattle" p:validationMessages.render="false">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl">
                                        <property name="onChangeScript"
                                                  value="jQuery('button#degree_audit_run').attr('disabled', degreeAuditButton());"/>
                                    </bean>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.myplan.course.util.DegreeAuditSeattlePrograms"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalBoxSection"
                      p:progressiveRender="campusParam eq '310'" p:disclosure.render="false">
                    <property name="items">
                        <list>
                            <bean id="select_programParam_bothell" parent="Uif-InputField"
                                  p:propertyName="programParamBothell" p:validationMessages.render="false"
                                  p:width="auto">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl">
                                        <property name="onChangeScript"
                                                  value="jQuery('button#degree_audit_run').attr('disabled', degreeAuditButton());"/>
                                    </bean>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.myplan.course.util.DegreeAuditBothellPrograms"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalBoxSection"
                      p:progressiveRender="campusParam eq '323'" p:disclosure.render="false">
                    <property name="items">
                        <list>
                            <bean id="select_programParam_tacoma" parent="Uif-InputField"
                                  p:propertyName="programParamTacoma" p:validationMessages.render="false"
                                  p:width="auto">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl">
                                        <property name="onChangeScript"
                                                  value="jQuery('button#degree_audit_run').attr('disabled', degreeAuditButton());"/>
                                    </bean>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.myplan.course.util.DegreeAuditTacomaPrograms"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <ref bean="degree_audit_run"/>
            </list>
        </property>
    </bean>


    <bean id="degree_audit_run" parent="Uif-AjaxActionButton" p:methodToCall="runAudit" p:disabled="true"
          p:refreshId="audit_section" p:focusOnIdAfterSubmit="degree_audits_summary"
          p:actionLabel="Run Degree Audit"> <!-- audit_report_section degree_audit_block-->
        <property name="onClickScript" value="setPendingAudit(2); setUrlHash('modified','yes'); changeLoadingMessage('.myplan-audit-report');"/>
        <property name="onDocumentReadyScript" value="
            if (jQuery.cookie('myplan_audit_running')) {
                jQuery('button#degree_audit_run').attr('disabled', true);
            } else {
                jQuery('button#degree_audit_run').attr('disabled', degreeAuditButton());
            }
            jQuery('button#degree_audit_run').subscribe('AUDIT_COMPLETE', function () {
                jQuery(this).attr('disabled', degreeAuditButton());
            });
        "/>
    </bean>

    <bean id="audit_instruction" parent="Uif-HorizontalBoxGroup" p:validationMessages.render="false">
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:cssClasses="fl-font-size-90"
                      p:style="margin-right: 4px; text-decoration: underline;">
                    <property name="linkText"
                              value="Some programs are not included"/>
                    <property name="href"
                              value="javascript:openHelpWindow('http://depts.washington.edu/myplan/help-site/#855');"/>
                </bean>
                <bean parent="Uif-Message" p:cssClasses="fl-text-gray fl-font-size-90">
                    <property name="messageText" value=" in the degree program list for audit."/>
                </bean>
            </list>
        </property>

    </bean>


</beans>