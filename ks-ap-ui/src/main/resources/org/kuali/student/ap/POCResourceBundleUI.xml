    <!-- Bean for the resource bundle loader -->
    <bean id="POCResourceLoader" class="org.kuali.i18n.KualiResourceBundle">
        <property name="baseName" value="org.kuali.student.ap.bundles.POCResourceBundleUI"/>
    </bean>

	<bean id="POCResourceBundle-FormView" parent="POCResourceBundle-FormView-parent"/>
	<bean abstract="true" id="POCResourceBundle-FormView-parent" parent="KSAPFormView">
        <property name="id" value="POCResourceBundle-FormView" />
		<property name="headerText" value="#{POCResourceLoader.getString('poc.title')}" />
		<property name="entryPageId" value="poc_resource_bundle" />
		<property name="cssClasses">
			<list merge="true">
				<value>ksap-view</value>
			</list>
		</property>
		<property name="header">
			<bean parent="Uif-HeaderTwo" />
		</property>
		<property name="additionalScriptFiles">
			<list>
			</list>
		</property>
		<property name="items">
			<list>
				<ref bean="poc_resource_bundle_page" />
			</list>
		</property>
		<property name="footer.render" value="false" />
		<property name="formClass"
			value="org.kuali.student.ap.i18n.form.POCResourceBundleFormImpl" />
	</bean>

	<bean id="poc_resource_bundle_page" parent="poc_resource_bundle_page-parent" />
	<bean abstract="true" id="poc_resource_bundle_page-parent" parent="Uif-Page" p:id="poc_resource_bundle">
		<property name="instructionalText"
			value="#{POCResourceLoader.getString('poc.description')}" />
		<property name="layoutManager">
			<bean parent="Uif-VerticalBoxLayout" />
		</property>
		<property name="items">
			<list>
                <bean parent="Uif-Message" p:messageText="Hard coded text (BAD)" />

                <bean parent="Uif-Message"
                      p:messageText="#{POCResourceLoader.getString('poc.staticText')}"/>

                <bean parent="Uif-Message"
                      p:messageText="#{POCResourceLoader.getFormattedMessage('poc.textWithPlaceholder', new Object[]{'1'})}"/>

                <bean parent="Uif-Message"
                      p:messageText="#{POCResourceLoader.getFormattedMessage('poc.textWithStringPlaceholder', new Object[]{'one'})}"/>

                <!-- Don't try this..it won't work!
                <bean parent="Uif-Message"
                      p:messageText="#{POCResourceLoader.getFormattedMessage('poc.textWithStringPlaceholder', 'one')}"/>
                -->

                <bean parent="Uif-Message"
                      p:messageText="#{POCResourceLoader.getFormattedMessage('poc.textWithMultiplePlaceholders', '3', 'number', 'string')}"/>

                <bean parent="Uif-Message"
                      p:messageText="#{POCResourceLoader.getFormattedMessage('poc.textWithMultiplePlaceholders', new Object[]{'3', 'number', 'string'})}"/>

			</list>
		</property>
        <property name="stickyFooter" value="false"/>
	</bean>

</beans>
