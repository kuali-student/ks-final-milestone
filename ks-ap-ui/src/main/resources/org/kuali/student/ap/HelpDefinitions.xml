    <bean id="quarter_facet_help_icon" parent="KSAPHelpImage">
        <property name="toolTip">
          <bean parent="KSAP-Tooltip-Left" p:tooltipContent="@{T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTextHelper().getText('DETAILS_TERMS_TOOLTIP_TEXT')}"/>
        </property>
    </bean>

    <bean id="bookmarks_help_icon" parent="KSAPHelpImage">
        <property name="toolTip">
          <bean parent="KSAP-Tooltip-Right" p:tooltipContent="Bookmark a course to save it for future planning. The course remains in your bookmarks until you've added it to your Plan or deleted it."/>
        </property>

    </bean>

    <bean id="recent_audits_help_icon" parent="KSAPHelpImage">
         <property name="toolTip">
          <bean parent="KSAP-Tooltip-Right" p:tooltipContent="Displays the last seven audits run through K.S.A.P. Audits are cleared at the end of each term."/>
        </property>
    </bean>

    <bean id="course_requisite_help_icon" parent="KSAPHelpImage">
        <property name="toolTip">
            <bean parent="KSAP-Tooltip-Left"
                  p:tooltipContent="&lt;div class=\ks-Tooltip\&gt;@{T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTextHelper().getText('DETAILS_REQUISITE_TOOLTOP_COREQ_TEXT')}
                                    @{T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTextHelper().getText('DETAILS_REQUISITE_TOOLTOP_PREREQ_TEXT')}&lt;/div&gt;"/>
        </property>
    </bean>

    <bean id="course_quarter_help_icon" parent="KSAPHelpImage">
        <property name="toolTip">
            <bean parent="KSAP-Tooltip-Left"
                  p:tooltipContent="&lt;div class=\ks-Tooltip\&gt;@{T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTextHelper().getText('DETAILS_TERMS_TOOLTIP_TEXT')}&lt;/div&gt;"/>
        </property>
    </bean>

    <bean id="course_gened_help_icon" parent="KSAPHelpImage">
        <property name="toolTip">
            <bean parent="KSAP-Tooltip-Left"
                  p:tooltipContent="&lt;div class=\ks-Tooltip\&gt;@{T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTextHelper().getText('DETAILS_GENED_TOOLTIP_TEXT')}&lt;/div&gt;"/>
        </property>
    </bean>

    <bean id="course_sections_help_icon" parent="KSAPHelpImage">
        <property name="toolTip">
            <bean parent="KSAP-Tooltip-Right"
                  p:tooltipContent="&lt;div class=\ks-Tooltip\&gt;&lt;strong&gt;ENRL/LIMIT&lt;/strong&gt; = section enrollment and overall enrollment limit&lt;/br&gt;
                  &lt;strong&gt;ENRL. RESTR.&lt;/strong&gt; = applicable enrollment restrictions for each section&lt;/br&gt;
                  &lt;strong&gt;OTHER&lt;/strong&gt; = additional information for each section&lt;/br&gt;
                  &lt;strong&gt;PCE&lt;/strong&gt; = Professional &amp; Continuing Education&lt;/br&gt;&lt;/div&gt;
                  "/>
        </property>
    </bean>

    <bean id="KSAP-Planner-Tooltip" parent="KSAP-Tooltip">
        <property name="onFocus" value="false"/>
        <property name="onMouseHover" value="false"/>
    </bean>
    <bean id="academic_record_help_tooltip" parent="KSAP-Planner-Tooltip" p:tooltipContent="@{#line.completed ? 'A completed term you registered for.' : 'A course you have enrolled in for current or future academic term(s).'}"/>
    <bean id="cart_help_tooltip" parent="KSAP-Planner-Tooltip" p:tooltipContent="Items in the cart are those you have selected to register for but have not been submitted for registration yet."/>
    <bean id="planned_help_tooltip" parent="KSAP-Planner-Tooltip" p:tooltipContent="A course you added to your plan for a specific term, but have not or cannot yet register for. KSAP allows you to create an academic plan, but does not register you.  Check the Time Schedule to verify that your planned courses will be offered that term."/>
    <bean id="backup_help_tooltip" parent="KSAP-Planner-Tooltip" p:tooltipContent="A course you&#39;re considering in case a planned course is not available or is full."/>
    <bean id="total_credits_help_tooltip" parent="KSAP-Planner-Tooltip" p:tooltipContent="The total number of credits attempted for a completed term. Check your transcript to verify earned credits."/>
    <bean id="recent_audits_help_tooltip" parent="KSAP-Planner-Tooltip" p:tooltipContent="Displays the last seven audits run through KSAP. Audits are cleared at the end of each term."/>
    <bean id="bookmarks_help_tooltip" parent="KSAP-Planner-Tooltip" p:tooltipContent="Bookmark a course to save it for future planning. The course remains in your bookmarks until you've added it to your Plan or deleted it."/>
    <bean id="quarter_facet_help_tooltip" parent="KSAP-Planner-Tooltip" p:tooltipContent="@{T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTextHelper().getText('DETAILS_TERMS_TOOLTIP_TEXT')}"/>
</beans>
