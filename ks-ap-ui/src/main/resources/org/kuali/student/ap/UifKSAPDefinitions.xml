        <property name="header">
            <bean parent="Uif-HeaderSix"/>
        </property>
        <!--@TODO: KSAP-254: Refactor this JS into ksap.js-->
        <property name="onDocumentReadyScript" value="
            ksapRetrieveComponent('watch_list','bookmark_summary','search','lookup',{viewId:'BookmarkSideBar-LookupView'});
            var obj = jQuery('div.ksap-saved-courses-summary.ksap-stacked-list',jQuery('body').html());
            obj.on('PLAN_ITEM_DELETED', function(event, data){
                if (data.category === 'wishlist') {
                    ksapRetrieveComponent('saved_courses_summary','bookmark_summary','search','lookup',{viewId:'BookmarkSideBar-LookupView'});
                    jQuery('div.jquerybubblepopup.jquerybubblepopup-ksap .jquerybubblepopup-tail').fadeOut(250, function() {
                        jQuery(this).remove();
                        fnCloseAllPopups();
                    });
                }
            }).on('PLAN_ITEM_ADDED', function(event, data){
                if (data.category === 'wishlist') {
                    ksapRetrieveComponent('saved_courses_summary','bookmark_summary','search','lookup',{viewId:'BookmarkSideBar-LookupView'},data.planItemId);
                }
            });
        "/>
    </bean>

