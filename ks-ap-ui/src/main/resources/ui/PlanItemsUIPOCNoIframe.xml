    <!-- Single term view that lists planned course, total credits and backup courses -->
    <bean id="planned_courses_detail-POC-Same-View" parent="planned_courses_detail_parent-POC-Same-View" />
    <bean id="planned_courses_detail_parent-POC-Same-View" parent="Uif-VerticalBoxSubSection" abstract="true" p:cssClasses="ks-plan-View-pageDetails">
        <property name="onDocumentReadyScript" value="
            var popupStyle = {width:'300px', height:'16px'};
            var popupOptions = {tail:{hidden:true}, position:'right', align:'top', close:true};

            jQuery('.ksap-carousel-list li .ksap-term-current.open, .ksap-carousel-list li .ksap-term-future.open').find('.ksap-term-planned .uif-stackedCollectionLayout, .ksap-term-backup .uif-stackedCollectionLayout').each(function(){
            	var atpId = jQuery(this).parents('.ksap-carousel-term').data('atpid');
            	var backup = jQuery(this).parents('.ksap-carousel-term').data('plantype');
            	var boolbackup;
            	if(backup == 'planned') boolbackup=false;
            	else boolbackup=true;
            	var size = jQuery(this).parents('.ksap-carousel-term').data('size');
            	var xmlSafeAtpId=atpId.replace(/\./g, '-');
            	var jQuickAdd = jQuery('&lt;div /&gt;').addClass('quick-add-cell ks-plan-Bucket-addItem').html('Add a course to plan').click(function(e){
            		var retrieveData = {action:'plan', viewId:'PlannedCourse-FormView', methodToCall:'startQuickAddDialog', atpId:atpId, backup:boolbackup, pageId:'plan_item_add_page'};
                    openPopup('plan_item_add_page.'+xmlSafeAtpId+'-'+backup, retrieveData, 'plan', popupStyle, popupOptions, e);
            	});
            	if (size &lt; 8) {
            		jQuery(this).append(jQuickAdd.show());
            	} else {
            		jQuery(this).append(jQuickAdd.hide());
            	}
            });


            if ( jQuery('#planned_courses_detail_list-POC-Same-View ul:not(.errorLines) li').length > 0 ) {
                var iMaxHeight = Math.max.apply(null, jQuery('#planned_courses_detail_list-POC-Same-View ul:not(.errorLines) li').map(function() {
                    return jQuery(this).height();
                }).get());
                jQuery('#planned_courses_detail_list-POC-Same-View ul:not(.errorLines) li').height(iMaxHeight);
                var iStart = 0;
                if (readUrlHash('planView')) {
                    iStart = parseFloat(readUrlHash('planView'));
                } else {
                    if ( jQuery(&quot;div:hidden[id^='atp_start_index']&quot;).length > 0 ) {
                        iStart = parseFloat(jQuery(&quot;div:hidden[id^='atp_start_index']&quot;).text());
                    }

                }

                jQuery('#planned_courses_detail_list-POC-Same-View').jCarouselLite({
                    btnNext: '.ksap-carousel-next',
                    btnPrev: '.ksap-carousel-prev',
                    scroll: @{T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTermHelper().getNumberOfTermsInAcademicYear()},
                    visible: @{T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTermHelper().getNumberOfTermsInAcademicYear()},
                    start: iStart,
                    afterEnd: function(a) {
                        fnBuildTitle(a);
                        setUrlHash('planView', jQuery(a[0]).index());
                    },
                    initCallback: function(a) { fnBuildTitle(a); jQuery.unblockUI(); }
                });
            }
        "/>
        <property name="validationMessages.displayMessages" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="validationMessages.render" value="false"/>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>myplan-plan-heading</value>
                            <value>ks-plan-Header</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxGroup">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>ks-plan-Header-buttonWrapper</value>
                                        <value>ks-plan-Header-buttonWrapper--previous</value>
                                    </list>
                                </property>
                                <property name="validationMessages.render" value="false"/>
                                <property name="items">
                                    <list>
                                        <bean id="previous_year_button" parent="Uif-PrimaryActionButton"
                                              p:actionScript="" p:title="Previous Academic Year">
                                            <property name="actionImage">
                                                <bean parent="Uif-Image"
                                                      p:source="@{#ConfigProperties['ks.ap.externalizable.images.url']}pixel.gif">
                                                    <property name="cssClasses">
                                                        <list merge="true">
                                                            <value>ks-plan-Header-buttonImage</value>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>ksap-carousel-prev</value>
                                                    <value>ks-plan-Header-button</value>
                                                    <value>ks-plan-Header-button--previous</value>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                            <bean parent="Uif-MessageField">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>ksap-plan-header</value>
                                        <value>ks-plan-Header-headline</value>
                                    </list>
                                </property>
                                <property name="message">
                                    <bean parent="Uif-Message" p:messageText="Academic Year"/>
                                </property>
                            </bean>

                            <bean parent="Uif-VerticalBoxGroup">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>ks-plan-Header-buttonWrapper</value>
                                        <value>ks-plan-Header-buttonWrapper--next</value>
                                    </list>
                                </property>
                                <property name="validationMessages.render" value="false"/>
                                <property name="items">
                                    <list>
                                        <bean id="next_year_button" parent="Uif-PrimaryActionButton" p:actionScript=""
                                              p:title="Next Academic Year">
                                            <property name="actionImage">
                                                <bean parent="Uif-Image"
                                                      p:source="@{#ConfigProperties['ks.ap.externalizable.images.url']}pixel.gif">
                                                    <property name="cssClasses">
                                                        <list merge="true">
                                                            <value>ks-plan-Header-buttonImage</value>
                                                        </list>
                                                    </property>
                                                </bean>
                                            </property>
                                            <property name="cssClasses">
                                                <list merge="true">
                                                    <value>ksap-carousel-next</value>
                                                    <value>ks-plan-Header-button</value>
                                                    <value>ks-plan-Header-button--next</value>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="validationMessages.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField"
                                  p:messageText="Create your plan by finding and adding courses to any term."/>
                        </list>
                    </property>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>ks-plan-Instructions</value>
                        </list>
                    </property>
                </bean>
                <ref bean="planned_courses_detail_list-POC-Same-View"/>
                <ref bean="overallPlanLink"/>
            </list>
        </property>
    </bean>

    <bean id="planned_courses_detail_list-POC-Same-View" parent="planned_courses_detail_list-parent-POC-Same-View" />
    <bean id="planned_courses_detail_list-parent-POC-Same-View" parent="Uif-ListCollectionSection">
        <property name="validationMessages.render" value="false"/>
        <property name="collectionObjectClass" value="org.kuali.student.myplan.plan.dataobject.PlannedTerm"/>
        <property name="layoutManager.lineGroupPrototype.header.render" value="true"/>
        <property name="layoutManager.lineGroupPrototype.header.additionalCssClasses" value="ks-plan-TermsList-itemHeader"/>
        <property name="layoutManager.lineGroupPrototype.headerText" value="@{#line.qtrYear}"/>
        <property name="layoutManager.lineGroupPrototype.validationMessages.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.cssClasses">
            <list merge="true">
                <value>uif-group</value>
                <value>uif-boxGroup</value>
                <value>uif-verticalBoxGroup</value>
                <value>uif-boxSection</value>
                <value>@{#line.currentTermForView ? 'ksap-term-current' : (!#line.currentTermForView and
                    #line.openForPlanning ? 'ksap-term-future' : 'ksap-term-past')}
                </value>
                <value>@{#line.openForPlanning ? 'open' : 'closed'}</value>
                <value>ks-plan-TermsList-item</value>
                <value>@{#line.currentTermForView ? 'ks-plan-TermsList-item--current' : (!#line.currentTermForView and
                    #line.openForPlanning ? 'ks-plan-TermsList-item--future' : 'ks-plan-TermsList-item--past')}
                </value>
                <value>@{#line.openForPlanning ? 'ks-plan-TermsList-item--open' : 'ks-plan-TermsList-item--closed'}</value>
            </list>
        </property>
        <property name="layoutManager.lineGroupPrototype.style"
                  value="width:@{588/T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTermHelper().getNumberOfTermsInAcademicYear()}px;
                  margin:0 @{20/T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getTermHelper().getNumberOfTermsInAcademicYear()}px;"/>
        <property name="layoutManager.lineGroupPrototype.header.upperGroup">
            <bean parent="Uif-HorizontalBoxGroup" p:additionalCssClasses="ks-plan-TermNote">
                <property name="items">
                    <list>
                        <bean parent="menuTermOptionEdit">
                            <property name="dataAttributes">
                                <map>
                                    <entry key="atpid" value="@{#line.atpId}"/>
                                </map>
                            </property>
                        </bean>

                        <bean p:id="@{#line.atpId.replaceAll('\.','-')}termnote_message" parent="Uif-InputField">
                            <property name="propertyName" value="plannedTerms[@{#index}].termNoteUI" />
                            <property name="control">
                                <bean parent="Uif-TextAreaControl" p:cssClasses="ks-plan-TermNote-input"
                                      p:watermarkText="No Term Notes">
                                    <property name="disabled" value="true"/>
                                </bean>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
        <property name="layoutManager.lineGroupPrototype.header.cssClasses">
            <list merge="true">
                <value>ks-plan-TermsList-itemHeader</value>
            </list>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderFour" />
        </property>
        <property name="propertyName" value="plannedTerms"/>
        <property name="cssClasses">
            <list merge="true">
                <value>ksap-carousel-list</value>
                <value>myplan-remove-margin</value>
                <value>ks-plan-TermsList</value>
            </list>
        </property>
        <property name="header.render" value="true"/>
        <property name="items">
            <list>
                <!-- This hidden field is only rendered for the ATP that should have focus in the UI. The value of "index" will
                     be used to initialize the javascript "carousellite" component. It should only be displayed for the PlanTerm
                     that should get focus -->
                <bean p:id="atp_start_index" parent="Uif-DataField" p:propertyName="index"
                      p:render="@{#line.index ge 0}" p:style="display:none;"/>

                <bean p:id="plan_base_atpId" parent="Uif-DataField" p:propertyName="atpIdYear" p:style="display: none;">
                    <property name="fieldLabel.render" value="false"/>
                </bean>

                <bean p:id="@{#line.atpId}_plan_status" parent="Uif-InputField" p:propertyName="openForPlanning">
                    <property name="fieldLabel.render" value="false"/>
                    <property name="control">
                        <bean parent="Uif-HiddenControl"/>
                    </property>
                </bean>
            </list>
        </property>
        <property name="subCollections">
            <list>
                <ref bean="academicRecordCollection"/>
                <ref bean="cartCollection"/>
                <ref bean="plannedCollection-POC-Same-View"/>
                <ref bean="backupCollection"/>
            </list>
        </property>
        <property name="propertyReplacers">
            <list>
                <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="subCollections"
                      p:condition="T(org.kuali.student.ap.framework.config.KsapFrameworkServiceLocator).getUserSessionHelper().isAdviser()">
                    <property name="replacement">
                        <list>
                            <ref bean="advisorAcademicRecordCollection"/>
                            <ref bean="advisorPlannedCollection"/>
                            <ref bean="advisorBackupCollection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="onDocumentReadyScript" value="
            truncateField('planned_courses_detail_list-POC-Same-View', true);
            jQuery('#planned_courses_detail_list-POC-Same-View').on('PLAN_ITEM_ADDED', function(event, data) {
                if(data.category === 'wishlist'){
                }else{
                    fnAddPlanItem(data.atpId, data.category, data.planItemId, data.courseDetails.code, data.courseDetails.courseTitle, data.courseDetails.credit, data.showAlert, data.termName, data.timeScheduleOpen);
                }
            }).on('PLAN_ITEM_DELETED', function(event, data) {
                fnRemovePlanItem(data.atpId, data.category, data.planItemId);
            }).on('PLAN_ITEM_UPDATED', function(event, data) {
                fnUpdatePlanItem(data);
            }).on('TERM_NOTE_UPDATED', function(event, data) {
                fnUpdateTermNote(data.atpId, data.termNote);
            }).on('UPDATE_NEW_TERM_TOTAL_CREDITS', function(event, data) {
                fnUpdateCredits(data.atpId, data.totalCredits, data.cartCredits);
            }).on('UPDATE_OLD_TERM_TOTAL_CREDITS', function(event, data) {
                fnUpdateCredits(data.atpId, data.totalCredits, data.cartCredits);
            });
        "/>
    </bean>

    <bean id="plannedCollection-POC-Same-View" parent="plannedCollection-parent-POC-Same-View"/>
    <bean id="plannedCollection-parent-POC-Same-View" abstract="true" parent="Uif-StackedCollectionGroup" p:headerText="Planned">
        <property name="validationMessages.render" value="false"/>
        <property name="header">
            <bean parent="Uif-HeaderSix" p:additionalCssClasses="ks-plan-Bucket-header"/>
        </property>
        <property name="header.rightGroup">
            <bean parent="Uif-HorizontalBoxGroup" p:additionalCssClasses="ks-plan-Bucket-headerHelpIcons">
                <property name="validationMessages.render" value="false"/>
                <property name="items">
                    <list>
                        <ref bean="planned_help_icon"/>
                    </list>
                </property>
            </bean>
        </property>
        <property name="layoutManager">
            <bean parent="Uif-StackedCollectionLayout-WithBoxItems">
                <property name="cssClasses">
                    <list merge="true">
                        <value>ks-plan-Bucket-collection</value>
                    </list>
                </property>
                <property name="lineGroupPrototype">
                    <bean parent="Uif-CollectionVerticalBoxItem"/>
                </property>
            </bean>
        </property>
        <property name="dataAttributes">
            <map>
                <entry key="plantype" value="planned"/>
                <entry key="atpid" value="@{#line.atpId}"/>
                <entry key="size" value="@{#line.plannedList.size()}"/>
            </map>
        </property>
        <property name="cssClasses">
            <list merge="false">
                <value>ksap-carousel-term</value>
                <value>@{#line.atpId.replaceAll("\.","-")}</value>
                <value>ksap-term-planned</value>
                <value>@{#line.openForPlanning ? 'ksap-term-fixed-height' : ''}</value>
                <value>ks-plan-Bucket</value>
            </list>
        </property>
        <property name="layoutManager.lineGroupPrototype.footer.render" value="false"/>
        <property name="layoutManager.lineGroupPrototype.validationMessages.render" value="false"/>
        <property name="collectionObjectClass"
                  value="org.kuali.student.myplan.plan.dataobject.PlannedCourseDataObject"/>
        <property name="propertyName" value="plannedList"/>
        <property name="renderAddLine" value="false"/>
        <property name="renderLineActions" value="false"/>
        <property name="bindingInfo.bindToForm" value="true"/>
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean p:id="@{#line.planItemDataObject.id}_planned" parent="Uif-HorizontalFieldGroup"
                      p:render="@{#line.courseCode ne null}"
                      p:title="@{#line.courseTitle}">
                    <property name="group.validationMessages.render" value="false"/>
                    <property name="onClickScript"
                              value="openMenu('@{#line.planItemDataObject.id}_planned','planned_menu_items','@{#line.planItemDataObject.atp}',e,'.uif-collectionItem','fl-container-150 uif-boxLayoutHorizontalItem',{tail:{align:'top'},align:'top',position:'right'},false);"/>
                    <!-- TODO: after M2 upgrade : add SpEL for page name in openMenu param to swtich menu -->
                    <!-- @{#parentLine.openForPlanning ? 'planned_menu_items' : 'completed_backup_menu_items'} -->
                    <property name="dataAttributes">
                        <map>
                            <entry key="courseid" value="@{#line.courseDetails.courseId}"/>
                            <entry key="planitemid" value="@{#line.planItemDataObject.id}"/>
                            <entry key="atpid" value="@{#line.planItemDataObject.atp}"/>
                        </map>
                    </property>
                    <property name="cssClasses">
                        <list merge="true">
                            <value>ksap-course-valid</value>
                            <value>@{#line.timeScheduleOpen ? 'schedule':''}</value>
                            <value>ks-plan-Bucket-item</value>
                            <value>ks-plan-Bucket-item--valid</value>
                            <value>ks-plan-Bucket--scheduleOpen</value>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-ImageField"
                                  p:source="@{#ConfigProperties['ks.ap.externalizable.images.url']}pixel.gif"
                                  p:title="@{#line.showAlert ? #line.courseCode + ' is not scheduled for '+ #line.planItemDataObject.termName : #line.courseCode + ' is scheduled for '+ #line.planItemDataObject.termName}"
                                  p:altText="@{#line.showAlert ? #line.courseCode + ' is not scheduled for '+ #line.planItemDataObject.termName : #line.courseCode + ' is scheduled for '+ #line.planItemDataObject.termName}"
                                  p:render="@{#line.timeScheduleOpen}">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>schedule-status</value>
                                        <value>@{#line.showAlert ? 'not-scheduled' : 'scheduled'}</value>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-MessageField">
                                <property name="messageText" value="@{#line.campusCode} @{#line.courseCode} @{#line.activityCode}"/>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>code</value>
                                        <value>ks-plan-Bucket-itemCode</value>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-MessageField">
                                <property name="messageText" value="@{#line.courseDetails.credit}"/>
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>credit</value>
                                        <value>ks-plan-Bucket-itemCreditCount</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="collectionLookup.render" value="false"/>
        <property name="collectionLookup.quickfinderAction.render" value="false"/>
        <property name="footer">
            <bean parent="Uif-VerticalBoxGroup">
                <property name="validationMessages.render" value="false"/>
                <property name="items">
