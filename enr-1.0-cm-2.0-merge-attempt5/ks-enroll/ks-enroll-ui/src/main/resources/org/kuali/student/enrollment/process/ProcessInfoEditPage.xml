    <bean id="KS-ProcessInfoSearch-EditPage" parent="Uif-Page">
        <property name="id" value="processInfoSearch-EditPage"/>
        <property name="headerText" value="Edit Process"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField-LabelTop" p:label="Process Name" p:propertyName="name">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="20" p:disabled="true"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField-LabelTop" p:label="Process Category" p:propertyName="typeKey" >
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="20" p:disabled="true"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField-LabelTop" p:label="Process Description" p:propertyName="descr" >
                                <property name="control">
                                    <bean parent="Uif-SmallTextAreaControl"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField-LabelTop"  p:label="Owning Organization"  p:propertyName="orgName" p:style="font-weight:bold;white-space:nowrap;" >
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="16" p:disabled="true"/>
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.organization.dto.OrgInfo"/>
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="id" value="ownerOrgId"/>
                                        <entry key="shortName" value="orgName"/>
                                    </map>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField-LabelTop" p:propertyName="ownerOrgId" p:label="" p:readOnly="true" p:hidden="true" />

                            <bean parent="Uif-InputField-LabelTop" p:label="State" p:propertyName="stateKey">
                                <property name="control">
                                    <bean parent="Uif-HorizontalRadioControl">
                                        <property name="options">
                                            <list>
                                                <bean parent="Uif-KeyLabelPair" p:key="kuali.process.process.state.active" p:value="Active"/>
                                                <bean parent="Uif-KeyLabelPair" p:key="kuali.process.process.state.disabled" p:value="Disabled" />
                                                <bean parent="Uif-KeyLabelPair" p:key="kuali.process.process.state.inactive" p:value="Inactive"/>
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-PrimaryActionButton" p:actionLabel="Update" p:methodToCall="update"/>
                            <bean parent="Uif-ActionLink" p:actionLabel="@{isSaveSuccess ? 'Back' : 'Cancel'}" p:methodToCall="back" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>