    <bean id="KS-CourseOfferingManagement-ManageActivityOfferingsPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="manageActivityOfferingsPage">
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-CriteriaSection"/>
                <ref bean="KS-CourseOfferingManagement-ActivityOfferingResultSection"/>
            </list>
        </property>
    </bean>


    <bean id="KS-CourseOfferingManagement-ActivityOfferingResultSection" p:id="ActivityOfferingResultSection" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="@{theCourseOffering.courseOfferingCode} - @{theCourseOffering.courseOfferingTitle} (@{theCourseOffering.creditCnt} Credits)" />
        <property name="disclosure.render" value="false"/>
        <property name="header.cssClasses">
          <list merge="true">
            <value>ks-borderBottom</value>
          </list>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-CourseOfferingLinks"/>
                <ref bean="KS-CourseOfferingManagement-AddActivityOfferingSection"/>
                <ref bean="KS-CourseOfferingManagement-SelectAll"/>
                <ref bean="KS-CourseOfferingManagement-ActivityOfferingListSection"/>
                <ref bean="KS-CourseOfferingManagement-SelectedActivityOfferingSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-AddActivityOfferingSection" parent="Uif-VerticalBoxSection" >
        <property name="disclosure.render" value="false"/>
        <property name="headerText" value="Add Activity Offering"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="formatIdForNewAO" p:label="Format" p:labelPlacement="TOP" p:required="true">
                                <property name="readOnly" value="false"/>
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:disabled="@{!#root.editAuthz}"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.FormatsForCreateAOKeyValues" p:addBlankOption="false" />
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="activityIdForNewAO" p:label="Activity Type" p:labelPlacement="TOP" p:required="true" p:refreshWhenChangedPropertyNames="formatIdForNewAO">
                                <property name="readOnly" value="false"/>
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:disabled="@{!#root.editAuthz}"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.ActivitiesForCreateAOKeyValues" p:addBlankOption="false" />
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="noOfActivityOfferings" p:label="Quantity" p:labelPlacement="TOP" p:required="true">
                                <property name="readOnly" value="false"/>
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="3" p:disabled="@{!#root.editAuthz}"/>
                                </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="true" p:actionLabel="Add" p:methodToCall="addActivityOfferings" p:style="margin-top: 18px;" p:disabled="@{#parent.readOnly}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="KS-CourseOfferingManagement-CourseOfferingLinks" parent="Uif-HorizontalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-LinkGroup" >
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="coViewLinkWrapper" p:defaultValue="View">
                                            <property name="inquiry">
                                                <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingEditWrapper" p:inquiryParameters="theCourseOffering.id" />
                                            </property>
                                        </bean>
                                        <bean parent="Uif-HorizontalBoxSection" >
                                            <property name="headerText" value=""/>
                                            <property name="disclosure.render" value="false"/>
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-Label" p:labelText="|" p:renderColon="false"/>
                                                    <bean parent="Uif-ActionLink" p:methodToCall="editTheCO" p:actionLabel="Edit" p:disabled="@{#parent.readOnly}"/>
                                                    <bean parent="Uif-Label" p:labelText="|" p:renderColon="false"/>
                                                    <bean parent="Uif-ActionLink" p:methodToCall="deleteCoConfirmation" p:actionLabel="Delete" p:disabled="@{#parent.readOnly}" p:render = "@{theCourseOffering.stateKey eq 'kuali.lui.state.draft' or theCourseOffering.stateKey eq 'kuali.lui.course.offering.state.draft' or theCourseOffering.stateKey eq 'kuali.lui.course.offering.state.planned'}" />
                                                    <bean parent="Uif-Label" p:labelText="|" p:renderColon="false" p:render = "@{theCourseOffering.stateKey eq 'kuali.lui.state.draft' or theCourseOffering.stateKey eq 'kuali.lui.course.offering.state.draft' or theCourseOffering.stateKey eq 'kuali.lui.course.offering.state.planned'}"/>
                                                    <bean parent="Uif-ActionLink" p:methodToCall="manageRegGroups" p:actionLabel="Manage Registration Groups" p:disabled="@{#parent.readOnly}"/>
                                                </list>
                                            </property>
                                        </bean>

                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-LinkGroup" p:style="float:right">
                    <property name="items">
                        <list>
                            <bean parent="Uif-ActionLink" p:methodToCall="loadPreviousCO" p:actionLabel="&lt; @{previousCourseOfferingCodeUI}" p:render="@{!previousCourseOfferingCodeUI?.empty}"/>
                            <bean parent="Uif-Label" p:labelText="|" p:renderColon="false" p:render="@{!previousCourseOfferingCodeUI?.empty}"/>
                            <bean parent="Uif-ActionLink" p:methodToCall="loadCOs" p:actionLabel="List All" />
                            <bean parent="Uif-Label" p:labelText="|" p:renderColon="false" p:render="@{!nextCourseOfferingCodeUI?.empty}"/>
                            <bean parent="Uif-ActionLink" p:methodToCall="loadNextCO" p:actionLabel="@{nextCourseOfferingCodeUI} &gt;" p:render="@{!nextCourseOfferingCodeUI?.empty}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-SelectAll" parent="Uif-ActionLink" p:methodToCall="selectAllActivityOfferings" p:actionLabel="Select All" p:disabled="@{#parent.readOnly}"/>

    <bean id="KS-Schedule-DisplayField" parent="Uif-MessageField" p:cssClasses="font-light12" abstract="true">
        <property name="propertyReplacers">
          <list>
            <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="style"
                  p:condition="#line.aoInfo.scheduleId == null" p:replacement="color:grey;"/>
          </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-ActivityOfferingListSection" parent="Uif-TableCollectionSection"
          p:layoutManager.numberOfColumns="3"  p:renderAddLine="false" p:onDocumentReadyScript="removeColumns(@{#parent.readOnly}, [1], 'KS-CourseOfferingManagement-ActivityOfferingListSection');">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="propertyName" value="activityWrapperList" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 1, 'desc' ]]"/>
                <entry key="bPaginate" value="false"/>
                <entry key="bAutoWidth" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="isChecked" p:required="false" >
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:disabled="false"/>
                    </property>
                </bean>
                <bean parent="Uif-DataField"
                      p:label="CODE"
                      p:propertyName="aoInfo.activityCode">
                    <property name="inquiry">
                        <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" p:inquiryParameters="aoInfo.id" />
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="STATUS" p:propertyName="stateName" />
                <bean parent="Uif-DataField" p:label="TYPE" p:propertyName="typeName"/>
                <bean parent="Uif-DataField" p:label="FORMAT" p:propertyName="aoInfo.formatOfferingName"/>
                <bean parent="KS-Schedule-DisplayField" p:label="TBA" p:messageText="@{#line.tbaDisplayName}"/>
                <bean parent="KS-Schedule-DisplayField" p:label="DAYS" p:messageText="@{#line.daysDisplayName}" />
                <bean parent="KS-Schedule-DisplayField" p:label="START TIME" p:messageText="@{#line.startTimeDisplay}" />
                <bean parent="KS-Schedule-DisplayField" p:label="END TIME" p:messageText="@{#line.endTimeDisplay}" />
                <bean parent="KS-Schedule-DisplayField" p:label="FACILITY" p:messageText="@{#line.buildingName}"/>
                <bean parent="KS-Schedule-DisplayField" p:label="ROOM" p:messageText="@{#line.roomName}"/>
                <bean parent="Uif-DataField" p:label="INSTRUCTOR" p:propertyName="firstInstructorDisplayName"/>
                <bean parent="Uif-DataField" p:label="MAX ENR" p:propertyName="aoInfo.maximumEnrollment"/>
            </list>
        </property>
        <property name="layoutManager.actionFieldPrototype">
            <bean parent="Uif-HorizontalFieldGroup" p:align="left" p:required="false" p:label="Actions"/>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-NavigationActionLink" p:methodToCall="copyAO" p:actionLabel="Copy" />
                <bean parent="Uif-NavigationActionLink" p:methodToCall="edit" p:actionLabel="Edit" />
                <bean parent="Uif-NavigationActionLink" p:methodToCall="confirmDelete" p:actionLabel="Delete" p:render = "@{#line.isLegalToDelete()}" />
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-SelectedActivityOfferingSection" parent="Uif-VerticalBoxSection" >
        <property name="items">
        <list>
            <bean parent="Uif-HorizontalBoxSection">
                <property name="items">
                    <list>
                        <bean parent="Uif-InputField" p:propertyName="selectedOfferingAction" p:label="Selected Offering Actions" p:labelPlacement="TOP" >
                            <property name="readOnly" value="false"/>
                            <property name="control">
                                <bean parent="Uif-DropdownControl" p:disabled="@{!#root.editAuthz}"/>
                            </property>
                            <property name="optionsFinder">
                                <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.ActivityOfferingActionsKeyValues"/>
                            </property>
                        </bean>
                        <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Go" p:methodToCall="selectedAoActions" p:style="margin-top: 18px;" p:disabled="@{#parent.readOnly}"/>
                    </list>
                </property>
            </bean>
        </list>
        </property>
    </bean>

</beans>