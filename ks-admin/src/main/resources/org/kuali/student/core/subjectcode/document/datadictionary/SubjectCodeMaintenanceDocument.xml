<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:dd="http://rice.kuali.org/dd"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://rice.kuali.org/dd
                           http://rice.kuali.org/dd/dd.xsd">

	<bean id="SubjectCodeMaintenanceDocument" parent="SubjectCodeMaintenanceDocument-parentBean" />
	<bean id="SubjectCodeMaintenanceDocument-parentBean" abstract="true"
		parent="MaintenanceDocumentEntry" p:businessObjectClass="org.kuali.student.core.subjectcode.bo.SubjectCode"
		p:maintainableClass="org.kuali.rice.kns.maintenance.KualiMaintainableImpl">
		<property name="documentTypeName" value="SubjectCodeMaintenanceDocument" />
		<property name="maintainableSections">
			<list>
				<ref bean="SubjectCodeMaintenanceDocument-subjectCode" />
				<ref bean="SubjectCodeMaintenanceDocument-orgs" />
			</list>
		</property>
		<property name="lockingKeys">
			<list>
				<value>id</value>
				<value>code</value>
			</list>
		</property>
        <property name="businessRulesClass" value="org.kuali.student.core.subjectcode.document.validation.impl.SubjectCodeRule"/>
	</bean>

	<!-- Maintenance Section Definitions -->

	<bean id="SubjectCodeMaintenanceDocument-subjectCode" parent="SubjectCodeMaintenanceDocument-subjectCode-parentBean" />
	<bean id="SubjectCodeMaintenanceDocument-subjectCode-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="title" value="Subject Code Maintenance" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableFieldDefinition" p:name="code" p:required="true"/>
				<bean parent="MaintainableFieldDefinition" p:name="name"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="typeId"
					p:required="true" />
				<bean parent="MaintainableFieldDefinition" p:name="state" />
			</list>
		</property>
	</bean>

	<bean id="SubjectCodeMaintenanceDocument-orgs" parent="SubjectCodeMaintenanceDocument-orgs-parentBean" />
	<bean id="SubjectCodeMaintenanceDocument-orgs-parentBean"
		abstract="true" parent="MaintainableSectionDefinition">
		<property name="id" value="orgs" />
		<property name="title" value="Organizations" />
		<property name="maintainableItems">
			<list>
				<bean parent="MaintainableCollectionDefinition">
					<property name="name" value="orgs" />
					<property name="businessObjectClass"
						value="org.kuali.student.core.subjectcode.bo.SubjectCodeJoinOrg" />
					<property name="summaryTitle" value="Organizations" />
					<property name="summaryFields">
						<list>
							<bean parent="MaintainableFieldDefinition" p:name="orgId" />
						</list>
					</property>
					<property name="maintainableFields">
						<list>
							<bean parent="MaintainableFieldDefinition" p:name="activeFromDate"
								p:required="true" />
							<bean parent="MaintainableFieldDefinition" p:name="activeToDate" />
							<bean parent="MaintainableFieldDefinition" p:name="active"
								p:required="true" />
							<bean parent="MaintainableFieldDefinition" p:name="orgId"
								p:required="true" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

</beans>