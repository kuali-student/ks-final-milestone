<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="CoreTypeReference" abstract="true" parent="CoreTypeReference-parentBean" />
    <bean id="CoreTypeReference-parentBean" abstract="true" parent="BusinessObjectEntry">
    	<property name="businessObjectClass" value="org.kuali.student.core.bo.TypeBusinessObjectBase" />
    	<property name="objectLabel" value="Type" />
        <property name="titleAttribute" value="id" />
        <property name="lookupDefinition">
            <ref bean="CoreTypeReference-lookupDefinition" />
        </property>
        <property name="inquiryDefinition">
            <ref bean="CoreTypeReference-inquiryDefinition" />
        </property>
        <property name="attributes">
            <list>
                <ref bean="CoreTypeReference-id" />
                <ref bean="CoreTypeReference-name" />
                <ref bean="CoreTypeReference-description" />
                <ref bean="CoreTypeReference-activeFromDate" />
                <ref bean="CoreTypeReference-activeToDate" />
                <ref bean="CoreTypeReference-active" />
            </list>
        </property>
    </bean>

    <bean id="CoreTypeReference-id" parent="CoreTypeReference-id-parentBean" />
    <bean id="CoreTypeReference-id-parentBean" abstract="true" parent="CoreAttributeReference-id">
    </bean>

    <bean id="CoreTypeReference-name" parent="CoreTypeReference-name-parentBean" />
    <bean id="CoreTypeReference-name-parentBean" abstract="true" parent="CoreAttributeReference-name">
    </bean>

    <bean id="CoreTypeReference-description" parent="CoreTypeReference-description-parentBean" />
    <bean id="CoreTypeReference-description-parentBean" abstract="true" parent="CoreAttributeReference-description">
    </bean>

    <bean id="CoreTypeReference-activeFromDate" parent="CoreTypeReference-activeFromDate-parentBean" />
    <bean id="CoreTypeReference-activeFromDate-parentBean" abstract="true" parent="CoreAttributeReference-activeFromDate">
    </bean>

    <bean id="CoreTypeReference-activeToDate" parent="CoreTypeReference-activeToDate-parentBean" />
    <bean id="CoreTypeReference-activeToDate-parentBean" abstract="true" parent="CoreAttributeReference-activeToDate">
    </bean>

    <bean id="CoreTypeReference-active" parent="CoreTypeReference-active-parentBean" />
    <bean id="CoreTypeReference-active-parentBean" abstract="true" parent="CoreAttributeReference-active">
    </bean>


    <bean id="CoreTypeReference-lookupDefinition" abstract="true" parent="CoreTypeReference-lookupDefinition-parentBean" />
    <bean id="CoreTypeReference-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    	<property name="title" value="Type Lookup" />
        <property name="lookupFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="id" />
                <bean parent="FieldDefinition" p:attributeName="name" />
                <bean parent="FieldDefinition" p:attributeName="active" />
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="FieldDefinition" p:attributeName="id" />
                <bean parent="FieldDefinition" p:attributeName="name" />
                <bean parent="FieldDefinition" p:attributeName="description" />
                <bean parent="FieldDefinition" p:attributeName="activeFromDate" />
                <bean parent="FieldDefinition" p:attributeName="activeToDate" />
            </list>
        </property>        
    </bean>

    <bean id="CoreTypeReference-inquiryDefinition" abstract="true" parent="CoreTypeReference-inquiryDefinition-parentBean" />
    <bean id="CoreTypeReference-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
        <property name="title" value="Type Inquiry" />
        <property name="inquirySections">
            <list>
            	<ref bean="CoreTypeReference-inquirySection" />
            </list>
        </property>
    </bean>
    
    <bean id="CoreTypeReference-inquirySection" parent="CoreTypeReference-inquirySection-parentBean" />
    <bean id="CoreTypeReference-inquirySection-parentBean" abstract="true" parent="InquirySectionDefinition">
      <property name="title" value="Type Information" />
      <property name="numberOfColumns" value="1" />
      <property name="inquiryFields">
        <list>
          <bean parent="FieldDefinition" p:attributeName="id" />
          <bean parent="FieldDefinition" p:attributeName="name" />
          <bean parent="FieldDefinition" p:attributeName="description" />
          <bean parent="FieldDefinition" p:attributeName="activeFromDate" />
          <bean parent="FieldDefinition" p:attributeName="activeToDate" />
        </list>
      </property>
    </bean>               

</beans>