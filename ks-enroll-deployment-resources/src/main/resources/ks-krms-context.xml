                </entry>
                <entry key="kuali.krms.proposition.type.final.exam.course">
                    <list>
                        <ref bean="luContext"/>
                    </list>
                </entry>
                <entry key="kuali.krms.proposition.type.final.exam.courseset">
                    <list>
