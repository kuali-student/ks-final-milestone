                    <list>
                        <ref bean="luContext"/>
                        <ref bean="gpaContext"/>
                    </list>
                </entry>
                <entry key="kuali.krms.proposition.type.course.courseset.grade.min">
                    <list>
                        <ref bean="luContext"/>
                        <ref bean="lrcContext"/>
                    </list>
                </entry>
                <entry key="kuali.krms.proposition.type.course.courseset.grade.max">
                    <list>
                        <ref bean="luContext"/>
                        <ref bean="lrcContext"/>
                    </list>
                </entry>
                <entry key="kuali.krms.proposition.type.permission.admin.org">
