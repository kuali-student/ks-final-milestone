    <modelVersion>4.0.0</modelVersion>
    <artifactId>ks-with-rice-bundled</artifactId>
    <packaging>war</packaging>
    <name>KS with Rice Bundled</name>
    <description>Contains all KS modules and Rice</description>
    <parent>
        <groupId>org.kuali.student.web</groupId>
        <artifactId>ks-web</artifactId>
        <version>2.0.1-cm-krad-SNAPSHOT</version>
    </parent>
    <properties>
        <ks.gwt.module.org>org.kuali.student.core.organization.ui.OrgEntry</ks.gwt.module.org>
        <ks.gwt.module.lum>org.kuali.student.lum.lu.ui.main.LUMMain</ks.gwt.module.lum>
        <jetty.version>7.5.1.v20110908</jetty.version>
        <jrebel-maven-plugin.version>1.1.3</jrebel-maven-plugin.version>
        <jrebel.phase>none</jrebel.phase>
        <tomcat7-maven-plugin.version>2.1</tomcat7-maven-plugin.version>
        <webappDirectory>${project.build.directory}/${project.build.finalName}</webappDirectory>
    </properties>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>META-INF/build-details.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>META-INF/build-details.xml</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <phase>${ks.gwt.compile.phase}</phase>
                    </execution>
                </executions>
                <configuration>
                    <modules>
                        <!--<module>${ks.gwt.module.org}</module> -->
                        <module>${ks.gwt.module.lum}</module>
                    </modules>
                </configuration>
            </plugin>
            <!-- added by bonnie -->
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <configuration>
                    <systemProperties>
                        <systemProperty>
                            <name>jetty.port</name>
                            <value>8081</value>
                        </systemProperty>
                    </systemProperties>
                    <webAppConfig>
                        <contextPath>/ks-with-rice-bundled-dev</contextPath>
                    </webAppConfig>
                    <stopKey>foo</stopKey>
                    <stopPort>9999</stopPort>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.oracle</groupId>
                        <artifactId>${oracle.artifactId}</artifactId>
                        <version>${oracle.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>${mysql.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <!-- end -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>tomcat-maven-plugin</artifactId>
                <version>1.0-beta-1</version>
                <configuration>
                    <path>/ks-with-rice-bundled-dev</path>
                    <port>8081</port>
                    <!--
            <path>/kr-dev</path>
            <port>8080</port>
          -->
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.oracle</groupId>
                        <artifactId>${oracle.artifactId}</artifactId>
                        <version>${oracle.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>${mysql.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>exploded</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <webappDirectory>${project.build.directory}/${project.artifactId}-webapp</webappDirectory>
                    <dependentWarExcludes>**/web.xml,WEB-INF/lib/**,WEB-INF/krad-servlet.xml,**/sampleTravelApplication.tag</dependentWarExcludes>
                </configuration>
            </plugin>
            <plugin>
              <groupId>org.apache.tomcat.maven</groupId>
              <artifactId>tomcat7-maven-plugin</artifactId>
              <version>${tomcat7-maven-plugin.version}</version>
              <configuration>
                <path>/ks-with-rice-bundled-dev</path>
                <port>8081</port>
                <warDirectory>${project.build.directory}/${project.artifactId}-webapp</warDirectory>
              </configuration>
                <dependencies>
                    <dependency>
                        <groupId>com.oracle</groupId>
                        <artifactId>${oracle.artifactId}</artifactId>
                        <version>${oracle.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>${mysql.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
              <groupId>org.zeroturnaround</groupId>
              <artifactId>jrebel-maven-plugin</artifactId>
              <version>${jrebel-maven-plugin.version}</version>
              <configuration>
                <alwaysGenerate>true</alwaysGenerate>
                <addResourcesDirToRebelXml>false</addResourcesDirToRebelXml>
                <!--
                    root is 2 directories away from jar/war modules
                -->
                <relativePath>../../../</relativePath>
                <!--
                    use a system property for specifing root directory (note the double $)
                    start your application with -Drebel.root=c:/projects/
                -->
                <rootPath>${rebel.root}</rootPath>
                <classpath>
                  <fallback>default</fallback>
                  <resources>
                    <resource>
                      <directory>../../../ks-lum/ks-cm-krad/target/classes</directory>
                    </resource>
                  </resources>
                </classpath>
              </configuration>
              <executions>
                <execution>
                  <id>generate-rebel-xml</id>
                  <goals>
                    <goal>generate</goal>
                  </goals>
                  <phase>${jrebel.phase}</phase>
                </execution>
              </executions>
            </plugin>    
          </plugins>
    </build>
