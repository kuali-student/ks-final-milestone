<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="OrganizationInfoWrapper-DataObjectEntry" parent="DataObjectEntry">
		<property name="objectLabel" value="Organization Info Display" />
		<property name="dataObjectClass"
			value="org.kuali.student.cm.course.form.wrapper.OrganizationInfoWrapper" />
		<property name="titleAttribute" value="organizationInfo.id" />
		<property name="attributes">
			<list>
				<ref bean="OrganizationInfoWrapper.abbreviation" />
				<ref bean="OrganizationInfoWrapper.organizationName" />
				<ref bean="OrganizationInfoWrapper.id" />
			</list>
		</property>
		<property name="primaryKeys">
			<list>
				<value>id</value>
			</list>
		</property>
	</bean>

	<bean id="OrganizationInfoWrapper.id" parent="BaseKuali.id">
		<property name="name" value="id" />
	</bean>

	<bean id="OrganizationInfoWrapper.organizationName" parent="AttributeDefinition">
		<property name="name" value="organizationName" />
		<property name="dataType" value="STRING" />
		<property name="label" value="Name" />
		<property name="shortLabel" value="Name" />
		<property name="controlField">
			<bean parent="KS-Uif-TextControl" />
		</property>
	</bean>

	<bean id="OrganizationInfoWrapper.abbreviation" parent="AttributeDefinition">
		<property name="name" value="abbreviation" />
		<property name="dataType" value="STRING" />
		<property name="label" value="Abbreviation" />
		<property name="shortLabel" value="Abbreviation" />
		<property name="controlField">
			<bean parent="KS-Uif-TextControl" />
		</property>
	</bean>

	<bean id="KS-OrganizationInfoWrapper-LookupView" parent="KS-Uif-LookupView">
		<property name="id" value="OrganizationInfoWrapperLookupView" />
		<property name="headerText" value="Advanced Search: Organization" />
		<property name="dataObjectClassName"
			value="org.kuali.student.cm.course.form.wrapper.OrganizationInfoWrapper" />
		<property name="viewHelperServiceClass"
			value="org.kuali.student.cm.course.service.impl.OrganizationInfoLookupableImpl" />
		<property name="criteriaFields">
			<list>
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="id" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="organizationName" />
				<bean parent="Uif-LookupCriteriaInputField" p:propertyName="abbreviation" />
			</list>
		</property>
		<property name="resultFields">
			<list>
				<bean parent="KS-Uif-DataField" p:propertyName="id" p:label="Internal ID" />
				<bean parent="KS-Uif-DataField" p:propertyName="organizationName"
					p:label="Organization Name" p:escapeHtmlInPropertyValue="false" />
				<bean parent="KS-Uif-DataField" p:propertyName="abbreviation"
					p:label="Abbreviation" p:escapeHtmlInPropertyValue="false" />
			</list>
		</property>
	</bean>

</beans>