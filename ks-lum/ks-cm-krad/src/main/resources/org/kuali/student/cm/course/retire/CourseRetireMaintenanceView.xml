<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
        The data dictionary for the RetireCourseWrapper class.
    -->
    <bean id="RetireCourseWrapper" parent="RetireCourseWrapper-parentBean"/>
    <bean id="RetireCourseWrapper-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.student.cm.course.form.wrapper.RetireCourseWrapper"/>
        <property name="titleAttribute" value="courseInfo.id"/>
        <property name="attributes">
            <list/>
        </property>
        <property name="complexAttributes">
            <list/>
        </property>
        <property name="objectLabel" value="Retire Course Wrapper"/>
        <property name="primaryKeys">
            <list>
                <value>courseInfo.id</value>
            </list>
        </property>
    </bean>

    <!-- Controller Class: RetireCourseController.java ViewHelperServiceClass: RetireCourseMaintainableImpl.java-->

    <bean id="CM-Proposal-Course-Retire-View" parent="KS-Uif-MaintenanceView">
        <property name="dataObjectClassName" value="org.kuali.student.cm.course.form.wrapper.RetireCourseWrapper"/>
        <property name="headerText"
                  value="@{(#uiHelper.headerText eq null or #uiHelper.headerText.length() lt 1) ? 'Retire Course': #uiHelper.headerText }"/>
        <property name="singlePageView" value="false"/>
        <!-- Override the default to allow for navigation -->
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.cm.course.service.impl.RetireCourseMaintainableImpl"/>
        <property name="presentationControllerClass"
                  value="org.kuali.student.cm.uif.util.CurriculumManagementMaintenancePresentationControllerBase" />
        <property name="authorizerClass"
                  value="org.kuali.student.cm.course.auth.CurriculumManagementViewAuthorizerBase" />
        <property name="applyDirtyCheck" value="true"/>
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-CurriculumManagement"/>
            </list>
        </property>
        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-RetireCourseName"/>
                <ref bean="KS-HomewardPathBreadcrumbs-Retire-Course"/>
            </list>
        </property>
        <property name="header.id" value="CM-Proposal-Course-Retire-Header"/>
        <property name="stateMapping">
            <bean parent="WorkflowStateMapping">
                <property name="customClientSideValidationStates">
                    <map>
                        <entry key="I" value="S"/>
                        <entry key="S" value="S"/>
                        <entry key="R" value="S"/>
                        <entry key="P" value="S"/>
                    </map>
                </property>
            </bean>
        </property>
        <property name="dialogs">
            <list>
                <bean id="Proposal-Review-Course-ConfirmCancelProposal-Dialog" parent="CM-Proposal-Review-ConfirmCancelProposal-Dialog"/>
                <bean id="Proposal-Review-Course-ConfirmSubmit-Dialog" parent="CM-Proposal-Review-ConfirmSubmit-Dialog"/>
                <bean id="Proposal-Review-Course-ConfirmReturnToPreviousNode-Dialog" parent="CM-Proposal-Review-ConfirmReturnToPreviousNode-Dialog"/>
                <bean id="Proposal-Review-Course-ConfirmApprove-Dialog" parent="CM-Proposal-Review-ConfirmApprove-Dialog"/>
                <bean id="Proposal-Review-Course-ConfirmBlanketApprove-Dialog" parent="CM-Proposal-Review-ConfirmBlanketApprove-Dialog"/>
                <bean id="Proposal-Review-Course-ConfirmReject-Dialog" parent="CM-Proposal-Review-ConfirmReject-Dialog"/>
                <bean id="Proposal-Review-Course-ConfirmAcknowledge-Dialog" parent="CM-Proposal-Review-ConfirmAcknowledge-Dialog"/>
                <bean id="Proposal-Review-Course-ConfirmWithdraw-Dialog" parent="CM-Proposal-Review-ConfirmWithdraw-Dialog"/>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="CM-Proposal-Course-Retire-Page"/>
                <ref bean="CM-Proposal-Review-RetireCourse-Page"/>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>themes/ksboot/scripts/ruleMaintenance.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>themes/ksboot/stylesheets/krms.css</value>
            </list>
        </property>
        <property name="expressionVariables">
            <map merge="true">
                <entry key="dataObject" value="document.newMaintainableObject.dataObject"/>
                <entry key="uiHelper" value="document.newMaintainableObject.dataObject.uiHelper"/>
                <entry key="workflowDoc" value="document.documentHeader.workflowDocument"/>
                <entry key="htmlUtils" value="T(org.springframework.web.util.HtmlUtils)"/>
                <!-- below exist and hard-coded to false due to shared beans from Create/Modify course screens -->
                <entry key="isCompareView" value="false"/>
                <entry key="isViewCourseView" value="false"/>
            </map>
        </property>
        <property name="header.rightGroup">
            <ref bean="CM-Proposal-Course-Retire-RightHeader"/>
        </property>
    </bean>

    <bean id="CM-Proposal-Course-Retire-RightHeader" parent="KS-Unified-Header-Right-Group" p:additionalCssClasses="viewcourseview-header-status">
        <property name="items">
            <list>
                <ref bean="CM-Proposal-Course-Retire-Right-Header-Action-Group"/>
                <ref bean="CM-Proposal-Header-Right-Group-Status"/>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Course-Retire-Right-Header-Action-Group" parent="KS-Unified-Header-Action-Group"
          p:cssClasses="cm-unified-header-rightGroup-action">
        <property name="items">
            <list>
                <bean parent="CM-Proposal-Course-LinkGroup-CancelProposal"/>
                <bean parent="CM-Proposal-Course-LinkGroup-Comments"/>
                <bean parent="CM-Proposal-Course-LinkGroup-Decisions"/>
                <bean parent="CM-PrintAction" p:render="@{!#workflowDoc.initiated}"/>
                <bean parent="CM-ExportAction" p:render="@{!#workflowDoc.initiated}"/>
                <ref bean="CM-Export-ActionLinks"/> <!-- This is the content for the export action popover -->
            </list>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-RetireCourseName" parent="Uif-BreadcrumbItem">
        <property name="label" value="@{#htmlUtils.htmlEscape(#uiHelper.headerText)}"/>
        <property name="url.viewId" value="startAdminRetireCourseView"/>
        <property name="url.controllerMapping" value="@{T(org.kuali.student.cm.common.util.CurriculumManagementConstants$ControllerRequestMappings).START_RETIRE_COURSE}"/>
        <property name="url.requestParameters">
            <map key-type="java.lang.String" merge="true">
                <entry key="methodToCall" value="start"/>
                <entry key="hideReturnLink" value="true"/>
            </map>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-Retire-Course" parent="Uif-BreadcrumbItem">
        <property name="label" value="Retire Course"/>
    </bean>

    <bean id="CourseRetireMaintenanceDocument-Base" parent="CourseRetireMaintenanceDocument-Base-parent" abstract="true"/>

    <bean id="CourseRetireMaintenanceDocument-Base-parent" parent="uifMaintenanceDocumentEntry" abstract="true">
        <property name="dataObjectClass" value="org.kuali.student.cm.course.form.wrapper.RetireCourseWrapper"/>
        <property name="maintainableClass" value="org.kuali.student.cm.course.service.impl.RetireCourseMaintainableImpl"/>
        <property name="documentClass" value="org.kuali.student.cm.maintenance.CMMaintenanceDocument"/>
        <property name="documentAuthorizerClass"
                  value="org.kuali.student.cm.course.auth.CurriculumManagementMaintenanceDocumentAuthorizerBase"/>
        <property name="businessRulesClass" value="org.kuali.student.cm.course.rule.CourseRule"/>
        <property name="lockingKeys">
            <list>
                <value>courseInfo.id</value>
            </list>
        </property>
        <property name="workflowAttributes">
            <ref bean="CourseInfoMaintenanceDocument-workflowAttributes"/>
        </property>
    </bean>

    <bean id="RetireCourseMaintenanceDocument" parent="CourseRetireMaintenanceDocument-Base">
        <property name="documentTypeName" value="kuali.proposal.type.course.retire"/>
    </bean>

    <bean id="RetireCourseAdminMaintenanceDocument" parent="CourseRetireMaintenanceDocument-Base">
        <property name="documentTypeName" value="kuali.proposal.type.course.retire.admin"/>
    </bean>

    <bean id="CM-Proposal-Course-Retire-Page" parent="Uif-MaintenancePage" p:disclosure.render="false">

        <property name="header">
            <bean parent="Uif-HeaderTwo">
                <property name="lowerGroup">
                    <ref bean="Uif-HeaderLowerGroup"/>
                </property>
            </bean>
        </property>

        <property name="headerText" value="Retire Course"/>
        <property name="footer.items">
            <list>
                <bean parent="CM-Proposal-Course-Retire-Footer" p:render="@{!#uiHelper.curriculumSpecialistUser}"/>
                <bean parent="CM-Proposal-Course-Retire-CurriculumSpecialistFooter"
                      p:render="@{#uiHelper.curriculumSpecialistUser}"/>
            </list>
        </property>
        <property name="onDocumentReadyScript"
                  value="onCourseRetireLoad(@{#uiHelper.curriculumSpecialistUser}, '@{#uiHelper.selectedSection.sectionId}')"/>
        <property name="propertyReplacers">
            <list>
                <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                      p:condition="@{#uiHelper.adminProposal}">
                    <property name="replacement">
                        <list>
                            <bean parent="CM-Proposal-Course-RetireInfo-Section"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-TabGroup" p:id="course_tabs" p:render="@{(!#uiHelper.adminProposal)}">
                    <property name="validationMessages.displayMessages" value="false"/>
                    <property name="validationMessages" ref="KS-ValidationMessages-Off"/>
                    <property name="items">
                        <list>
                            <ref bean="CM-Proposal-Course-RetireInfo-Section"/>
                            <bean id="CM-Course-Retire-AuthorsandCollaborators" parent="CM-Proposal-Course-AuthorsAndCollaborator-Section" p:style="margin-top:-10px"/>
                            <ref bean="CM-Proposal-Course-SupportingDocument-Section"/>
                        </list>
                    </property>
                    <property name="tabsWidget.templateOptionsJSString">
                        <value>
                            { selected: @{#uiHelper.selectedSection.ordinal() - 1} }
                        </value>
                    </property>
                    <property name="tabsWidget.position" value="LEFT"/>
                </bean>

                <!-- The text above the tab panel. This gets fixed positioning via JS. -->
                <bean id="CM-Proposal-Course-Retire-TabHeader" parent="Uif-VerticalBoxGroup" p:additionalCssClasses="proposal_tab_header_footer"
                      p:render="@{!#uiHelper.adminProposal}" >
                    <property name="header">
                        <bean parent="Uif-HeaderFour">
                            <property name="cssClasses">
                                <list merge="true">
                                    <value>course_tabs_header_footer_text</value>
                                </list>
                            </property>
                            <property name="headerText" value="1. Section Information"/>
                        </bean>
                    </property>
                </bean>

                <!-- The text and link below the tab panel. This gets fixed positioning via JS. -->
                <bean id="CM-Proposal-Course-Retire-ReviewProposalLink" parent="Uif-VerticalBoxGroup" p:additionalCssClasses="proposal_tab_header_footer"
                      p:render="@{(!#uiHelper.adminProposal) and !#workflowDoc.initiated}">
                    <property name="header">
                        <bean id="CM-Proposal-Course-View-Tab-ReviewHeader" parent="Uif-HeaderFour">
                            <property name="cssClasses">
                                <list merge="true">
                                    <value>course_tabs_header_footer_text</value>
                                </list>
                            </property>
                            <property name="headerText" value="2. Review and Submit"/>
                        </bean>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-NavigationActionLink">
                                <property name="id" value="CM-Proposal-Course-Retire-ReviewProposalLink"/>
                                <property name="actionLabel" value="Review Proposal"/>
                                <property name="finalizeMethodToCall" value="buildProposalActionLink"/>
                                <property name="finalizeMethodAdditionalArguments">
                                    <list>
                                        <value>docHandler</value>
                                        <value>CM-Proposal-Review-RetireCourse-Page</value>
                                    </list>
                                </property>
                                <property name="actionParameters">
                                    <map>
                                        <entry key="pageId" value="CM-Proposal-Review-RetireCourse-Page"/>
                                    </map>
                                </property>
                                <property name="render" value="@{#actionFlags[#Constants.KUALI_ACTION_CAN_EDIT]}"/>
                            </bean>
                        </list>
                    </property>
                </bean>
                <ref bean="CM-ExportHiddenField"/>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Course-Retire-CurriculumSpecialistFooter" parent="Uif-FooterBase">
        <property name="items">
            <list>
                <bean parent="Uif-PrimaryActionButton"
                      p:additionalCssClasses="btn-success"
                      p:ajaxSubmit="false"
                      p:actionLabel="Approve and Retire"
                      p:onClickScript="courseRetireErrorStyling(@{#uiHelper.adminProposal})"
                      p:methodToCall="approveAndRetire"
                      p:performClientSideValidation="true"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_BLANKET_APPROVE] and (!#workflowDoc.initiated) and #uiHelper.adminProposal}"/>
                <bean parent="Uif-SecondaryActionButton"
                      p:ajaxSubmit="false"
                      p:methodToCall="saveProposal"
                      p:performClientSideValidation="true"
                      p:onClickScript="courseRetireErrorStyling(@{#uiHelper.adminProposal})"
                      p:actionLabel="Save Progress"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_SAVE]}"
                      p:jumpToIdAfterSubmit="TOP">
                </bean>
                <bean parent="Uif-ActionLink" p:id="CM-Proposal-Course-View-Admin-Cancel"
                      p:actionLabel="Cancel"
                      p:methodToCall="back"
                      p:style="margin-top:5px;"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CLOSE]}"/>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Course-Retire-Footer" parent="CM-Proposal-Course-Retire-Footer-parentBean"/>
    <bean id="CM-Proposal-Course-Retire-Footer-parentBean" parent="Uif-FooterBase" abstract="true">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-SaveAction"
                                  p:ajaxSubmit="false"
                                  p:methodToCall="saveProposal"
                                  p:onClickScript="courseRetireErrorStyling(@{#uiHelper.curriculumSpecialistUser})"
                                  p:actionLabel="Save and Continue"
                                  p:performClientSideValidation="true"
                                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_SAVE]}">
                                <property name="actionParameters">
                                    <map>
                                        <entry key="displayPage" value="NEXT"/>
                                    </map>
                                </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton"
                                  p:ajaxSubmit="false"
                                  p:methodToCall="saveProposal"
                                  p:onClickScript="courseRetireErrorStyling(@{#uiHelper.curriculumSpecialistUser})"
                                  p:actionLabel="Save Progress"
                                  p:performClientSideValidation="true"
                                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_SAVE]}">
                            </bean>
                            <bean parent="Uif-ActionLink" p:id="CM-Proposal-Course-View-Cancel"
                                  p:actionLabel="Cancel"
                                  p:methodToCall="back"
                                  p:style="margin-top:5px;"
                                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CLOSE]}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="KS-HomewardPathBreadcrumbs-RetireCourse-information" parent="Uif-BreadcrumbItem">
        <property name="label" value="Retirement Information"></property>
    </bean>
    <bean id="KS-HomewardPathBreadcrumbs-RetireCourse" parent="Uif-BreadcrumbItem">
        <property name="label"
                  value=" @{#uiHelper.headerText}"/>
        <property name="url.baseUrl" value="cmHome"/>
        <property name="url.viewId" value="curriculumHomeView"/>
    </bean>

</beans>
