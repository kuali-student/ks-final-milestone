                    pointcut="execution(* org.kuali.student.r2.lum.lu.service.impl.CluServiceImpl.*(..))"
                    method="afterThrowing" throwing="ex"/>
            <aop:after-throwing
                    pointcut="execution(* org.kuali.student.r2.lum.lrc.service.impl.LRCServiceImpl.*(..))"
                    method="afterThrowing" throwing="ex"/>
