<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kuali.student.lum</groupId>
	<artifactId>ks-lum-impl</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>KS LUM Impl</name>
	<description>KS Learning Unit Management Impl</description>

	<parent>
		<groupId>org.kuali.student.lum</groupId>
		<artifactId>ks-lum</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<!--
				Setting forkMode to always. Multiple dao tests using Spring
				junit class runner doesn't play nice with each other
				-->
				<configuration>
					<forkMode>always</forkMode>
					<argLine>-Xms256m -Xmx512m</argLine>
				</configuration>
			</plugin>
		</plugins>
	</build>


	<dependencies>

        <dependency>
          <groupId>org.kuali.student.brms.statement</groupId>
          <artifactId>ks-statement-api</artifactId>
          <version>${ks-brms.version}</version>
        </dependency>
        <dependency>
          <groupId>org.kuali.student.brms.statement</groupId>
          <artifactId>ks-statement-impl</artifactId>
          <version>${ks-brms.version}</version>
        </dependency>

		<dependency>
			<groupId>org.kuali.student.lum</groupId>
			<artifactId>ks-lum-api</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.kuali.student.core</groupId>
			<artifactId>ks-common-impl</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.kuali.student.core</groupId>
			<artifactId>ks-common-util</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
        <dependency>
            <groupId>org.kuali.rice</groupId>
            <artifactId>rice-impl</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>org.apache.derby</groupId>
          <artifactId>derbyclient</artifactId>
          <version>10.4.2.0</version>
          <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.kuali.student.core</groupId>
            <artifactId>ks-core-api</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.kuali.student.core</groupId>
            <artifactId>ks-core-impl</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>


		<dependency>
			<groupId>org.kuali.student.core</groupId>
			<artifactId>ks-common-test</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<id>ks-hibernate</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>org.kuali.student.core</groupId>
					<artifactId>ks-hibernate</artifactId>
					<type>pom</type>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>ks-eclipselink</id>
			<dependencies>
				<dependency>
					<groupId>org.kuali.student.core</groupId>
					<artifactId>ks-eclipselink</artifactId>
					<type>pom</type>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>ks-cxf</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>org.kuali.student.core</groupId>
					<artifactId>ks-cxf</artifactId>
					<type>pom</type>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>ks-metro</id>
			<dependencies>
				<dependency>
					<groupId>org.kuali.student.core</groupId>
					<artifactId>ks-metro</artifactId>
					<type>pom</type>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

</project>