<?xml version="1.0" encoding="UTF-8" ?>
<!-- Use this one for deploying to JBoss -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<!-- JPA test "unit" -->
    <persistence-unit name="persistentUnit"
		transaction-type="JTA">

        <class>org.kuali.student.r1.core.organization.entity.Org</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgAttribute</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgHierarchy</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgHierarchyAttribute</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgOrgRelation</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgOrgRelationAttribute</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgOrgRelationType</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgOrgRelationTypeAttribute</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgPersonRelation</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgPersonRelationAttribute</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgPersonRelationType</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgPersonRelationTypeAttribute</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgPositionRestriction</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgPositionRestrictionAttribute</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgType</class>
        <class>org.kuali.student.r1.core.organization.entity.OrgTypeAttribute</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

    </persistence-unit>

</persistence>
