<?xml version="1.0" encoding="UTF-8" ?>
<!--  Use this one for deploying to JBoss -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <!-- JPA test "unit" -->
    <persistence-unit name="persistentUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>org.kuali.student.r2.common.entity.BaseAttributeEntity</class>
        <class>org.kuali.student.enrollment.classI.lpr.model.LuiPersonRelationEntity</class>
        <class>org.kuali.student.enrollment.classI.lpr.model.LuiPersonRelationStateEntity</class>
        <class>org.kuali.student.enrollment.classI.lpr.model.LuiPersonRelationTypeEntity</class>
        <class>org.kuali.student.enrollment.classI.lpr.model.LuiPersonRelationAttributeEntity</class>
        
        <class>org.kuali.student.r2.core.classI.atp.model.AtpEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.AtpStateEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.AtpTypeEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.AtpAttributeEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.AtpRichTextEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.AtpAtpRelationEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.AtpAtpRelationAttributeEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.AtpAtpRelationTypeEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.MilestoneEntity</class>
        <class>org.kuali.student.r2.core.classI.atp.model.MilestoneTypeEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver"/>
            <property name="hibernate.connection.url" value="jdbc:hsqldb:mem:test"/>
            <property name="hibernate.connection.username" value="sa"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.connection.pool_size" value="2"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hiberante.cache_provider" value="org.hibernate.cache.NoCacheProvider"/>

            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>

</persistence>
