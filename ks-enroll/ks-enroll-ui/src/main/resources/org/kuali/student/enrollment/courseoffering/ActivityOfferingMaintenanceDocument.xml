      <bean id="ActivityOfferingFormObject" parent="ActivityOfferingFormObject-parentBean"/>

      <bean id="ActivityOfferingFormObject-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingFormObject"/>
        <property name="titleAttribute" value="aoInfo.id"/>
        <property name="attributes">
          <list>
          </list>
        </property>
        <property name="objectLabel" value="Activity Offering"/>
        <property name="primaryKeys">
          <list>
            <value>aoInfo.id</value>
          </list>
        </property>
      </bean>

        <bean id="ActivityOffering-MaintenanceView" parent="KSMaintenanceView">
        <property name="headerText" value="Activity Offering Maintenance"/>
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingFormObject"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingMaintainableImpl" />
        <property name="items">
            <list>
                <bean parent="Uif-MaintenanceGridSection">
                    <property name="headerText" value="Create a New Activity Offering"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.id" p:readOnly="true"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.stateKey" p:readOnly="true"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.typeKey" p:readOnly="true"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.termId" p:defaultValue="2012WINTER">
                                <!--<property name="quickfinder.dataObjectClassName" value="org.kuali.student.enrollment.acal.aoInfo.TermInfo"/>
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="code" value="aoInfo.id"/>
                                    </map>
                                </property>-->
                             </bean>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.activityCode"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.activityId" p:defaultValue="CLU-4"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.formatOfferingId" p:label="Format Offering Id" p:defaultValue="Lui-fo-2"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.maximumEnrollment" p:label="Total Maximum Enrollment"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.isMaxEnrollmentEstimate" p:label="Maximum Enrollment is an estimate"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.isEvaluated" p:label="This course requires an evaluation"/>
                            <bean parent="Uif-InputField" p:propertyName="aoInfo.isHonorsOffering"/>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-MaintenanceStackedCollectionSection">
                    <property name="headerText" value="Personnel"/>
                    <property name="collectionObjectClass" value="org.kuali.student.enrollment.courseoffering.dto.OfferingInstructorInfo"/>
                    <property name="propertyName" value="aoInfo.instructors"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="personId">
                                <!--<property name="quickfinder.dataObjectClassName" value="org.kuali.rice.kim.bo.impl.PersonImpl"/>-->
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.rice.kim.api.identity.Person"/>
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="principalId" value="personId"/>
                                        <entry key="principalName" value="personName"/>
                                    </map>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="personName" p:readOnly="true"/>
                            <bean parent="Uif-InputField" p:propertyName="percentageEffort"/>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
        <property name="footer.items">
            <list/>
        </property>
    </bean>


      <bean id="ActivityOfferingMaintenanceDocument" parent="ActivityOfferingMaintenanceDocument-parentBean"/>

      <bean id="ActivityOfferingMaintenanceDocument-parentBean" abstract="true" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingFormObject"/>
        <property name="maintainableClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingMaintainableImpl"/>
        <property name="businessRulesClass" value="org.kuali.student.enrollment.class2.courseoffering.rule.ActivityOfferingRule" />
        <property name="documentTypeName" value="ActivityOfferingInfoMaintenanceDocument"/>
        <property name="lockingKeys">
          <list>
            <value>aoInfo.id</value>
          </list>
        </property>
      </bean>


</beans>