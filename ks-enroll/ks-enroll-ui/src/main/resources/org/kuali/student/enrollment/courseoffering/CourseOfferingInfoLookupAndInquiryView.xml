<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--<import resource="classpath:ks-CourseOfferingInfo-dictionary.xml"/>-->

    <!-- LookupView -->
    <bean id="KS-CourseOfferingInfo-LookupView" parent="KS-Uif-LookupView">
        <property name="headerText" value="CourseOfferingInfo Lookup " />
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo" />
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingInfoLookupableImpl" />

        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="termId" >
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder">
                            <property name="dataObjectClassName" value="org.kuali.student.r2.core.acal.dto.TermInfo"/>
                            <property name="fieldConversions">
                                <map>
                                    <entry key="code" value="termId"/>
                                </map>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="subjectArea" />
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="KS-Uif-DataField" p:propertyName="id" />
                <bean parent="KS-Uif-DataField" p:propertyName="courseOfferingTitle"/>
                <bean parent="KS-Uif-DataField" p:propertyName="termId" />
                <bean parent="KS-Uif-DataField" p:propertyName="courseOfferingCode"/>
            </list>
        </property>
    </bean>

    <!-- InquiryView -->
    <bean id="KS-CourseOfferingInfo-InquiryView" parent="KS-Uif-InquiryView">
        <property name="headerText" value="CourseOfferingInfo Inquiry"/>
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.courseoffering.dto.CourseOfferingInfo"/>
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.CourseOfferingInfoInquirableImpl" />
        <property name="Items">
            <list>
                <bean parent="Uif-GridSection">
                    <property name="layoutManager.numberOfColumns" value="2"/>
                    <property name="headerText" value="CourseOfferingInfo Inquiry"/>
                    <property name="items">
                        <list>
                            <bean parent="KS-Uif-InputField" p:propertyName="id"/>
                            <bean parent="KS-Uif-InputField" p:propertyName="termId"/>
                            <bean parent="KS-Uif-InputField" p:propertyName="courseOfferingTitle"/>
                            <bean parent="KS-Uif-InputField" p:propertyName="courseOfferingCode"/>
                            <bean parent="KS-Uif-InputField" p:propertyName="typeKey"/>
                            <bean parent="KS-Uif-InputField" p:propertyName="stateKey"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>