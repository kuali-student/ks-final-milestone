    <bean id="CheckInfo-CreateView" parent="KS-Uif-FormView" p:additionalCssClasses="ks-enrollment-home">
        <property name="id" value="checkCreateView"/>
        <property name="headerText" value="Create Checks"/>
        <property name="formClass"
                  value="org.kuali.student.enrollment.class1.check.form.CheckInfoForm"/>
        <property name="viewSourceFile" value="CheckInfoCreateView.xml" /> <!-- Shows up in HTML so devs can find the code -->
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="KS-Uif-Page"/>
        </property>
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <ref bean="KS-Enrollment-HomewardPathBreadcrumbs"/>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="items">
            <list>
                <!-- This adds the file names to the page HTML -->
                <ref bean="KS-SourceFile-Comment-Group"/>
                <bean parent="KS-Uif-InputField-LabelTop" p:label="Check Name" p:propertyName="name"
                      p:required="true">
                    <property name="control">
                        <bean parent="KS-Uif-TextControl" p:size="25"/>
                    </property>
                </bean>
                <bean parent="KS-Uif-InputField-LabelTop" p:label="Check Description" p:propertyName="descr"
                      p:instructionalText="Enter a full description of the purpose of the check">
                    <property name="control">
                        <bean parent="Uif-SmallTextAreaControl"/>
                    </property>
                </bean>
                <bean parent="KS-Uif-InputField-LabelTop" p:label="Check Types" p:propertyName="typeKey"
                      p:required="true">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class1.check.keyvalues.CheckInfoTypeKeyValues"/>
                    </property>
                </bean>
                <bean parent="KS-Uif-InputField-LabelTop" p:label="Hold Issue" p:propertyName="holdName"
                      p:required="true" p:progressiveRender="typeKey eq 'hold'">
                    <property name="control">
                        <bean parent="KS-Uif-TextControl" p:size="25"/>
                    </property>
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder" p:dataObjectClassName="org.kuali.student.r2.core.hold.dto.HoldIssueInfo">
                            <property name="fieldConversions">
                                <map>
                                    <entry key="id" value="holdIssueId"/>
                                    <entry key="name" value="holdName"/>
                                </map>
                            </property>
                            <property name="quickfinderAction">
                                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
                            </property>
                            <property name="lightBox">
                                <bean parent="Uif-LightBox" p:lookupReturnByScript="false"/>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="KS-Uif-InputField-LabelTop" p:label="Academic Calendar Event"
                      p:propertyName="eventcalendar"
                      p:required="true" p:progressiveRender="typeKey eq 'milestone'">
                    <property name="control">
                        <bean parent="KS-Uif-TextControl" p:size="25"/>
                    </property>
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder">
                            <property name="dataObjectClassName" value="org.kuali.student.r2.core.acal.dto.AcalEventInfo"/>
                            <property name="fieldConversions">
                                <map>
                                    <entry key="id" value="milestoneTypeKey"/>
                                    <entry key="name" value="eventcalendar"/>
                                </map>
                            </property>
                            <property name="quickfinderAction">
                                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
                            </property>
                            <property name="lightBox">
                                <bean parent="Uif-LightBox" p:lookupReturnByScript="false"/>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="KS-Uif-InputField-LabelTop" p:label="Process" p:propertyName="childProcessKey"
                      p:required="true" p:progressiveRender="typeKey eq 'process'">
                    <property name="control">
                        <bean parent="KS-Uif-TextControl" p:size="25"/>
                    </property>
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder">
                            <property name="dataObjectClassName" value="org.kuali.student.r2.core.process.dto.ProcessInfo"/>
                            <property name="fieldConversions">
                                <map>
                                    <entry key="key" value="childProcessKey"/>
                                </map>
                            </property>
                            <property name="quickfinderAction">
                                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup"/>
                            </property>
                            <property name="lightBox">
                                <bean parent="Uif-LightBox" p:lookupReturnByScript="false"/>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="KS-Uif-InputField" p:propertyName="holdIssueId" p:hidden="true" />
                <bean parent="KS-Uif-InputField" p:propertyName="milestoneTypeKey" p:hidden="true" />
                <bean parent="KS-Uif-InputField" p:propertyName="childProcessKey" p:hidden="true" />

                <bean parent="KS-Uif-InputField-LabelTop" p:label="Process State" p:propertyName="stateKey"
                      p:required="true" p:progressiveRender="typeKey != ''">
                    <property name="control">
                        <bean parent="KS-Uif-VerticalRadioControl">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="kuali.process.check.state.active" p:value="Active"/>
                                    <bean parent="Uif-KeyLabelPair" p:key="kuali.process.check.state.disabled" p:value="Disabled"/>
                                    <bean parent="Uif-KeyLabelPair" p:key="kuali.process.check.state.inactive" p:value="Inactive"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-PrimaryActionButton" p:actionLabel="Create Check"
                                  p:methodToCall="create"/>
                            <bean parent="Uif-ActionLink" p:actionLabel="Cancel" p:methodToCall="close"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>

    </bean>
</beans>