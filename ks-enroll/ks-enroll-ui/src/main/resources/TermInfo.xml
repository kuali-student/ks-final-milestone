    <!-- TermInfo-->
    <bean id="TermInfo" parent="TermInfo-parent"/>
    <bean id="TermInfo-parent" abstract="true" parent="DataObjectEntry">
    	<property name="objectClass" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
        <property name="objectLabel" value="Term Info"/>
        <property name="titleAttribute" value="key"/>
        <!-- 
        <property name="name" value="academicCalendarInfo"/>        
        <property name="objectDescription" value=""/>
        -->
        
        <property name="primaryKeys">
            <list>
                <value>key</value>
            </list>
        </property>
        <property name="attributes">
            <list>
                <ref bean="TermInfo-key"/>
                <!-- 
                <ref bean="academicCalendarInfo.typeKey"/>
                <ref bean="academicCalendarInfo.stateKey"/>
                <ref bean="academicCalendarInfo.name"/>
                <ref bean="academicCalendarInfo.descr"/>
                <ref bean="academicCalendarInfo.attributes"/>
                -->
                <ref bean="TermInfo-startDate"/>
                <ref bean="TermInfo-endDate"/>                
            </list>
        </property>
    </bean>
    
	<bean id="TermInfo-key" parent="TermInfo-key-parent"/>
    <bean id="TermInfo-key-parent" abstract="true" parent="AttributeDefinition">
        <property name="name" value="key"/>        
        <property name="label" value="Key" />
        <property name="required" value="false"/>
        <property name="unique" value="true"/> 
        <property name="validationPattern" >
      		<bean parent="AnyCharacterValidationPattern"
            	  p:allowWhitespace="false" />
    	</property>
    	<property name="controlField">
      		<bean parent="TextControl" p:size="42"/>
    	</property> 
    </bean>

    <bean id="TermInfo-startDate" parent="TermInfo-startDate-parent"/>
    <bean id="TermInfo-startDate-parent" abstract="true" parent="AttributeReferenceDummy-genericDate">
        <property name="name" value="startDate"/>
        <property name="label" value="Start Date" />
        <property name="required" value="true"/>
        <property name="controlField">
      		<bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
    	</property>
    	<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter"/>
    </bean>

    <bean id="TermInfo-endDate" parent="TermInfo-endDate-parent"/>
    <bean id="TermInfo-endDate-parent" abstract="true" parent="AttributeReferenceDummy-genericDate">
        <property name="name" value="endDate"/>
        <property name="label" value="End Date" />
        <property name="required" value="true"/>
        <property name="controlField">
      		<bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
    	</property>
    	<property name="formatterClass" value="org.kuali.rice.core.web.format.DateFormatter"/>
    </bean>
    
    <bean id="TermInfo-MaintenanceView" parent="MaintenanceView">
     <property name="title" value="TermInfo Maintenance"/>
     <property name="dataObjectClassName" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
     <property name="viewHelperServiceClassName" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarInfoMaintainableImpl" />
     
     <property name="items">
       <list merge="true">
          <bean parent="MaintenanceGroupSectionGridLayout">
          	 <property name="title" value="Term"/>
             <property name="items">
               <list>
                <bean parent="AttributeField" p:propertyName="key"/>
                <bean parent="AttributeField" p:propertyName="startDate"/>
                <bean parent="AttributeField" p:propertyName="endDate"/>
               </list>
             </property>             
          </bean> 
          <!-- 
          <bean parent="MaintenanceCollectionGroupSection">
              <property name="title" value="Academic Calendar Terms"/>  
              <property name="collectionObjectClass" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
              <property name="propertyName" value="fiscalOfficer.accounts"/>
              <property name="items">
                <list>
                  <bean parent="AttributeField" p:propertyName="startDate"/>
                  <bean parent="AttributeField" p:propertyName="endDate"/>
                </list>
              </property>   
              <property name="layoutManager.summaryTitle" value="Term"/> 
              <property name="layoutManager.summaryFields">
                <list>
                  <value>number</value>
                </list>
              </property>
           </bean> 
           -->       
       </list>
     </property>
  </bean>  


  <bean id="TermInfoMaintenanceDocument" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.student.enrollment.acal.dto.TermInfo"/>
    <property name="maintainableClass" value="org.kuali.student.enrollment.class2.acal.service.AcademicCalendarInfoMaintainableImpl"/>
    <property name="documentTypeName" value="TermInfoMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>key</value>
      </list>
    </property>
  </bean>  

</beans>