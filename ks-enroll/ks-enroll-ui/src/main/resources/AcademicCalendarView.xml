   <bean id="AcademicCalendarView-AcalInfo" parent="GroupGridLayout">
      <property name="title" value="Academic Calendar"/> 
      <property name="items">
        <list>
          <bean parent="AttributeField_Form" p:propertyName="startDate" p:label="Start Date" p:required="true" p:maxLength="10">
            <property name="control">
              <bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
            </property>
          </bean>
          <bean parent="AttributeField_Form" p:propertyName="endDate" p:label="End Date" p:required="true" p:maxLength="10">
            <property name="control">
              <bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
            </property>
          </bean>
        </list>
      </property>       
   </bean>

