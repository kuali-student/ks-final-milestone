<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseView-FinancialsPage" parent="KS-CourseView-BasePage" p:headerText="Financials">
        <property name="items">
            <list>
                <ref bean="KS-CourseView-FinancialsPage-CourseFees-Widgets" />
                <ref bean="KS-CourseView-FinancialsPage-Widgets" />
            </list>
        </property>
    </bean>

    <bean id="KS-CourseView-Financials-Section" parent="KS-CourseView-VerticalBoxSection">
        <property name="headerText" value="Financials"/>
        <property name="header.render" value="@{#form.curriculumSpecialist}"/>
        <property name="items">
            <list>
                <ref bean="CourseView-Financials-NoRequiredMessageLink" />
                <ref bean="CourseView-Financials-CollectionSection" />
            </list>
        </property>
    </bean>

    <bean id="CourseView-Financials-CollectionSection" parent="Uif-VerticalBoxSection" p:headerText="">
        <property name="cssClasses">
            <list merge="true">
                <value>admin-not-required-field</value>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-CourseView-Financials-CourseFees-Widgets" />
                <ref bean="KS-CourseView-Financials-Widgets" />
            </list>
        </property>
    </bean>

    <bean id="CourseView-Financials-NoRequiredMessageLink" parent="Uif-HorizontalFieldGroup" >
        <property name="style" value="display: none;" />
        <property name="cssClasses">
            <list merge="true">
                <value>hide-when-show-all-fields</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:id="CourseView-Financials-NoRequiredMessage"
                      p:messageText="No required fields." p:style="margin-top: 5px; margin-right: 0px;">
                </bean>
                <bean parent="KS-Uif-ActionLink" p:id="CourseRequisites-NoRequiredMessage-expand-link"
                      p:actionScript="createCourseShowHideObjectiveElements('CourseView-Financials-NoRequiredMessageLink', 'CourseView-Financials-CollectionSection');"
                      p:actionLabel="Show all fields" p:style="margin-right: 15pt; margin-top: 0px;">
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseView-Financials-CourseFees-Widgets" parent="Uif-HorizontalBoxSection" p:headerText="Course Fees">
        <property name="instructionalText" value="These are the required fees for the course, for example lab, material, field trips." />
    </bean>

    <bean id="KS-CourseView-Financials-Widgets" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelTop" p:label="Justification of Fees" p:propertyName="course.feeJustification.plain">
                    <property name="instructionalText" value="This is for internal use only and will not be seen by students." />
                    <property name="fieldLabel.requiredMessage">
                        <bean parent="Uif-RequiredMessage" p:messageText="Required on @{document.newMaintainableObject.dataObject.requiredWorkflowMode}" />
                    </property>
                    <property name="cssClasses">
                        <list>
                            <value>uif-label</value>
                        </list>
                    </property>
                    <property name="simpleConstraint">
                        <bean parent="RequiredConstraint">
                            <property name="states">
                                <list>
                                    <value>S+</value>
                                </list>
                            </property>
                        </bean>
                    </property>
                    <property name="control">
                        <bean parent="Uif-LargeTextAreaControl" />
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
