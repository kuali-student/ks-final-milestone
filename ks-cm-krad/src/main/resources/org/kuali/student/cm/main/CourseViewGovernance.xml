<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseView-GovernancePage-Section" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Governance"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelTop" p:propertyName="course.campusLocations" p:label="Campus Locations"
                      p:instructionalText="" p:width="auto">
                    <property name="control">
                        <bean parent="Uif-VerticalCheckboxesControl" />
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.lum.lu.ui.course.keyvalues.CampusLocationsKeyValuesFinder"
                              p:addBlankOption="false" />

                    </property>
                </bean>

                <bean parent="Uif-HorizontalBoxSection"
                      p:headerText="Curriculum Oversight"
                      p:instructionalText="This is the organization(s) responsible for the content of the course. This selection will determine the workflow/approval process for this proposal.">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField-LabelTop"
                                  p:propertyName="dataObject.unitsContentOwnerToAdd">
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.lum.lu.ui.course.keyvalues.OrgsBySubjectCodeValuesFinder"
                                          p:blankOption="true" />
                                </property>
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" />
                                </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Add" p:methodToCall="addUnitsContentOwner" />
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-StackedCollectionGroup"
                      p:propertyName="dataObject.unitsContentOwner"
                      p:headerText="Curriculum Oversight"
                      p:collectionObjectClass="org.kuali.rice.core.api.util.ConcreteKeyValue"
                      p:instructionalText="">
                    <property name="renderAddLine" value="false"/>
                    <property name="includeLineSelectionField" value="false"/>
                    <!--
                    <property name="renderLineActions" value="true"/>
                    <property name="newItemsCssClass" value="uif-newCollectionItem"/>
                    <property name="addItemCssClass" value="uif-collectionAddItem"/>
                    <property name="layoutManager">
                        <bean parent="Uif-StackedCollectionLayout-List"/>
                    </property>
                    <property name="template" value="/krad/WEB-INF/ftl/components/group/collectionGroup.ftl"/>
                    <property name="templateName" value="uif_collectionGroup"/>
                    <property name="cssClasses">
                        <list>
                            <value>uif-collectionGroup</value>
                            <value>uif-listCollectionGroup</value>
                        </list>
                    </property>
                    -->
                    <property name="lineActions">
                        <list>
                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="deleteLine" p:actionLabel="delete"/>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:labelRendered="false" p:propertyName="key"/>
                        </list>
                    </property>
                </bean>
                <ref bean="KS-AdministeringOrganization-Section" />
            </list>
        </property>
    </bean>

    <bean id="KS-AdministeringOrganization-Section" parent="Uif-StackedCollectionSection"
          p:headerText="Administering Organization(s)" p:propertyName="dataObject.administeringOrganizations"
          p:instructionalText="List the organization(s) that can administer, or offer, this course. In most cases this will be the same as the Curriculum Oversight organization, but additional and/or alternate organizations can also be listed as administering organizations."
          p:collectionObjectClass="org.kuali.student.cm.course.form.OrganizationInfoWrapper">
        <property name="addLineLabel.messageText" value="Add an Organization" />
        <property name="layoutManager.lineGroupPrototype.header.headerText"
                  value="Organization @{(#index + 1)}" />
        <!-- <property name="collectionLookup.quickfinderAction.render"
                  value="false" /> -->
        <property name="help">
            <bean parent="Uif-Help"
                  p:tooltipHelpContent="This is not a restrictive list - organizations here are additional organizations that can administer this course." />
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>cm-collection-width</value>
                <value>admin-not-required-field</value>
            </list>
        </property>
        <property name="addLineActions">
            <list>
                <bean parent="Uif-AddLineAction" p:actionLabel="Add" />
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="organizationName" p:id="organizationName">
                    <property name="refreshWhenChangedPropertyNames" value="organizationName"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="50"/>
                    </property>
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder">
                            <property name="dataObjectClassName" value="org.kuali.student.cm.course.form.OrganizationInfoWrapper"/>
                            <property name="fieldConversions">
                                <map>
                                    <entry key="organizationName" value="organizationName" />
                                    <entry key="abbreviation" value="abbreviation" />
                                </map>
                            </property>
                            <property name="lookupParameters">
                                <map>
                                    <entry key="organizationName" value="organizationName"/>
                                </map>
                            </property>
                            <property name="quickfinderAction">
                                <bean parent="Uif-ActionLink" p:actionLabel="Advanced Search" p:style="display:block" p:methodToCall="performLookup" p:evaluateDisabledOnKeyUp="true" />
                            </property>
                            <property name="lightBoxLookup">
                                <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                            </property>
                        </bean>
                    </property>
                    <property name="suggest">
                        <bean parent="Uif-Suggest" p:render="true" p:valuePropertyName="organizationName">
                            <property name="returnFullQueryObject" value="true"/>
                            <property name="suggestQuery">
                                <bean parent="Uif-AttributeQueryConfig" p:queryMethodToCall="getOrganizationsForSuggest"/>
                            </property>
                            <property name="templateOptions">
                                <map merge="true">
                                    <entry key="minLength" value="1"/>
                                </map>
                            </property>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
