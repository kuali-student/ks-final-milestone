<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="CM-Proposal-Review-Course-Page" parent="CM-Proposal-View-Course-Page">

        <!-- Initialize the page. This intervenes with the validation message behavior by removing the popovers, and
             also sizes the text areas. -->
        <property name="onDocumentReadyScript" value="onProposalReviewLoad();"/>

        <property name="items">
            <list>
                <ref bean="CM-Proposal-Review-Course-PageSections"/>
            </list>
        </property>
        <property name="footer.items">
            <list>
                <bean parent="CM-Proposal-Review-Course-Footer" p:render="@{!#uiHelper.curriculumSpecialistUser}"/>
                <bean parent="CM-Proposal-Review-Course-CurriculumSpecialist-Footer" p:render="@{#uiHelper.curriculumSpecialistUser}"/>
            </list>
        </property>
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list merge="true">
                <ref bean="KS-HomewardPathBreadcrumbs-NewCourse"/>
            </list>
        </property>
        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-ReviewProposal-Page"/>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-PageSections" parent="KS-CourseView-VerticalBoxSection">
        <property name="items">
            <list>
                <ref bean="CM-Proposal-Review-Course-Page-ReviewErrorMessageLink"/>
                <ref bean="CM-Proposal-Review-Course-CourseSection"/>
                <ref bean="CM-Proposal-Review-Course-GovernanceSection"/>
                <ref bean="CM-Proposal-Review-Course-CourseLogisticsSection"/>
                <ref bean="CM-Proposal-Review-Course-LearningObjectivesSection"/>
                <!--<ref bean="CM-Proposal-View-Course-CourseRequisitesSection"/>  -->
                <ref bean="CM-Proposal-Review-Course-ActiveDatesSection"/>
                <ref bean="CM-Proposal-Review-Course-FinancialsSection"/>
                <ref bean="CM-Proposal-Review-Course-AuthorsAndCollaboratorsSection"/>
                <ref bean="CM-Proposal-Review-Course-SupportingDocumentsSection"/>
                <ref bean="CM-Proposal-Review-Course-ConfirmSubmit-Dialog"/>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-Page-ReviewErrorMessageLink" parent="Uif-VerticalBoxGroup"
          p:render="@{#dataObject.missingRequiredFields}" p:additionalCssClasses="ks-cm-reviewproposal-validation-spacing">
        <property name="items">
            <list>
                <bean id="KS-CourseView-Admin-Message-TreeExpandCollapse" parent="Uif-HorizontalFieldGroup"
                      p:showLabel="false"
                      p:additionalCssClasses="uif-validationMessages,uif-groupValidationMessages,uif-pageValidationMessages-warning,ks-subSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Message" p:id="ReviewProposal-Error-Message"
                                  p:messageText="This proposal is incomplete."
                                  p:style="margin-right: 0pt; margin-top: 5px;">
                            </bean>
                            <bean parent="KS-Uif-ActionLink" p:id="ReviewProposal-Error-Message-expand-optional-link"
                                  p:actionScript="showHideReviewProposalErrorFields('CM-Proposal-Review-Course-PageSections');"
                                  p:actionLabel="Hide missing-fields indicator.">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>review_proposal_ReviewErrorMessageActionLink</value>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-CourseSection" parent="CM-Proposal-View-Course-CourseInfoSection">
        <property name="headerText" value="Course Information"/>
        <property name="header.rightGroup.items">
            <list>
                <bean p:id="CourseInfo-Review-Edit-link" parent="CM-Proposal-Review-Course-Edit-Link">
                    <property name="actionParameters">
                        <map>
                            <entry key="displaySection" value="CM-Proposal-Course-CourseInfo-Page"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-GovernanceSection" parent="CM-Proposal-View-Course-GovernanceSection">
        <property name="header.rightGroup.items">
            <list>
                <bean p:id="Governance-Review-Edit-link" parent="CM-Proposal-Review-Course-Edit-Link">
                    <property name="actionParameters">
                        <map>
                            <entry key="displaySection" value="CM-Proposal-Course-Governance-Page"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-CourseLogisticsSection" parent="CM-Proposal-View-Course-CourseLogisticsSection">
        <property name="header.rightGroup.items">
            <list>
                <bean p:id="Governance-Review-Edit-link" parent="CM-Proposal-Review-Course-Edit-Link">
                    <property name="actionParameters">
                        <map>
                            <entry key="displaySection" value="CM-Proposal-Course-Logistics-Page"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-LearningObjectivesSection" parent="CM-Proposal-View-Course-LearningObjectivesSection">
        <property name="header.rightGroup.items">
           <list>
                <bean p:id="LearningObjectives-Review-Edit-link" parent="CM-Proposal-Review-Course-Edit-Link">
                    <property name="actionParameters">
                        <map>
                            <entry key="displaySection" value="CM-Proposal-Course-LearningObjectives-Page"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-ActiveDatesSection" parent="CM-Proposal-View-Course-ActiveDatesSection">
        <property name="header.rightGroup.items">
            <list>
                <bean p:id="Governance-Review-Edit-link" parent="CM-Proposal-Review-Course-Edit-Link">
                    <property name="actionParameters">
                        <map>
                            <entry key="displaySection" value="CM-Proposal-Course-ActiveDates-Page"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-FinancialsSection" parent="CM-Proposal-View-Course-VerticalBoxSection">
        <property name="headerText" value="Financials"/>
        <property name="header.rightGroup.items">
            <list>
                <bean p:id="Governance-Review-Edit-link" parent="CM-Proposal-Review-Course-Edit-Link">
                    <property name="actionParameters">
                        <map>
                            <entry key="displaySection" value="CM-Proposal-Course-Financials-Page"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="CM-Proposal-View-Course-GridGroup">
                    <property name="items">
                        <list>
                            <bean parent="CM-ReadOnlyInput" p:label="Justification of Fees"
                                  id="financialsSection_justificationOfFees"
                                  p:propertyName="reviewProposalDisplay.financialsSection.justificationOfFees"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-AuthorsAndCollaboratorsSection" parent="CM-Proposal-View-Course-VerticalBoxSection">
        <property name="headerText" value="Authors and Collaborators"/>
        <property name="header.rightGroup.items">
            <list>
                <bean p:id="Governance-Review-Edit-link" parent="CM-Proposal-Review-Course-Edit-Link">
                    <property name="actionParameters">
                        <map>
                            <entry key="displaySection" value="CM-Proposal-Course-AuthorsAndCollaborators-Page"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="CM-Proposal-View-Course-GridGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalFieldGroup" p:label="Authors and Collaborators" p:colSpan="3"
                                  p:fieldLabel.renderColon="false">
                                <property name="items">
                                    <list>
                                        <bean id="course_review_authors_and_collaborators_details" parent="Uif-StackedCollectionSection"
                                              p:propertyName="reviewProposalDisplay.collaboratorSection.collaboratorWrappers"
                                              p:collectionObjectClass="org.kuali.student.r1.core.workflow.dto.CollaboratorWrapper"
                                              p:colSpan="3">
                                            <property name="layoutManager.lineGroupPrototype.header.headerText"
                                                      value="@{(#line.author==true) ? (#line.lastName) + ', ' + (#line.firstName) + ' (Author)' : (#line.lastName) + ', ' + (#line.firstName)}"/>
                                            <property name="layoutManager.lineGroupPrototype.header.style"
                                                      value="border-bottom : 1px solid black;"/>
                                            <property name="renderLineActions" value="false"/>
                                            <property name="renderAddLine" value="false"/>
                                            <property name="items">
                                                <list>
                                                    <bean parent="CM-ReadOnlyInput" p:label="Permissions"
                                                          p:fieldLabel.style="white-space : nowrap; float:left;"
                                                          p:propertyName="permission" p:colSpan="1" p:style="padding-top: 5px"/>
                                                    <bean parent="CM-ReadOnlyInput" p:label="Action Request"
                                                          p:fieldLabel.style="white-space : nowrap; float:left;"
                                                          p:propertyName="action" p:colSpan="1" p:style="padding-top: 5px"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                    <property name="propertyReplacers">
                        <list>
                            <!-- If there are no authors and collaborators then just show a label alone -->
                            <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="items"
                                  p:condition="@{#emptyList(#dataObject.reviewProposalDisplay.collaboratorSection.collaboratorWrappers)}">
                                <property name="replacement">
                                    <list>
                                        <bean parent="CM-ReadOnlyInput" p:label="Authors and Collaborators" id="emptyStringAuthorsAndCollaborators"
                                              p:propertyName="reviewProposalDisplay.collaboratorSection.emptyStringAuthorAndCollaborator"/>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-SupportingDocumentsSection" parent="CM-Proposal-View-Course-VerticalBoxSection">
        <property name="headerText" value="Supporting Documents"/>
        <property name="header.rightGroup.items">
            <list>
                <bean p:id="Governance-Review-Edit-link" parent="CM-Proposal-Review-Course-Edit-Link">
                    <property name="actionParameters">
                        <map>
                            <entry key="displaySection" value="CM-Proposal-Course-SupportingDocuments-Page"/>
                        </map>
                    </property>
                </bean>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="CM-Proposal-View-Course-GridGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalFieldGroup" p:label="Supporting Documents" p:colSpan="3" p:fieldLabel.renderColon="false">
                                <property name="items">
                                    <list>
                                        <bean id="supporting_document_review_section" parent="KS-Uif-StackedCollectionSection-HorizontalSubCollectionFieldGroup"
                                              p:propertyName="reviewProposalDisplay.supportingDocumentsSection.supportingDocuments"
                                              p:collectionObjectClass="org.kuali.student.cm.course.form.wrapper.SupportingDocumentInfoWrapper"
                                              p:colSpan="3">
                                            <property name="renderLineActions" value="false"/>
                                            <property name="renderAddLine" value="false"/>
                                            <property name="items">
                                                <list>
                                                    <bean id="supporting_document_group" parent="Uif-HorizontalFieldGroup" p:showLabel="false">
                                                         <property name="items">
                                                             <list>
                                                                 <bean id="supporting_document_@{#index}" parent="Uif-ActionLinkField" p:actionLabel="@{#line.documentName}" p:methodToCall="downloadSupportingDoc"
                                                                       p:ajaxSubmit="false"
                                                                       p:disableBlocking="true"
                                                                       p:onClickScript="writeHiddenToForm(&quot;ajaxReturnType&quot;, &quot;update-none&quot;);">
                                                                     <property name="fieldLabel.render" value="false"/>
                                                                     <property name="id" value="supporting_document_@{#index}"/>
                                                                     <property name="cssClasses">
                                                                         <list merge="true">
                                                                             <value>cm_readonly_input</value>
                                                                         </list>
                                                                     </property>
                                                                 </bean>
                                                                 <bean id="supporting_document_description" parent="Uif-DataField"
                                                                       p:propertyName="description"/>
                                                             </list>
                                                         </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-Footer" parent="Uif-FooterBase">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-PrimaryActionButton"
                                  p:ajaxSubmit="false"
                                  p:actionLabel="Submit"
                                  p:methodToCall="route"
                                  p:performClientSideValidation="true"
                                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"/>
                            <bean id="CourseView-ReviewProposal-cancel"
                                  parent="Uif-ActionLink"
                                  p:actionLabel="Cancel"
                                  p:methodToCall="back"
                                  p:style="margin-right: 100px;"
                                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CLOSE]}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-CurriculumSpecialist-Footer" parent="Uif-FooterBase">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="items">
                        <list>
                            <bean id="CourseView-ReviewProposal-CurriculumSpecialist-cancel"
                                  parent="Uif-ActionLink"
                                  p:actionLabel="Cancel"
                                  p:methodToCall="back"
                                  p:style="margin-right: 100px;"
                                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CLOSE]}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-ConfirmSubmit-Dialog" parent="Uif-DialogGroup" >
        <property name="headerText" value="Submit Proposal"/>
        <property name="renderHeader" value="true"/>
        <property name="cssClasses" >
            <list merge="true">
                <value>submitcourse_dialog</value>
            </list>
        </property>
        <property name="promptText"
                  value="Are you sure you want to submit the proposal to the workflow?"/>
        <property name="availableResponses">
            <list>
                <bean parent="Uif-KeyLabelPair" p:key="yes" p:value="Submit"/>
                <bean parent="Uif-KeyLabelPair" p:key="no" p:value="Cancel"/>
            </list>
        </property>
    </bean>


    <bean id="KS-HomewardPathBreadcrumbs-ReviewProposal-Page" parent="Uif-BreadcrumbItem">
        <property name="label" value="@{#uiHelper.proposalName}: Review Proposal"/>
    </bean>

    <bean id="KS-CourseView-ReviewLink" parent="Uif-VerticalBoxGroup">
        <property name="cssClasses">
            <list merge="true">
                <value>ks-header</value>
            </list>
        </property>
    </bean>

    <bean id="CM-Proposal-Review-Course-Edit-Link" parent="Uif-ActionLink" abstract="true"
          p:ajaxSubmit="false"
          p:methodToCall="editCourseProposalPage"
          p:actionLabel="Edit"
          p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_EDIT]}"/>

</beans>
