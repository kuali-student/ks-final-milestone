<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseView-AuthorsAndCollaboratorsPage" parent="KS-CourseView-BasePage" p:headerText="Authors &amp; Collaborators">
        <property name="items">
            <list>
                <ref bean="KS-CourseView-AuthorsAndCollaboratorsPage-Widgets" />
            </list>
        </property>
    </bean>

    <bean id="KS-CourseView-AuthorsAndCollaboratorsPage-Widgets" parent="KS-CourseView-HorizontalBoxSection"
          p:fieldBindingObjectPath="document.newMaintainableObject">
        <property name="headerText" value="Authors &amp; Collaborators"/>
        <property name="header.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-TableCollectionSection" lazy-init="false" p:layoutManager.numberOfColumns="4">
                    <property name="collectionObjectClass" value="org.kuali.student.cm.course.form.CollaboratorWrapper" />
                    <property name="propertyName" value="dataObject.collaboratorWrappers" />
                    <property name="layoutManager.separateAddLine" value="true" />
                    <!-- <property name="collectionLookup.quickfinderAction.render" value="false" /> -->
                    <property name="addLineLabel.messageText" value=" " />
                    <property name="layoutManager.renderSequenceField" value="false" />
                    <property name="layoutManager.richTable.render" value="true" />
                    <property name="layoutManager.addLineGroup">
                        <bean parent="Uif-CollectionHorizontalBoxItem" p:cssClasses="uif-collectionItem,uif-tableCollectionItem,uif-collectionAddItem">
                            <property name="header">
                                <bean parent="Uif-HeaderOne" p:render="false" />
                            </property>
                        </bean>
                    </property>
                    <property name="addLineItems">
                        <list>
                            <bean parent="Uif-InputField" p:label="Name" p:propertyName="displayName" p:labelPlacement="TOP">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="20" />
                                </property>
                                <property name="suggest">
                                    <bean parent="Uif-Suggest" p:render="true" p:returnFullQueryObject="true">
                                        <property name="valuePropertyName" value="displayName" />
                                        <property name="templateOptions">
                                            <map>
                                                <entry key="minLength" value="1" />
                                                <entry key="delay" value="0" />
                                                <entry key="change">
                                                    <value>
                                                        function(event, ui) {
                                                        if (ui.item==null) {
                                                        jQuery(this).val('');
                                                        jQuery(this).focus();
                                                        }
                                                        }
                                                    </value>
                                                </entry>
                                                <!-- <entry key="formatResult">
                                                    <value>
                                                        function(data) {

                                                        }
                                                    </value>
                                                </entry> -->
                                            </map>
                                        </property>
                                        <property name="suggestQuery">
                                            <bean parent="Uif-AttributeQueryConfig" p:queryMethodToCall="getCollaboratorWrappersSuggest"
                                                  p:queryMethodArgumentFieldList="" />
                                        </property>
                                    </bean>
                                </property>
                                <property name="quickfinder">
                                    <bean parent="Uif-QuickFinder">
                                        <property name="quickfinderAction">
                                            <bean parent="Uif-ActionLink">
                                                <property name="methodToCall" value="performLookup" />
                                                <property name="actionLabel" value="Advanced Search" />
                                                <property name="cssClasses">
                                                    <list merge="true">
                                                        <value>uif-actionLink-block</value>
                                                    </list>
                                                </property>
                                            </bean>
                                        </property>
                                        <property name="lightBoxLookup">
                                            <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false" />
                                        </property>
                                        <property name="dataObjectClassName" value="org.kuali.student.cm.course.form.CollaboratorWrapper" />
                                        <property name="fieldConversions">
                                            <map>
                                                <entry key="displayName" value="displayName" />
                                            </map>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                            <bean id="KS-PermissionDropDown" parent="Uif-InputField-LabelTop" p:propertyName="permission" p:labelPlacement="TOP"
                                  p:label="Permission" p:required="true">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl">
                                        <property name="options">
                                            <list>
                                                <bean parent="Uif-KeyLabelPair" p:key="" p:value="" />
                                                <bean parent="Uif-KeyLabelPair" p:key="edit" p:value="Edit, Comments, View" />
                                                <bean parent="Uif-KeyLabelPair" p:key="comment" p:value="Comments, View" />
                                                <bean parent="Uif-KeyLabelPair" p:key="view" p:value="View" />
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                            <bean id="KS-ActionRequestDropDown" parent="Uif-InputField-LabelTop" p:propertyName="action" p:labelPlacement="TOP"
                                  p:label="Action Request" p:required="true">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl">
                                        <property name="options">
                                            <list>
                                                <bean parent="Uif-KeyLabelPair" p:key="" p:value="" />
                                                <bean parent="Uif-KeyLabelPair" p:key="fyi" p:value="FYI" />
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField-LabelTop" p:propertyName="author" p:label="Author Notation" p:labelPlacement="TOP">
                                <property name="control">
                                    <bean parent="Uif-CheckboxControl" p:checkboxLabel="Add Author Notation" />
                                </property>
                            </bean>
                        </list>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:label="Name" p:propertyName="displayName" p:readOnly="true" />
                            <bean parent="Uif-DataField" p:label="Permission" p:propertyName="permission"
                                  p:readOnly="true" />
                            <bean parent="Uif-DataField" p:label="Action Request" p:propertyName="action"
                                  p:readOnly="true" />
                            <bean parent="Uif-DataField" p:label="Author Notation" p:propertyName="author"
                                  p:readOnly="true" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>