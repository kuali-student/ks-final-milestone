<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">




    <bean id="KS-CourseView-AuthorsAndCollaborators-Section" parent="KS-CourseView-AuthorsAndCollaborators-parent"/>
    <bean id="KS-CourseView-AuthorsAndCollaborators-parent" parent="Uif-VerticalBoxSubSection" abstract="true">
        <property name="additionalCssClasses">
            <list merge="true">
                <value>ks-section</value>
            </list>
        </property>
        <property name="header.headerText" value="Authors &amp; Collaborators"/>
        <property name="render" value="@{!#uiHelper.adminProposal}"/>
        <property name="header.headerLevel" value="h2"/>
        <property name="header.style" value="font-weight:bold;"/>
        <property name="validationMessages" ref="KS-ValidationMessages-Off"/>
        <property name="items">
            <list>
                <ref bean="KS-CourseView-AuthorsAndCollaboratorsSubSection"/>
            </list>
        </property>
    </bean>


    <bean id="KS-CourseView-AuthorsAndCollaboratorsSubSection"  parent="KS-CourseView-AuthorsAndCollaboratorsSubSection-parent"/>
    <bean id="KS-CourseView-AuthorsAndCollaboratorsSubSection-parent" parent="KS-TableCollectionSubSection-BottomAddLine"
          p:layoutManager.id="cc-authorsandcollaboratorsgroup-table" p:layoutManager.style="width: 60em;">
        <property name="collectionObjectClass" value="org.kuali.student.cm.course.form.CollaboratorWrapper"/>
        <property name="propertyName" value="collaboratorWrappers"/>
        <property name="addBlankLineAction.actionLabel" value="Add Person"/>
        <property name="addBlankLineAction.render" value="true"/>
        <property name="addBlankLineAction.id" value="KS-CourseView-AuthorsAndCollaborators-Section_add"/>
        <property name="addBlankLineAction.dirtyOnAction" value="true"/>
        <property name="validationMessages" ref="KS-ValidationMessages-Off"/>
        <property name="layoutManager.renderSequenceField" value="false"/>
        <property name="layoutManager.generateAutoSequence" value="false"/>
        <property name="layoutManager.separateAddLine" value="false"/>
        <property name="layoutManager.richTable.disableTableSort" value="true"/>
        <property name="layoutManager.richTable.render" value="false"/>

        <property name="lineActions">
            <list>
                <bean parent="KS-Uif-Delete-ActionLink"
                      p:methodToCall="deleteLine"
                      p:actionLabel="Delete"
                      p:actionEvent="deleteLine"
                      p:dirtyOnAction="true"/>
            </list>
        </property>
        <property name="Items">
            <list>
                <bean id="KS-Author-displayName" parent="KS-Uif-InputField" p:label="Name"
                      p:propertyName="displayName">
                    <property name="control">
                        <bean parent="KS-Uif-TextControl" p:size="50" p:style="width: 200px;" p:cssClasses="validInstructorAuthorNameAndID" />
                    </property>
                    <property name="suggest">
                        <bean parent="Uif-Suggest" p:render="true" p:returnFullQueryObject="true">
                            <property name="valuePropertyName" value="displayName"/>
                            <property name="templateOptions">
                                <map>
                                    <entry key="minLength" value="3"/>
                                    <entry key="delay" value="3"/>
                                    <entry key="change">
                                        <value>
                                            function(event, ui) {
                                                if (ui.item==null) {
                                                    jQuery(this).focus();
                                                }
                                            }
                                        </value>
                                    </entry>
                                </map>
                            </property>
                            <property name="suggestQuery">
                                <bean parent="Uif-AttributeQueryConfig"
                                      p:queryMethodToCall="getCollaboratorWrappersSuggest"
                                      p:queryMethodArgumentFieldList=""/>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean id="KS-PermissionDropDown" parent="KS-Uif-InputField-LabelTop" p:propertyName="permission"
                      p:label="Permission" p:required="true">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="view" p:value="View"/>
                                    <bean parent="Uif-KeyLabelPair" p:key="comment" p:value="Comments, View"/>
                                    <bean parent="Uif-KeyLabelPair" p:key="edit" p:value="Edit, Comments, View"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean id="KS-ActionRequestDropDown" parent="KS-Uif-InputField-LabelTop" p:propertyName="action"
                      p:label="Action Required" p:required="true" p:style="width:10em">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="fyi" p:value="FYI"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="KS-Uif-InputField-LabelTop" p:propertyName="author" p:label="Author Notation"
                      p:style="width:9em">
                    <property name="control">
                        <bean parent="KS-Uif-CheckboxControl" p:checkboxLabel="Add Author Notation"/>
                    </property>
                </bean>
            </list>
        </property>

    </bean>


    <bean id="AuthorsAndCollaborators-NoRequiredMessageLink" parent="Uif-HorizontalFieldGroup">
        <property name="style" value="display: none;"/>
        <property name="cssClasses">
            <list merge="true">
                <value>hide-when-show-all-fields</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:id="AuthorsAndCollaborators-NoRequiredMessage"
                      p:messageText="No required fields." p:style="margin-top: 5px; margin-right: 0px;">
                </bean>
                <bean parent="KS-Uif-ActionLink" p:id="AuthorsAndCollaborators-NoRequiredMessage-expand-link"
                      p:actionScript="createCourseShowHideObjectiveElements('AuthorsAndCollaborators-NoRequiredMessageLink', 'CourseView-AuthorsAndCollaborators-TableCollectionSection');"
                      p:actionLabel="Show all fields" p:style="margin-right: 15pt; margin-top: 0px;">
                </bean>
            </list>
        </property>
    </bean>

</beans>