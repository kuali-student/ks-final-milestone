<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="KS-CourseView-createCourseInitialPage" parent="Uif-MaintenancePage"
        p:headerText="Create Course"
        p:disclosure.render="false">
        <property name="header" ref="KS-CourseView-InitialPage-Header" />

        <property name="items">
            <list>
                <ref bean="KS-CourseCreate-InitialView-Page-Widgets"/>
            </list>
        </property>
        <property name="footer">
            <bean parent="KS-CourseCreate-InitialView-Footer"/>
        </property>
    </bean>

    <bean id="KS-CourseCreate-InitialView-Page-Widgets" parent="Uif-VerticalBoxSection">
        <property name="header">  <bean parent="Uif-HeaderFour"/>  </property>
        <property name="headerText" value="How would you like to start?"/>
        <property name="instructionalMessage">
            <bean parent="Uif-Message">
                <property name="cssClasses">
                    <list merge="true">
                        <value>cm-home-view-instruction</value>
                    </list>
                </property>
                <property name="messageText"
                          value="You can choose to start a blank proposal with no pre-filled data, or copy an existing course/proposal and then edit the copied data to meet your needs"/>
            </bean>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelRight" id="KS-createCourseInitialPage-StartOptions" p:propertyName="startBlankProposal" p:required="true" p:bindingInfo.bindToForm="true"
                      p:style="padding-top: 18px;" p:defaultValue="true">
                    <property name="control">
                        <bean parent="Uif-VerticalRadioControl">
                            <property name="options">
                                <list>
                                    <bean id="createCourse-startBlankProposal" parent="Uif-KeyLabelPair" p:key="true"  p:value="Start a blank proposal"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean id="createCourseInitial_is_reviewProcess"
                      parent="Uif-InputField-LabelRight"
                      p:label="Use curriculum review process"
                      p:fieldLabel.cssClasses="label-normal"
                      p:propertyName="useCMreviewProcess" p:bindingInfo.bindToForm="true"
                      p:required="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:style="margin-left: 6px;"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseView-InitialPage-Header" parent="Uif-HeaderOne">
        <property name="upperGroup">
            <bean parent="Uif-VerticalBoxGroup">
                <property name="items">
                    <list>
                        <bean parent="Uif-VerticalBoxGroup">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-HeaderOne" p:style="margin-top: 20px; margin-bottom: 20px; border-bottom: thin solid #000000;">
                                        <property name="headerText" value="Create Course" />
                                    </bean>
                                 </list>
                            </property>
                        </bean>
                     </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KS-CourseCreate-InitialView-Footer" parent="Uif-FooterBase">
        <property name="items">
            <list>
                <bean id="createCourseInitial-continueCreate"
                      parent="Uif-PrimaryActionButton"
                      p:ajaxSubmit="false"
                      p:methodToCall="ContinueCreateCourse"
                      p:actionLabel="Continue"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_SAVE]}"/>
                <bean id="createCourseInitial-cancel"
                      parent="Uif-CancelAction"
                      p:ajaxSubmit="false"
                      p:methodToCall="cancel"  p:style="margin-right: 100px;"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CANCEL]}"/>
            </list>
        </property>
    </bean>
</beans>