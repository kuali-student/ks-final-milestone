    <!-- Dialogs -->

    <bean id="KS-CourseView-UnSavedChangesConfirmation" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
        <property name="headerText" value="Warning"/>
        <property name="hidden" value="true"/>
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:messageText="You may have unsaved changes. Save changes?" p:style="margin-bottom:10px;margin-top:10px;"/>

                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-PrimaryActionButton" p:ajaxSubmit="false" p:methodToCall="saveProposal" p:preSubmitCall="closeLightbox(); return validateForm();" p:actionLabel="Yes"/>
                            <bean parent="Uif-SecondaryActionButton"
                                  p:ajaxSubmit="false"
                                  p:methodToCall="cancel"
                                  p:actionLabel="No"/>
                            <bean parent="Uif-ActionLink" p:actionScript="closeLightbox();" p:ajaxSubmit="false" p:actionLabel="Cancel"/>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="commentsLightBox" parent="Uif-VerticalBoxSection">
        <property name="hidden" value="true" />
        <property name="headerText" value="Proposal Comments" />
        <property name="items">
            <list>
                <!--"propsalCommentSection" -->
                <bean parent="Uif-DataField" p:propertyName="dataObject.ProposalInfo.name" />
                <bean parent="Uif-Message"
                      p:messageText="All comments posted here will be visible to authors, and to reviewers after you submit the proposal" />

                <!--"commentTableSection" -->
                <bean parent="Uif-MessageField" p:messageText="Logged in as: @{document.newMaintainableObject.dataObject.userId}" />
                <bean parent="Uif-TableCollectionSection" lazy-init="false">
                    <property name="headerText" value="Leave a Comment" />
                    <property name="collectionObjectClass" value="org.kuali.student.r2.core.comment.dto.CommentInfo" />

                    <property name="propertyName" value="dataObject.commentInfos" />
                    <property name="layoutManager.separateAddLine" value="true" />
                    <property name="addLineLabel.messageText" value=" " />
                    <property name="layoutManager.renderSequenceField" value="false" />
                    <property name="layoutManager.richTable.render" value="true" />
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:label=" " p:propertyName="commenterId"/>
                            <bean parent="Uif-InputField" p:label=" " p:propertyName="commentText.plain" >
                            </bean>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-PrimaryActionButton" p:actionLabel="Submit" p:methodToCall="saveAndCloseComment" />
            </list>
        </property>
    </bean>

    <bean id="decisionsDialog" parent="Uif-VerticalBoxSection">
        <property name="hidden" value="true" />
        <property name="headerText" value="Decisions" />
        <property name="items">
            <list>
                <bean parent="Uif-Disclosure-TableCollectionSection" p:layoutManager.numberOfColumns="4">
                    <property name="header.render" value="false" />
                    <property name="collectionObjectClass" value="org.kuali.student.r2.core.comment.dto.DecisionInfo" />
                    <property name="propertyName" value="dataObject.decisions" />
                    <property name="layoutManager.generateAutoSequence" value="true" />
                    <property name="layoutManager.richTable.render" value="false" />
                    <property name="renderAddLine" value="false" />
                    <property name="renderLineActions" value="false" />
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:label="Decision" p:propertyName="decision" />
                            <bean parent="Uif-InputField" p:label="Date" p:propertyName="date" />
                            <bean parent="Uif-InputField" p:label="Actor" p:propertyName="actor" />
                            <bean parent="Uif-InputField" p:label="Rationale" p:propertyName="rationale" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-NewCourse-information" parent="Uif-BreadcrumbItem">
        <property name="label" value="Course Information"></property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-NewCourse" parent="Uif-BreadcrumbItem">
        <property name="label" value="@{(#form.curriculumSpecialist) ? 'New Course(Admin Proposal)': 'New Course(   Proposal)'}" />
        <property name="url.baseUrl" value="curriculumHomeView"/>
        <property name="url.viewId" value="CourseView"/>
    </bean>

</beans>
