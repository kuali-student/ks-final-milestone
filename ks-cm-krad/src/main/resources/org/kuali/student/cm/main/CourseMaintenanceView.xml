    <!--
        The data dictionary for the CourseInfoWrapper class.
    -->
    <bean id="CourseInfoWrapper" parent="CourseInfoWrapper-parentBean"/>
    <bean id="CourseInfoWrapper-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.student.cm.course.form.CourseInfoWrapper"/>
        <property name="titleAttribute" value="courseInfo.id"/>
        <property name="attributes">
            <list/>
        </property>
        <property name="complexAttributes">
            <list/>
        </property>
        <property name="objectLabel" value="CourseInfo Wrapper"/>
        <property name="primaryKeys">
            <list>
                <value>courseInfo.id</value>
            </list>
        </property>
    </bean>

    <!--
        Data dictionary overrides for validation.
    -->

    <!-- Common beans -->

    <!-- Override simpleConstraint.states with workflow doc state R (Enroute) and beyond -->
    <bean id="DDValueReplacer-Enroute" parent="FieldOverrideForValueReplace" abstract="true">
        <property name="propertyName" value="simpleConstraint.states"/>
        <property name="value">
            <list>
                <value>R+</value>
            </list>
        </property>
    </bean>

    <!-- Override simpleConstraint.states with workflow doc state P (Processed) -->
    <bean id="DDValueReplacer-Processed" parent="FieldOverrideForValueReplace" abstract="true">
        <property name="propertyName" value="simpleConstraint.states"/>
        <property name="value">
            <list>
                <value>P</value>
            </list>
        </property>
    </bean>

    <!--
        Per property overrides for workflow doc state R (Enroute).
    -->
    <bean id="CourseInfo.subjectArea-override" parent="DataDictionaryBeanOverride">
        <property name="beanName" value="CourseInfo.subjectArea"/>
        <property name="fieldOverrides">
            <bean parent="DDValueReplacer-Enroute"/>
        </property>
    </bean>

    <bean id="CourseInfo.descr.plain-override" parent="DataDictionaryBeanOverride">
        <property name="beanName" value="CourseInfo.descr.plain"/>
        <property name="fieldOverrides">
            <bean parent="DDValueReplacer-Enroute"/>
        </property>
    </bean>

    <bean id="ProposalInfo.rationale.plain-override" parent="DataDictionaryBeanOverride">
        <property name="beanName" value="ProposalInfo.rationale.plain"/>
        <property name="fieldOverrides">
            <bean parent="DDValueReplacer-Enroute"/>
        </property>
    </bean>

    <bean id="CourseInfo.startTerm-override" parent="DataDictionaryBeanOverride">
        <property name="beanName" value="CourseInfo.startTerm"/>
        <property name="fieldOverrides">
            <bean parent="DDValueReplacer-Enroute"/>
        </property>
    </bean>

    <bean id="ActivityInfo.typeKey-override" parent="DataDictionaryBeanOverride">
        <property name="beanName" value="ActivityInfo.typeKey"/>
        <property name="fieldOverrides">
            <bean parent="DDValueReplacer-Enroute"/>
        </property>
    </bean>


    <!--
        TODO: KSCM-2152 - Remove this workaround once KULRICE-12708 is fixed.  CourseInfo.courseNumberSuffix.override
        should be uncommented and CourseInfo.courseNumberSuffix.override-required-bug should come out.

        Per property overrides for workflow doc state P (Processed).

    <bean id="CourseInfo.courseNumberSuffix.override" parent="DataDictionaryBeanOverride">
        <property name="beanName" value="CourseInfo.courseNumberSuffix" />
        <property name="fieldOverrides">
            <bean parent="DDValueReplacer-Processed" />
        </property>
    </bean>
     -->
    <!-- Explicitly set a simple constraint with required=false so that the requiredness message will behave -->
    <bean id="CourseInfo.courseNumberSuffix.override-required-bug" parent="DataDictionaryBeanOverride">
        <property name="beanName" value="CourseInfo.courseNumberSuffix"/>
        <property name="fieldOverrides">
            <bean parent="FieldOverrideForValueReplace">
                <property name="propertyName" value="simpleConstraint"/>
                <property name="value">
                    <bean parent="SimpleConstraint">
                        <property name="maxLength" value="3"/>
                        <property name="minLength" value="3"/>
                        <property name="required" value="false"/>
                        <property name="states">
                            <list>
                                <value>I,S,R</value>
                            </list>
                        </property>
                        <property name="constraintStateOverrides">
                            <list>
                                <bean parent="RequiredConstraint">
                                    <property name="maxLength" value="3"/>
                                    <property name="minLength" value="3"/>
                                    <property name="states">
                                        <list>
                                            <value>P</value>
                                        </list>
                                    </property>
                                </bean>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>


