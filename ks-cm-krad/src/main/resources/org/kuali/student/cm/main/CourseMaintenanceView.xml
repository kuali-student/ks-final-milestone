    <bean id="commentsLightBox" parent="Uif-VerticalBoxSection" p:style="width:600px;padding:10px">
        <property name="hidden" value="true"/>
        <property name="items">
            <list>
                <!-- Display existing comments or a message indicating that there aren't any comments. Using a box section
                     here so that both the tableCollectionSection and the simple Message can share the header. -->
                <bean id="commentsLightBoxContents" parent="Uif-VerticalBoxSection" >
                    <property name="header">
                        <bean parent="Uif-HeaderOne" p:headerText="Comments for @{#dataObject.proposalInfo.name}"
                              p:cssClasses="ks-dottedHeaderActions"/>
                    </property>
                    <property name="scrollpane">
                        <bean parent="Uif-Scrollpane">
                            <property name="height" value="600px"/>
                        </bean>
                    </property>
                    <property name="items">
                        <list>
                            <bean id="commentsTextArea" parent="Uif-InputField" p:propertyName="comment">
                                <property name="instructionalText"
                                          value="Comments posted here will be visible to anyone with view access to the proposal."/>

                                <property name="control">
                                    <bean parent="Uif-LargeTextAreaControl" p:cols="71" p:onKeyUpScript="updateCapturedComment();"/>
                                </property>
                            </bean>

                            <bean parent="Uif-SecondaryActionButton"
                                  p:ajaxSubmit="true"
                                  p:methodToCall="saveComment"
                                  p:actionLabel="Add Comment"
                                  p:performClientSideValidation="true"
                                  p:render="true"/>
                            <!-- There is a property replacer below which, if there are no comments, replaces it with a Message -->
                            <bean parent="Uif-VerticalBoxSection" >
                                <property name="header">
