<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="CourseInfoWrapper" parent="CourseInfoWrapper-parentBean" />

    <bean id="CourseInfoWrapper-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="dataObjectClass" value="org.kuali.student.cm.course.form.CourseInfoWrapper"/>
        <property name="titleAttribute" value="courseInfo.id"/>
        <property name="attributes">
            <list />
        </property>
        <property name="objectLabel" value="Course info wrapper"/>
        <property name="primaryKeys">
            <list>
                <value>courseInfo.id</value>
            </list>
        </property>
    </bean>

    <!-- Controller Class: CourseController.java View Helper Class: CourseViewHelperServiceImpl.java UX : http://ux.ks.kuali.org.s3.amazonaws.com/wireframes/ENR/Scheduling_Interface/v3/start.html 
        This view has couple of pages (edit and copy) with all the beans defined at 1. CourseViewCourseInfoPage.xml -->

    <bean id="KS-CourseView" parent="KS-Uif-MaintenanceView">
        <property name="defaultBindingObjectPath" value="document.newMaintainableObject" />
        <property name="formClass" value="org.kuali.student.cm.course.form.CreateCourseForm"/>
        <property name="dataObjectClassName" value="org.kuali.student.cm.course.form.CourseInfoWrapper"/>
        <!-- New Course header requires static string therefore below string construction is not required.
        commenting below code in case required in future.
         @{!#empty(document.newMaintainableObject.proposal.name) ? document.newMaintainableObject.proposal.name + ' (Proposal)': 'New Course (Proposal)'} -->
        <!--<property name="headerText" value="@{(document.newMaintainableObject.proposal != null and !#empty(document.newMaintainableObject.proposal.name)) ? document.newMaintainableObject.proposal.name + ' (Proposal)': 'New Course (Proposal)'}" />-->
        <property name="headerText" value="@{(#form.headerText eq null or #form.headerText.length() lt 1) ? 'Create Course': #form.headerText }" />
        <property name="singlePageView" value="false"/><!-- Override the default to allow for navigation -->
        <property name="viewHelperServiceClass" value="org.kuali.student.cm.course.service.impl.CourseInfoMaintainableImpl" />
        <property name="applyDirtyCheck" value="true" />
        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-CurriculumManagement"/>
<!--
                <ref bean="KS-HomewardPathBreadcrumbs-NewCourse"/>
                <ref bean="KS-HomewardPathBreadcrumbs-NewCourse-information"/>
-->
            </list>
        </property>
        <property name="header.lowerGroup" >
            <bean id="KS-CourseView-LinkGroup" parent="Uif-LinkGroup" p:linkSeparator="|" p:render="@{#form.pageId eq 'KS-CourseView-CoursePage'}">
                <property name="items">
                    <list>
                        <bean parent="Uif-DataField" p:label="Proposal Status"
                              p:shortLabel="Status" p:labelPlacement="LEFT" p:propertyName="dataObject.proposalInfo.stateKey" />
                        <bean parent="Uif-ActionLink" p:actionLabel="Comments"
                              p:methodToCall="showComment" />
                        <bean parent="Uif-ActionLink" p:actionLabel="Decisions"
                              p:methodToCall="showDecisions" />
                        <bean parent="Uif-Space" />
                        <bean parent="Uif-DataField" p:label="Last Updated"
                              p:shortLabel="Updated" p:labelPlacement="LEFT" p:propertyName="dataObject.lastUpdated" />
                    </list>
                </property>
            </bean>
        </property>
        <!--<property name="stateMapping">
            <bean parent="WorkflowStateMapping">
                <property name="customClientSideValidationStates">
                    <map>
                        <entry key="I" value="A"/>
                    </map>
                </property>
            </bean>
        </property>-->
        <property name="dialogs">
            <list>
                <ref bean="commentsLightBox" />
                <ref bean="decisionsDialog" />
                <!-- <bean id="compareRuleLightBox" parent="KS-KRMS-CompareRule">
                    <property name="headerText" value="Compare Catalog and Course Offering Rules"/>
                </bean> -->
                <bean id="courseRangeLookup" parent="KRMS-CourseRangeResult-Lookup-CM"
                      p:fieldBindingObjectPath="document.newMaintainableObject.dataObject.courseRuleManagementWrapper"/>
                <bean id="warningMessagedYesNo" parent="KRMS-WarningMessagedYesNo"
                      p:fieldBindingObjectPath="document.newMaintainableObject.dataObject.courseRuleManagementWrapper"/>
            </list>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-CourseView-CoursePage"/>
                <ref bean="KS-CourseView-ReviewProposalPage" />
                <ref bean="KS-RuleMaintenance-Page-Parent" />
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list>
                <value>ks-cm-krad/scripts/jquery.jqEasyCharCounter.custom.js</value>
                <value>ks-cm-krad/scripts/common.js</value>
                <value>themes/ksboot/scripts/ruleMaintenance.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-cm-krad/css/cm.css</value>
                <value>themes/ksboot/stylesheets/krms.css</value>
            </list>
        </property>
    </bean>

    <bean id="CourseInfoMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.student.cm.course.form.CourseInfoWrapper" />
        <property name="maintainableClass" value="org.kuali.student.cm.course.service.impl.CourseInfoMaintainableImpl"/>
        <property name="documentTypeName" value="kuali.proposal.type.course.create"/>
        <property name="documentAuthorizerClass" value="org.kuali.student.cm.course.auth.CMMaintenanceDocumentAuthorizer"/>
        <property name="businessRulesClass" value="org.kuali.student.cm.course.rule.CourseRule"/>
        <property name="lockingKeys">
            <list>
                <value>courseInfo.id</value>
            </list>
        </property>
    </bean>

    <bean id="CourseInfoAdminMaintenanceDocument" parent="uifMaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.student.cm.course.form.CourseInfoWrapper" />
        <property name="maintainableClass" value="org.kuali.student.cm.course.service.impl.CourseInfoMaintainableImpl"/>
        <property name="documentTypeName" value="kuali.proposal.type.course.create.admin"/>
        <property name="documentAuthorizerClass" value="org.kuali.student.cm.course.auth.CMMaintenanceDocumentAuthorizer"/>
        <property name="businessRulesClass" value="org.kuali.student.cm.course.rule.CourseRule"/>
        <property name="lockingKeys">
            <list>
                <value>courseInfo.id</value>
            </list>
        </property>
    </bean>

    <!-- Each course details tab/section extends this -->
    <bean id="KS-CourseView-VerticalBoxSection" parent="Uif-VerticalBoxSection" abstract="true">
        <property name="cssClasses">
            <list merge="true">
                <value>course_details_tab_section</value>
            </list>
        </property>
        <!--  Turn off validation messages for the tab sections -->
        <property name="validationMessages.displayMessages" value="false" />
    </bean>

    <bean id="KS-CourseView-HorizontalBoxSection" parent="Uif-HorizontalBoxSection" abstract="true" />

    <bean id="KS-CourseView-CoursePage" parent="Uif-MaintenancePage" p:disclosure.render="false">
        <property name="header" ref="KS-CourseView-Header" />
        <property name="headerText" value="Create Course"/>
        <property name="footer.items">
            <list>
                <bean parent="KS-CourseView-Footer" p:render="@{!#form.curriculumSpecialist}"/>
                <bean parent="KS-CourseView-CurriculumSpecialistFooter" p:render="@{#form.curriculumSpecialist}"/>
            </list>
        </property>
        <property name="onDocumentReadyScript" value="onCourseLoad(@{#form.curriculumSpecialist})"/>
        <property name="items">
            <list>
                <bean parent="Uif-TabGroup" p:id="course_tabs">
                    <property name="validationMessages.displayMessages" value="false" />
                    <property name="items">
                        <list>
                            <ref bean="KS-CourseView-CourseInfo-Section"/>
                            <ref bean="KS-CourseView-Governance-Section"/>
                            <ref bean="KS-CourseView-Logistics-Section"/>
                            <ref bean="KS-CourseView-LearningObjectives-Section" />
                            <ref bean="KS-CourseView-CourseRequisites-Section"/>
                            <ref bean="KS-CourseView-ActiveDates-Section"/>
                            <ref bean="KS-CourseView-Financials-Section"/>
                            <ref bean="KS-CourseView-AuthorsAndCollaborators-Section"/>
                            <ref bean="KS-CourseView-SupportingDocuments-Section" />
                        </list>
                    </property>
                    <property name="tabsWidget.templateOptionsJSString">
                        <value>
                            { selected: @{selectedTabIndex} }
                        </value>
                    </property>
                    <property name="tabsWidget.position" value="LEFT"/>
                    <property name="propertyReplacers">
                        <list>
                            <!-- Only render the tab group header for regular (non-admin) proposals -->
                            <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="header" p:condition="@{! #form.adminProposal}">
                                <property name="replacement">
                                    <bean id="course_tabs_header" parent="Uif-HeaderFour">
                                        <property name="headerText" value="1. Define Course" />

                                        <property name="cssClasses">
                                            <list merge="true">
                                                <value>course_tabs_header_text</value>
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                            <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="footer" p:condition="@{! #form.adminProposal}">
                                <property name="replacement">
                                    <bean parent="Uif-FooterBase">
                                        <property name="items">
                                            <list>
                                                <ref bean="KS-CourseView-ReviewProposalLink"/>
                                            </list>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseView-ReviewProposalLink" parent="Uif-VerticalBoxGroup" p:render="@{! #form.adminProposal}">
        <property name="header">
            <bean id="course_tabs_footer_header" parent="Uif-HeaderFour">
                <property name="headerText" value="2. Review and Submit" />
                <property name="cssClasses">
                    <list merge="true">
                        <value>course_tabs_header_text</value>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink"
                      p:methodToCall="reviewCourseProposal"
                      p:actionLabel="Review Proposal"
                      p:performDirtyValidation="true"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseView-SectionHeader" parent="Uif-HeaderTwo">
        <property name="cssClasses">
            <list merge="true">
                <value>ks-header</value>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseView-Header" parent="Uif-HeaderTwo">
        <property name="lowerGroup">
            <ref bean="Uif-HeaderLowerGroup"/>
        </property>
        <property name="upperGroup">
            <bean id="KS-CourseView-AdminMessageGroup" parent="Uif-VerticalBoxGroup">
                <property name="items">
                    <list>
                        <bean id="KS-CourseView-Admin-Message-TreeExpandCollapse" parent="Uif-HorizontalFieldGroup"
                              p:showLabel="false" p:render="@{#form.curriculumSpecialist}"
                              p:additionalCssClasses="uif-validationMessages,uif-groupValidationMessages,uif-pageValidationMessages-warning,ks-subSection">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Message" p:id="Create-CourseView-Admin-Message"
                                          p:messageText="Showing required and optional fields."
                                          p:style="margin-right: 0pt; margin-top: 5px;">
                                    </bean>
                                    <bean parent="KS-Uif-ActionLink" p:id="Create-CourseView-Admin-Message-expand-optional-link"
                                          p:actionScript="showHideCreateCourseOptionalElements();"
                                          p:actionLabel="Show only required fields" p:style="margin-right: 15pt; margin-top: 0px;">
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
    
