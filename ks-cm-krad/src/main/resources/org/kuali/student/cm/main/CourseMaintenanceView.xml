    <bean id="KS-CourseView-Footer" parent="Uif-FooterBase">
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-SaveAction"
                                  p:ajaxSubmit="false"
                                  p:methodToCall="saveProposal"
                                  p:actionLabel="Save and Continue"
                                  p:performClientSideValidation="true"
                                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_SAVE]}">
                                  <property name="actionParameters">
                                      <map>
                                        <entry key="displayPage" value="NEXT"/>
                                      </map>
                                  </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton"
                                  p:ajaxSubmit="false"
                                  p:methodToCall="saveProposal"
                                  p:actionLabel="Save Progress"
                                  p:performClientSideValidation="true"
                                  p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_SAVE]}">
                            </bean>
                            <bean parent="Uif-ActionLink"
                                  p:actionLabel="Cancel"
                                  p:methodToCall="back"
