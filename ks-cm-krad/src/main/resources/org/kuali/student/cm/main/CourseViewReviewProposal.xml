<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseView-ReviewProposalPage" parent="KS-CourseView-BasePage"
          p:headerText="Review Proposal">

        <property name="items">
            <list>
                <ref bean="KS-CourseView-CourseInfoPage-ReviewWidgets" />
                <ref bean="KS-CourseView-GovernancePage-ReviewWidgets" />
                <ref bean="KS-CourseView-CourseLogisticsPage-ReviewWidgets" />
                <ref bean="KS-CourseView-ActiveDatesPage-ReviewWidgets" />
                <ref bean="KS-CourseView-LearningObjectivesPage-ReviewWidgets" />
                <ref bean="KS-CourseView-FinancialsPage-ReviewWidgets" />
                <ref bean="KS-CourseView-SupportingDocumentsPage-ReviewWidgets" />
            </list>
        </property>

    </bean>

    <bean id="KS-CourseView-ReviewProposalPage-Widgets" parent="Uif-VerticalBoxSection"
          p:headerText="Review Proposal">
        <property name="header.render" value="false"/>
        <property name="items">
            <list>
                <ref bean="KS-CourseView-CourseInfoPage-ReviewWidgets" />
                <ref bean="KS-CourseView-GovernancePage-ReviewWidgets" />
                <ref bean="KS-CourseView-CourseLogisticsPage-ReviewWidgets" />
                <ref bean="KS-CourseView-ActiveDatesPage-ReviewWidgets" />
                <ref bean="KS-CourseView-LearningObjectivesPage-ReviewWidgets" />
                <ref bean="KS-CourseView-FinancialsPage-ReviewWidgets" />
                <ref bean="KS-CourseView-SupportingDocumentsPage-ReviewWidgets" />
            </list>
        </property>

    </bean>


    <bean name="KS-CourseView-CourseInfoPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Course Information" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:methodToCall="navigate"
                                          p:navigateToPageId="KS-CourseView-CourseInfoPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Proposal Title" p:propertyName="reviewInfo.courseInfo.proposalName" p:required="true" />
                <bean parent="Uif-DataField" p:label="Course Title" p:propertyName="reviewInfo.courseInfo.courseTitle" p:required="true" />
                <bean parent="Uif-DataField" p:label="Transcript Course Title" p:propertyName="reviewInfo.courseInfo.transcriptTitle" />
                <bean parent="Uif-DataField" p:label="Subject Code" p:propertyName="reviewInfo.courseInfo.subjectArea" p:required="true" />
                <bean parent="Uif-DataField" p:label="Course Number" p:propertyName="reviewInfo.courseInfo.courseNumberSuffix" />
                <!--
                <bean parent="Uif-DataField" p:label="Instructor(s)" p:propertyName="reviewInfo.courseInfo.courseNumberSuffix" />
                -->
            </list>                        
        </property>
    </bean>

    <bean name="KS-CourseView-CrossListedCourses-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Cross Listed Courses" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:methodToCall="navigate"
                                          p:navigateToPageId="KS-CourseView-CourseInfoPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Course Listing" p:propertyName="reviewInfo.courseInfo.courseNumberSuffix" />
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-GovernancePage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Governance" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:methodToCall="navigate"
                                          p:navigateToPageId="KS-CourseView-GovernancePage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Campus Locations" p:propertyName="reviewInfo.governanceInfo.campusLocations" />
                <bean parent="Uif-DataField" p:label="Curriculum Oversight" p:propertyName="reviewInfo.governanceInfo.curriculumOversight" p:required="true" />
                <bean parent="Uif-DataField" p:label="Administering Organization" p:propertyName="reviewInfo.governanceInfo.administeringOrganization" />
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-CourseLogisticsPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Course Logistics" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:navigateToPageId="KS-CourseView-CourseLogisticsPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Term" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Assessment Scale" p:propertyName="reviewInfo.courseLogisticsInfo.term" p:required="true" />
                <bean parent="Uif-DataField" p:label="Duration Type" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Duration Count" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Pass Fail Transcript Grade" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Audit" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Final Exam Status" p:propertyName="reviewInfo.courseLogisticsInfo.term" p:required="true" />

                <bean parent="Uif-DataField" p:label="Outcome 1" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Type" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Course Format" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-LearningObjectivesPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Learning Objectives" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:navigateToPageId="KS-CourseView-LearningObjectivesPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Learning Objectives" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-CourseRequisitesPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Course Requisites" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:navigateToPageId="KS-CourseView-CourseRequisitesPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Student Eligibility + Prerequisite" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Corequisite" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Recommended Preparation" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Antirequisite" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Course that Restricts Credits" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
                <bean parent="Uif-DataField" p:label="Repeatable for Credit" p:propertyName="reviewInfo.courseLogisticsInfo.term" />
            </list> 
       </property>
    </bean>

    <bean name="KS-CourseView-ActiveDatesPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Active Dates" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:navigateToPageId="KS-CourseView-ActiveDatesPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Start Term" p:propertyName="reviewInfo.activeDatesInfo.startTerm" p:required="true" />
                <bean parent="Uif-DataField" p:label="End Term" p:propertyName="reviewInfo.activeDatesInfo.endTerm" />
                <bean parent="Uif-DataField" p:label="Pilot Course" p:propertyName="reviewInfo.activeDatesInfo.pilotCourse" />
            </list> 
       </property>
    </bean>

    <bean name="KS-CourseView-FinancialsPage-ReviewWidgets"  parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Authors and Collaborators"/>
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:navigateToPageId="KS-CourseView-FinancialsPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Justification of Fees" p:propertyName="reviewInfo.financialsInfo.justificationOfFees" />
                <bean parent="Uif-DataField" p:label="Fee" p:propertyName="reviewInfo.financialsInfo.fee" />
                <bean parent="Uif-DataField" p:label="Revenue Source" p:propertyName="reviewInfo.financialsInfo.revenueSource" />
                <bean parent="Uif-DataField" p:label="Expending Organization" p:propertyName="reviewInfo.financialsInfo.expendingOrganization" />
            </list>
        </property>
    </bean>

    <bean name="KS-CourseView-SupportingDocumentsPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Supporting Documents" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:navigateToPageId="KS-CourseView-SupportingDocumentsPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Supporting Documents" p:propertyName="reviewInfo.activeDatesInfo.startTerm" />
            </list>
        </property>
    </bean>

</beans>
