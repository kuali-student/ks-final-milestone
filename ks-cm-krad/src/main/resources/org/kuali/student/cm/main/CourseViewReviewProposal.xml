<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseView-ReviewProposalPage" parent="Uif-MaintenancePage"
          p:headerText="Review Proposal" p:disclosure.render="false">
        <property name="header" ref="KS-CourseView-Header" />

        <property name="items">
            <list>
                <ref bean="KS-CourseView-CourseInfoPage-ReviewWidgets" />
                <ref bean="KS-CourseView-GovernancePage-ReviewWidgets" />
                <ref bean="KS-CourseView-CourseLogisticsPage-ReviewWidgets" />
                <ref bean="KS-CourseView-ActiveDatesPage-ReviewWidgets" />
                <ref bean="KS-CourseView-LearningObjectivesPage-ReviewWidgets" />
                <ref bean="KS-CourseView-AuthorsAndCollaboratorsPage-ReviewWidgets" />
                <ref bean="KS-CourseView-SupportingDocumentsPage-ReviewWidgets" />
            </list>
        </property>

        <property name="footer">
            <bean parent="KS-CourseView-Footer"/>
        </property> 
    </bean>


    <bean name="KS-CourseView-CourseInfoPage-ReviewWidgets" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="KS-CourseView-SectionHeader">
                    <property name="headerText" value="Course Information" />
                    <property name="rightGroup">
                        <bean parent="KS-CourseView-ReviewLink">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-NavigationActionLink" 
                                          p:ajaxSubmit="false" 
                                          p:methodToCall="navigate"
                                          p:navigateToPageId="KS-CourseView-CourseInfoPage" 
                                          p:actionLabel="Edit"/>
                                </list> 
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="Proposal Title" p:propertyName="reviewInfo.courseInfo.proposalName" />
                <bean parent="Uif-DataField" p:label="Course Title" p:propertyName="reviewInfo.courseInfo.courseTitle" />
            </list>                        
        </property>
    </bean>

