<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseView-SupportingDocuments-Section" parent="KS-CourseView-VerticalBoxSection">
        <property name="headerText" value="Supporting Documents"/>
        <property name="header">
            <bean parent="Uif-KS-IconHeader">
                <property name="richHeaderMessage.iconToolTipText"
                          value="Files that will be submitted with the Course Proposal that support it."/>
            </bean>
        </property>
        <property name="header.headerLevel" value="h2"/>
        <property name="items">
            <list>
                <ref bean="SupportingDocuments-NoRequiredMessageLink" />
                <ref bean="KS-SupportingDocuments-Section" />
            </list>
        </property>
    </bean>

    <bean id="KS-SupportingDocuments-Section" parent="Uif-StackedCollectionSection"
          p:propertyName="dataObject.documentsToAdd"
          p:collectionObjectClass="org.kuali.student.cm.course.form.SupportingDocumentInfoWrapper">
        <!--
          <property name="renderAddBlankLineButton" value="true" />
          <property name="addLinePlacement" value="BOTTOM" />
          <property name="addBlankLineAction">
              <bean parent="Uif-AddBlankLineAction" p:actionLabel="Add a Supporting Document" />

          </property>
  -->
        <property name="addLineLabel.messageText" value="Add a Supporting Document" />
        <property name="layoutManager.lineGroupPrototype.header.headerText"
                  value="Document @{(#index + 1)}" />
        <!--<property name="help">
            <bean parent="Uif-KS-Help"
                  p:tooltipHelpContent="Files that will be submitted
				  with the Course Proposal that support it." />
        </property> -->
        <property name="cssClasses">
            <list merge="true">
                <value>cm-collection-width</value>
                <value>admin-not-required-field</value>
            </list>
        </property>
        <property name="addLineActions">
            <list>
                <bean parent="Uif-ActionLink" p:methodToCall="addLine2" p:actionLabel="add" />
            </list>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-ActionLink" p:methodToCall="removeSupportingDocument" p:actionLabel="delete" />
            </list>
        </property>

        <property name="items">
            <list>
                <!--
              <bean parent="Uif-InputField" p:label="File" p:propertyName="documentUpload">
                  <property name="control">
                      <bean parent="Uif-FileControl" p:size="30"/>
                  </property>
              </bean>    -->
                <bean parent="Uif-InputField" p:label="Description" p:propertyName="description" >
                    <property name="control">
                        <bean parent="Uif-TextControl" />
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="SupportingDocuments-NoRequiredMessageLink" parent="Uif-HorizontalFieldGroup" >
        <property name="style" value="display: none;" />
        <property name="cssClasses">
            <list merge="true">
                <value>hide-when-show-all-fields</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:id="SupportingDocuments-NoRequiredMessage"
                      p:messageText="No required fields." p:style="margin-top: 5px; margin-right: 0px;">
                </bean>
                <bean parent="KS-Uif-ActionLink" p:id="SupportingDocuments-NoRequiredMessage-expand-link"
                      p:actionScript="createCourseShowHideObjectiveElements('SupportingDocuments-NoRequiredMessageLink', 'KS-SupportingDocuments-Section');"
                      p:actionLabel="Show all fields" p:style="margin-right: 15pt; margin-top: 0px;">
                </bean>
            </list>
        </property>
    </bean>

</beans>
