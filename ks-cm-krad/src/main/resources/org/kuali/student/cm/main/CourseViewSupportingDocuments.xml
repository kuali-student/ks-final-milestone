<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="KS-CourseView-SupportingDocumentsPage" parent="KS-CourseView-BasePage"
		  p:headerText="Supporting Documents">
        <property name="items">
            <list> 
                <ref bean="KS-CourseView-SupportingDocumentsPage-Widgets" /> 
            </list> 
        </property> 
	</bean>

    <bean id="KS-CourseView-SupportingDocumentsPage-Widgets" parent="KS-CourseView-VerticalBoxSection">
        <property name="headerText" value="Supporting Documents"/>
        <property name="header.render" value="false"/>
        <property name="items">
            <list>
                <ref bean="KS-SupportingDocuments-Section" />
            </list>
        </property>
    </bean>



	<bean id="KS-SupportingDocuments-Section" parent="Uif-StackedCollectionSection"
		  p:headerText="Supporting Document(s)" p:propertyName="documentsToAdd"
		  p:collectionObjectClass="org.kuali.student.cm.course.form.SupportingDocumentInfoWrapper">
      <!--
		<property name="renderAddBlankLineButton" value="true" />
		<property name="addLinePlacement" value="BOTTOM" />
        <property name="addBlankLineAction">
            <bean parent="Uif-AddBlankLineAction" p:actionLabel="Add a Supporting Document" />
            
        </property>
-->
		<property name="addLineLabel.messageText" value="Add a Supporting Document" />
		<property name="layoutManager.lineGroupPrototype.header.headerText"
				  value="Document @{(#index + 1)}" />
		<property name="help">
			<bean parent="Uif-Help"
				  p:tooltipHelpContent="Files that will be submitted
				  with the Course Proposal that support it." />
		</property>
		<property name="cssClasses">
			<list merge="true">
				<value>cm-collection-width</value>
			</list>
		</property>
		<property name="addLineActions">
			<list>
                <bean parent="Uif-ActionLink" p:methodToCall="addLine2" p:actionLabel="add" />
			</list>
		</property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-ActionLink" p:methodToCall="removeSupportingDocument" p:actionLabel="delete" />
            </list>
        </property>

		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:label="File" p:propertyName="documentUpload">
                    <property name="control">
                        <bean parent="Uif-FileControl" p:size="30"/>
                    </property>
				</bean>
				<bean parent="Uif-InputField" p:label="Description" p:propertyName="description">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
				</bean>
			</list>
		</property>
	</bean>
</beans>
