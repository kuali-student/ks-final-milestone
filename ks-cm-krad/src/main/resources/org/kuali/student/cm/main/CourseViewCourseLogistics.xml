<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="KS-CourseView-CourseLogisticsPage" parent="Uif-Page"
		p:headerText="Course Logistics" p:disclosure.render="false">
		<property name="header">
			<bean parent="Uif-HeaderTwo">
				<property name="cssClasses">
					<list merge="true">
						<value>ks-header</value>
					</list>
				</property>
			</bean>
		</property>
		<property name="items">
			<list>
				<ref bean="KS-CourseView-CourseLogisticsPage-Scheduling-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-DurationCount-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-LearningResults-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-GradesAssessments-Widgets" />
				<ref
					bean="KS-CourseView-CourseLogisticsPage-StudentRegistrationOptions-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-FinalExam-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-Outcome-Widgets" />
				<ref bean="KS-CourseView-CourseLogisticsPage-CourseFormats-Widgets" />
			</list>
		</property>
		<property name="footer">
			<bean parent="Uif-FooterBase">
				<property name="items">
					<list>
						<bean parent="Uif-ActionLink" p:actionLabel="Cancel"
							p:actionScript="stepBrowserBack()" />
					</list>
				</property>
			</bean>
		</property>
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-Scheduling-Widgets"
		parent="Uif-VerticalBoxSection" p:headerText="Scheduling">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.termsOffered"
					p:label="Term">
					<property name="help">
						<bean parent="Uif-Help"
							p:tooltipHelpContent="Selecting a single term will restrict this course to only that term. Any will allow the 
								course to be offered&lt;br&gt;in any term that matches the duration selected below." />
					</property>
					<property name="control">
						<bean parent="Uif-VerticalCheckboxesControl" />
					</property>
					<property name="optionsFinder">
						<bean
							class="org.kuali.student.lum.lu.ui.course.keyvalues.TermsKeyValueFinder" />
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-DurationCount-Widgets"
		parent="Uif-HorizontalBoxSection" p:headerText="Duration Count"
		p:instructionalText="First select the duration type (term, month, week, weekend, day) then select the count of the duration for the course. 
			Most courses will have 1 or 2&lt;br&gt;terms, for example.">
		<property name="items">
			<list>
				<bean id="KS-DurationTypeDropDown" parent="Uif-InputField-LabelTop"
					p:propertyName="courseInfo.duration.atpDurationTypeKey" p:label="Duration Type"
					p:optionsFinderClass="org.kuali.student.lum.lu.ui.course.keyvalues.DurationTypeKeyValueFinder">
					<property name="control">
						<bean parent="Uif-DropdownControl" />
					</property>
				</bean>
				<bean id="KS-DurationTimeQuantity-Field" parent="Uif-InputField-LabelTop"
					p:label="Durantion Count" p:propertyName="courseInfo.duration.timeQuantity">
					<property name="validCharactersConstraint">
						<bean parent="NumericPatternConstraint" />
					</property>
					<property name="maxLength" value="3" />
					<property name="control">
						<bean parent="Uif-TextControl" p:size="3" p:maxLength="3" />
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-LearningResults-Widgets"
		parent="Uif-HorizontalBoxSection" p:headerText="Learning Results">
		<property name="instructionalText"
			value="There are two types of learning results, Grades/Assessments and Credits/Outcomes. You can add multiple options&lt;br&gt;
			for either type, which can be used for multiple course formats, or to account for variations in course offerings." />
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-GradesAssessments-Widgets"
		parent="Uif-VerticalBoxSection" p:headerText="Grades/Assessments">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="courseInfo.gradingOptions"
					p:label="Assessment Scale" p:required="true">
					<property name="control">
						<bean parent="Uif-VerticalCheckboxesControl" />
					</property>
					<property name="optionsFinder">
						<bean
							class="org.kuali.student.lum.lu.ui.course.keyvalues.AssesmentKeyValueFinder" />
					</property>
					<property name="help">
						<bean parent="Uif-Help"
							p:tooltipHelpContent="&lt;b&gt;Letter, Standard Values&lt;b&gt;&lt;br&gt; A,B,C,D,F&lt;br&gt;&lt;br&gt;&lt;b&gt;Satisfactory, unsatisfactory&lt;br&gt;&lt;br&gt;&lt;b&gt;Recital Values&lt;b&gt; >60% pass&lt;br&gt;&lt;br&gt;&lt;b&gt;Recital Review&lt;b&gt;&lt;br&gt;Lorem ipsum description of recital review&lt;br&gt;&lt;br&gt;&lt;b&gt;Design Review&lt;b&gt;&lt;br&gt;Lorem ipsum description of design review&lt;br&gt;&lt;br&gt;&lt;b&gt;Completed Notation&lt;b&gt;&lt;br&gt;complete,incomplete " />
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean
		id="KS-CourseView-CourseLogisticsPage-StudentRegistrationOptions-Widgets"
		parent="Uif-VerticalBoxSection" p:headerText="Student Registration Options">
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="audit"
					p:label="Audit">
					<property name="control">
						<bean parent="Uif-CheckboxControl" p:checkboxLabel="This course can be audited" />
					</property>
				</bean>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="passFail">
					<property name="instructionalText"
						value="This course will have a student selectable pass/fail option" />
					<property name="control">
						<bean parent="Uif-CheckboxControl" p:checkboxLabel="Pass Fail Transcript Grade" />
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="KS-CourseView-CourseLogisticsPage-FinalExam-Widgets"
		parent="Uif-VerticalBoxSection" p:headerText="Final Exam">
		<property name="items">
			<list>
				<!-- p:width="auto" -->
				<bean parent="Uif-InputField-LabelTop" p:propertyName="finalExamStatus"
					p:label="Final Exam Status" p:required="true">
					<property name="control">
						<bean parent="Uif-VerticalRadioControl" />
					</property>
					<property name="optionsFinder">
						<bean
							class="org.kuali.student.lum.lu.ui.course.keyvalues.FinalExamKeyValueFinder" />
					</property>
				</bean>
				<bean id="KS-FinalExamRationale" parent="Uif-InputField-LabelTop"
					p:label="Final Exam Rationale"
					p:progressiveRender="#dp.finalExamStatus eq 'NONE' and #dp.finalExamStatus eq 'ALTERNATE'"
					p:propertyName="finalExamRationale">
					<property name="control">
						<bean parent="Uif-LargeTextAreaControl" p:maxLength="255"
							p:width="400"
							p:onDocumentReadyScript="jQuery('#KS-FinalExamRationale_control').jqEasyCounter({'maxChars': 255, 'maxCharsWarning': 220, 'msgTextAlign': 'left'});" />
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-Outcome-Widgets"
		parent="Uif-StackedCollectionSection" p:headerText="Outcome"
		p:propertyName="creditOptionsDisplay"
		p:collectionObjectClass="org.kuali.student.cm.course.form.ResultValuesGroupInfoDisplay">
		<property name="layoutManager.summaryTitle" value="Outcome" />
		<property name="renderAddBlankLineButton" value="true" />
		<property name="addLinePlacement" value="BOTTOM" />
		<property name="addBlankLineAction.actionLabel" value="Add Another Outcome" />
		<property name="items">
			<list>
				<bean parent="Uif-InputField-LabelTop" p:propertyName="typeKey"
					p:label="Type">
					<property name="control">
						<bean parent="Uif-DropdownControl">
							<property name="options">
								<list>
									<bean parent="Uif-KeyLabelPair" p:key="1" p:value="" />
									<bean parent="Uif-KeyLabelPair" p:key="kuali.result.values.group.type.fixed"
										p:value="Fixed" />
									<bean parent="Uif-KeyLabelPair" p:key="kuali.result.values.group.type.multiple"
										p:value="Multiple" />
									<bean parent="Uif-KeyLabelPair" p:key="kuali.result.values.group.type.range"
										p:value="Range" />
								</list>
							</property>
						</bean>
					</property>
				</bean>
				<bean parent="Uif-InputField-LabelTop"
					p:progressiveRender="#lp.typeKey eq 'kuali.result.values.group.type.fixed'"
					p:label="Credit Value" p:propertyName="resultValueRange.minValue" />
				<bean parent="Uif-InputField-LabelTop"
					p:progressiveRender="#lp.typeKey eq 'kuali.result.values.group.type.range'"
					p:label="Minimum Credit Value" p:propertyName="resultValueRange.minValue" />
				<bean parent="Uif-InputField-LabelTop"
					p:progressiveRender="#lp.typeKey eq 'kuali.result.values.group.type.range'"
					p:label="Maximum Credit Value" p:propertyName="resultValueRange.maxValue" />
			</list>
		</property>
		<property name="subCollections">
			<list>
				<bean parent="Uif-StackedCollectionSubSection"
					p:collectionObjectClass="org.kuali.student.cm.course.form.ResultValueKeysDisplay"
					p:progressiveRender="#lp.typeKey eq 'kuali.result.values.group.type.multiple'"
					p:propertyName="resultValueKeysDisplay">
					<property name="renderAddBlankLineButton" value="true" />
					<property name="addLinePlacement" value="BOTTOM" />
					<property name="addBlankLineAction.actionLabel" value="Add" />
					<property name="items">
						<list>
							<bean parent="Uif-InputField-LabelTop" p:label="Credit Value"
								p:propertyName="creditValueDisplay" />
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean id="KS-CourseView-CourseLogisticsPage-CourseFormats-Widgets"
		parent="Uif-StackedCollectionSection" p:headerText="Course Format(s)"
		p:propertyName="courseInfo.formats" p:collectionObjectClass="org.kuali.student.r2.lum.course.dto.FormatInfo">
		<property name="layoutManager.summaryTitle" value="Activity" />
		<!-- <property name="renderAddBlankLineButton" value="true" /> -->
		<property name="addLinePlacement" value="BOTTOM" />
		<property name="addBlankLineAction.actionLabel" value="Add Another Outcome" />
		<property name="subCollections">
			<list>
				<bean parent="Uif-StackedSubCollection-WithinSection"
					p:collectionObjectClass="org.kuali.student.r2.lum.course.dto.ActivityInfo"
					p:propertyName="activities">
					<!-- <property name="renderAddBlankLineButton" value="true" /> -->
					<property name="addLinePlacement" value="BOTTOM" />
					<property name="addBlankLineAction.actionLabel" value="Add" />

					<property name="items">
						<list>
							<bean parent="Uif-InputField-LabelTop" p:propertyName="typeKey"
								p:required="true" p:label="Activity Type"
								p:optionsFinderClass="org.kuali.student.lum.lu.ui.course.keyvalues.ActivityTypeKeyValueFinder">
								<property name="control">
									<bean parent="Uif-DropdownControl" />
								</property>
							</bean>
							<bean parent="Uif-InputField-LabelTop" p:label="Contacted Hours"
								p:propertyName="contactHours.unitQuantity">
								<property name="validCharactersConstraint">
									<bean parent="NumericPatternConstraint" />
								</property>
								<property name="maxLength" value="9" />
								<property name="control">
									<bean parent="Uif-TextControl" p:size="9" />
								</property>
								<property name="help">
									<bean parent="Uif-Help"
										p:tooltipHelpContent="Sum of contact hours will validate with&lt;br&gt;credits(from learning results)" />
								</property>
							</bean>
							<bean parent="Uif-InputField-LabelTop" p:propertyName="contactHours.unitTypeKey"
								p:label="Frequency"
								p:optionsFinderClass="org.kuali.student.lum.lu.ui.course.keyvalues.FrequencyKeyValueFinder">
								<property name="control">
									<bean parent="Uif-DropdownControl" />
								</property>
							</bean>
							<bean parent="KS-DurationTypeDropDown" p:propertyName="duration.atpDurationTypeKey">
								<property name="help">
									<bean parent="Uif-Help"
										p:tooltipHelpContent="First select the duration type(term,month,week,weekend,day)&lt;br&gt;then select the count of the duration for the course.&lt;br&gt;Most courses will have 1 or 2 terms,&lt;br&gt;for example" />
								</property>
							</bean>
							<bean parent="KS-DurationTimeQuantity-Field" p:propertyName="duration.timeQuantity" />
							<bean parent="Uif-InputField-LabelTop" p:label="Anticipated Class Size"
								p:propertyName="defaultEnrollmentEstimate">
								<property name="validCharactersConstraint">
									<bean parent="NumericPatternConstraint" />
								</property>
								<property name="maxLength" value="3" />
								<property name="control">
									<bean parent="Uif-TextControl" p:size="3" p:maxLength="3" />
								</property>
								<property name="help">
									<bean parent="Uif-Help"
										p:tooltipHelpContent="This does not have to be exact - it will be used&lt;br&gt;as an estimate for evaluation purposes only." />
								</property>
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>