<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 
         Controller Class: CourseController.java 
         View Helper Class: CourseViewHelperServiceImpl.java 
         UX : http://ux.ks.kuali.org.s3.amazonaws.com/wireframes/ENR/Scheduling_Interface/v3/start.html 
         This view has couple of pages (edit and copy) with all the beans defined 
         at 
         1. CourseViewCourseInfoPage.xml 
    -->

	<bean id="KS-CourseView" parent="KSFormView">
		<property name="id" value="courseView" />
		<property name="viewName" value="courseView" />
		<property name="headerText" value="Course View" />
		<property name="header.render" value="false" />
		<property name="entryPageId" value="KS-CourseView-CourseInfoPage" />
		<property name="navigation">
			<ref bean="KS-CourseNavigation-Menu" />
		</property>
		<property name="formClass" value="org.kuali.student.cm.course.form.CourseForm" />
		<property name="viewHelperServiceClass" value="org.kuali.student.cm.course.service.impl.CourseViewHelperServiceImpl" />
		<property name="footer">
			<bean parent="Uif-FooterBase" />
		</property>
		<!--Still need to be created and linked. -->
		<property name="items">
			<list>
				<ref bean="KS-CourseView-CourseInfoPage" />
				<ref bean="KS-CourseView-GovernancePage" />
				<ref bean="KS-CourseView-CourseLogisticsPage" />
				<ref bean="KS-CourseView-LearningObjectivesPage" />
              	<ref bean="KS-CourseView-CourseRequisitesPage" />
              	<ref bean="KS-CourseView-ActiveDatesPage" />
              	<ref bean="KS-CourseView-FinancialsPage" />
              	<ref bean="KS-CourseView-AuthorsAndCollaboratorsPage" />
              	<ref bean="KS-CourseView-SupportingDocumentsPage" />
              	<ref bean="KS-CourseView-ReviewProposalPage" />
            </list>
		</property>
		
		
		<!-- <property name="additionalCssFiles"> -->
		<!-- <list merge="true"> -->
		<!-- <value>ks-enroll/css/calendar.css</value> -->
		<!-- <value>ks-enroll/css/acal.css</value> -->
		<!-- </list> -->
		<!-- </property> -->
		<property name="additionalScriptFiles">
			<list merge="true">
				<value>ks-cm-krad/scripts/jquery.jqEasyCharCounter.custom.js</value>
			</list>
		</property>
	</bean>
	
	<bean id="KS-CourseNavigation-Menu" parent="Uif-MenuNavigationGroup">
		<property name="items">
			<list>
				<bean parent="Uif-HeaderTwo" p:headerText="Course Sections"/>
				<bean id="KS-CourseViewCourseInfo-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-CourseInfoPage"
					p:actionLabel="Course Information">
                </bean>
				<bean id="KS-CourseViewGovernance-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-GovernancePage"
              		p:actionLabel="Governance">
                  <!--
                  <property name="template" value="/cm/WEB-INF/jsp/templates/field/navigationActionLink.jsp"/>
                  -->
                </bean>
              	<bean id="KS-CourseViewCourseLogistics-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-CourseLogisticsPage"
              		p:actionLabel="Course Logistics"/>
              	<bean id="KS-CourseViewLearningObjectives-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-LearningObjectivesPage"
              		p:actionLabel="Learning Objectives"/>
              	<bean id="KS-CourseViewCourseRequisites-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-CourseRequisitesPage"
              		p:actionLabel="Course Requisites"/>
              	<bean id="KS-CourseViewActiveDates-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-ActiveDatesPage"
              		p:actionLabel="Active Dates"/>
              	<bean id="KS-CourseViewFinancials-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-FinancialsPage"
              		p:actionLabel="Financials"/>
              	<bean id="KS-CourseViewAuthorsAndCollaborators-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-AuthorsAndCollaboratorsPage"
              		p:actionLabel="Authors &amp; Collaborators"/>
              	<bean id="KS-CourseViewSupportingDocuments-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-SupportingDocumentsPage"
              		p:actionLabel="Supporting Documents"/>
              	<bean id="KS-CourseViewReviewProposal-ActionLink" parent="Uif-NavigationActionLink" p:navigateToPageId="KS-CourseView-ReviewProposalPage"
              		p:actionLabel="Review Proposal"/>
			</list>
		</property>
	</bean>

</beans>